<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<template name="tune" element="pages" type="acquisition" >
  <group size="630 190"
    style="Heading1"
    label="Probe tune"
    bg=""
    border="None"
    side="Top"
    justify="Left"
    tab="yes"
    enable="no"
    reference="tune"
    useref="no"
    subtype="Untitled"
    expanded="yes"
    >
    <filemenu loc="120 40" size="80 20"
      style="PlainText"
      label="Center Frequency"
      vq="tchan"
      vc="mtune('setnuc','$VALUE' )"
      set="mtune('getnuc'):$VALUE"
      file="$VALUE=userdir+'/persistence/mtune_nuc'"
      type="file"
      bg=""
      editable="No"
      statshow="yes"
      elastic="no"
      display="yes"
      />
    <button loc="480 140" size="130 40"
      style="Heading2"
      label="Quit"
      vc="mtune('quit')"
      bg=""
      decor1=""
      />
    <button loc="480 40" size="130 40"
      style="Heading2"
      label="Start Probe Tune"
      vc="mtune('start')"
      bg=""
      decor1=""
      />
    <button loc="480 90" size="130 40"
      style="Heading2"
      label="Stop Probe Tune"
      vc="aa('Tuning Complete') acqmode=''"
      bg=""
      decor1=""
      />
    <label loc="10 160" size="100 20"
      style="Label1"
      label="Vertical position"
      justify="Left"
      />
    <button loc="210 140" size="80 20"
      style="Heading2"
      label="Autoscale"
      vc="vsadj mtune('disp')"
      bg=""
      decor1=""
      />
    <entry loc="210 40" size="80 20"
      style="PlainText"
      vq="tchan tn dn dn2 dn3 dn4"
      vc="mtune('setnuc','$VALUE' )"
      set="mtune('getnuc'):$VALUE"
      digits="0"
      disable="Grayed out"
      />
    <label loc="420 40" size="40 20"
      style="Label1"
      label="MHz"
      justify="Left"
      />
    <label loc="420 60" size="40 20"
      style="Label1"
      label="MHz"
      justify="Left"
      />
    <entry loc="360 40" size="60 20"
      style="PlainText"
      vq="tchan sfrq dfrq dfrq2 dfrq3 dfrq4"
      vc="mtune('setfreq',$VALUE)"
      set="mtune('getfreq'):$VALUE"
      digits="2"
      disable="Grayed out"
      />
    <entry loc="360 60" size="60 20"
      style="PlainText"
      vq="tunesw"
      vc="tunesw=$VALUE*1e6 setvalue('tunesw',tunesw,'processed'):$e halt('  ')"
      set="$VALUE=tunesw*1e-6"
      digits="1"
      disable="Grayed out"
      />
    <entry loc="360 90" size="60 20"
      style="PlainText"
      vq="tupwr"
      vc="tupwr=$VALUE setvalue('tupwr',tupwr,'processed'):$e halt('  ')"
      set="$VALUE=tupwr"
      digits="0"
      disable="Grayed out"
      />
    <entry loc="360 110" size="60 20"
      style="PlainText"
      vq="tugain"
      vc="tugain=$VALUE gain=tugain setvalue('gain',gain,'processed') halt('  ')"
      set="$VALUE=tugain"
      digits="0"
      disable="Grayed out"
      />
    <label loc="310 40" size="50 20"
      style="Label1"
      label="Freq"
      justify="Left"
      />
    <label loc="310 60" size="50 20"
      style="Label1"
      label="Span"
      justify="Left"
      />
    <label loc="310 90" size="50 20"
      style="Label1"
      label="Power"
      justify="Left"
      />
    <label loc="310 110" size="50 20"
      style="Label1"
      label="Gain"
      justify="Left"
      />
    <menu loc="360 140" size="80 20"
      style="PlainText"
      label="# Points"
      vc="np=$VALUE if (acqmode='mtune') then setvalue('np',np,'processed') halt('  ') endif"
      set="$VALUE=np"
      bg=""
      editable="No"
      >
      <mlabel 
        label="512"
        chval="512"
        />
      <mlabel 
        label="1024"
        chval="1024"
        />
      <mlabel 
        label="2048"
        chval="2048"
        />
    </menu>
    <label loc="310 140" size="50 20"
      style="Label1"
      label="# Points"
      justify="Left"
      />
    <button loc="160 160" size="40 20"
      style="Heading2"
      label="-20"
      vc="vp=vp-20 mtune('disp')"
      bg=""
      decor1=""
      />
    <button loc="120 160" size="40 20"
      style="Heading2"
      label="+20"
      vc="vp=vp+20 mtune('disp')"
      bg=""
      decor1=""
      />
    <button loc="160 140" size="40 20"
      style="Heading2"
      label="/2"
      vc="vs=vs/2 mtune('disp')"
      bg=""
      decor1=""
      />
    <label loc="10 140" size="100 20"
      style="Label1"
      label="Vertical scale"
      justify="Left"
      />
    <button loc="120 140" size="40 20"
      style="Heading2"
      label="*2"
      vc="vs=vs*2 mtune('disp')"
      bg=""
      decor1=""
      />
    <label loc="420 90" size="40 20"
      style="Label1"
      label="dB"
      justify="Left"
      />
    <label loc="420 110" size="40 20"
      style="Label1"
      label="dB"
      justify="Left"
      />
    <menu loc="120 10" size="40 20"
      style="PlainText"
      vq="tchan"
      vc="tchan=$VALUE"
      set="$VALUE=tchan"
      bg=""
      editable="No"
      >
      <mlabel 
        label="1"
        chval="1"
        />
      <mlabel 
        label="2"
        chval="2"
        />
      <mlabel 
        label="3"
        chval="3"
        />
      <mlabel 
        label="4"
        chval="4"
        />
      <mlabel 
        label="5"
        chval="5"
        />
    </menu>
    <filemenu loc="120 70" size="80 20"
      style="PlainText"
      label="Marker 1"
      vq="tchan marker1"
      vc="mtune('setmarker1','$VALUE' )"
      set="$VALUE=marker1"
      file="$VALUE=userdir+'/persistence/mtune_nuc'"
      type="file"
      bg=""
      editable="No"
      statshow="yes"
      elastic="no"
      display="yes"
      />
    <filemenu loc="120 90" size="80 20"
      style="PlainText"
      label="Marker 2"
      vq="tchan marker2"
      vc="mtune('setmarker2','$VALUE' )"
      set="$VALUE=marker2"
      file="$VALUE=userdir+'/persistence/mtune_nuc'"
      type="file"
      bg=""
      editable="No"
      statshow="yes"
      elastic="no"
      display="yes"
      />
    <button loc="120 110" size="170 20"
      style="Heading2"
      label="Center frequency to markers"
      vc="vsadj mtune('betweenmarkers')"
      bg=""
      decor1=""
      />
    <label loc="10 90" size="100 20"
      style="Label1"
      label="Choose Marker 2"
      justify="Left"
      />
    <label loc="10 70" size="100 20"
      style="Label1"
      label="Choose Marker 1"
      justify="Left"
      />
    <label loc="10 40" size="110 20"
      style="Label1"
      label="Center Frequency"
      />
    <label loc="10 10" size="110 20"
      style="Label1"
      label="Tune RF channel"
      />
  </group>
</template>
