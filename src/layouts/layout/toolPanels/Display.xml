<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<template element="panels" type="acquisition" >
  <group loc="0 0" size="305 490"
    style="Heading1"
    label="Display"
    bg="transparent"
    border="None"
    side="Top"
    justify="Left"
    tab="yes"
    enable="no"
    reference="Display2"
    useref="no"
    subtype="Untitled"
    expanded="yes"
    rows="1"
    columns="1"
    >
    <group loc="5 410" size="300 75"
      style="Heading1"
      label="Misc"
      bg="transparent"
      border="Etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      reference="Display"
      useref="no"
      subtype="Major"
      expanded="yes"
      rows="1"
      columns="1"
      >
      <check loc="155 40" size="140 20"
        style="Label1"
        label="Show frame border"
        vq="mfShowPlotterbox"
        vc="mfShowPlotterbox=1 vnmrjcmd('canvas','frameBox',1)"
        vc2="mfShowPlotterbox=0 vnmrjcmd('canvas','frameBox',0)"
        set="$VALUE=mfShowPlotterbox"
        />
      <check loc="155 20" size="110 20"
        style="Label1"
        label="Show axis"
        vq="mfShowAxis"
        vc="mfShowAxis=1 repaint"
        vc2="mfShowAxis=0 repaint"
        set="$VALUE=mfShowAxis"
        />
      <check loc="10 20" size="110 20"
        style="Label1"
        label="Show fields"
        vq="mfShowFields"
        vc="mfShowFields=1 repaint"
        vc2="mfShowFields=0 repaint"
        set="$VALUE=mfShowFields"
        />
      <check loc="10 40" size="110 20"
        style="Label1"
        label="Show crosshair"
        vq="crosshair"
        vc="crosshair=1"
        vc2="crosshair=0"
        set="$VALUE=crosshair"
        />
    </group>
    <group loc="5 320" size="300 85"
      style="Heading1"
      label="Graphics"
      bg="transparent"
      border="Etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      reference="Show"
      useref="no"
      subtype="Major"
      expanded="yes"
      rows="1"
      columns="1"
      >
      <button loc="155 51" size="135 25"
        style="Heading2"
        label="Remove all"
        vc="imagefile('clear')"
        bg="transparent"
        decor1="no"
        tooltip="Remove All Molecules and Images"
        halignment="Center"
        valignment="Center"
        />
      <button loc="10 51" size="135 25"
        style="Heading2"
        label="Set logo"
        vc="plotlogo('setup') vnmrjcmd('popup', 'mode:modal', 'file:Plotlogo.xml', 'title:Choose Plot Logo')"
        bg="transparent"
        decor1="no"
        tooltip="Set Agilent or customer logo"
        halignment="Center"
        valignment="Center"
        />
      <button loc="10 26" size="135 25"
        style="Heading2"
        label="Get logo"
        vc="plotlogo('get')"
        bg="transparent"
        decor1="no"
        tooltip="Show Agilent or customer logo"
        halignment="Center"
        valignment="Center"
        />
      <button loc="155 26" size="135 25"
        style="Heading2"
        label="Show all"
        vc="imagefile('displayall')"
        bg="transparent"
        decor1="no"
        tooltip="Show All Molecules and Images"
        halignment="Center"
        valignment="Center"
        />
    </group>
    <group loc="5 120" size="300 195"
      style="Heading1"
      label="Text"
      bg="transparent"
      border="Etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      reference="Show"
      useref="no"
      subtype="Major"
      expanded="yes"
      rows="1"
      columns="1"
      >
      <button loc="10 25" size="135 25"
        style="Heading2"
        label="New/Edit"
        vc="vnmrjcmd('canvas', 'textBox', 'edit')"
        bg="transparent"
        decor1="yes"
        tooltip="Open text editor"
        halignment="Center"
        valignment="Center"
        />
      <button loc="170 160" size="120 25"
        style="Heading2"
        label="Delete template"
        vc="vnmrjcmd('canvas', 'textBox', 'deletetemplate', mfTextLayout)"
        bg="transparent"
        decor1="no"
        tooltip="Delete current template and remove it frame the menu"
        halignment="Center"
        valignment="Center"
        />
      <button loc="50 160" size="120 25"
        style="Heading2"
        label="Save template"
        vc="vnmrjcmd('canvas', 'textBox', 'savetemplate', mfTextLayout)"
        bg="transparent"
        decor1="no"
        tooltip="Save text layout as a template"
        halignment="Center"
        valignment="Center"
        />
      <label loc="10 135" size="40 20"
        style="Label1"
        label="Name"
        />
      <entry loc="50 135" size="240 20"
        style="PlainText"
        vq="mfTextLayout"
        vc="mfTextLayout='$VALUE'"
        set="$VALUE=mfTextLayout"
        />
      <filemenu loc="10 105" size="280 20"
        style="PlainText"
        vq="mfTextLayout"
        vc="mfTextLayout='$VALUE' if(mfTextLayout='Comment') then textframe elseif(mfTextLayout='BasicParams') then ppaframe elseif(mfTextLayout='AllParams') then papframe endif vnmrjcmd('canvas', 'textBox', 'opentemplate', mfTextLayout)"
        set="$VALUE=mfTextLayout"
        file="$VALUE='TEXTBOX/templates/'"
        type="directory"
        bg="VJBackground"
        editable="No"
        vq2="mfTextLayout"
        statshow="yes"
        elastic="no"
        display="yes"
        />
      <button loc="155 25" size="135 25"
        style="Heading2"
        label="Remove selection"
        vc="vnmrjcmd('canvas', 'textBox', 'delete')"
        bg="transparent"
        decor1="yes"
        tooltip="Remove selected text frame"
        halignment="Center"
        valignment="Center"
        />
      <button loc="155 50" size="135 25"
        style="Heading2"
        label="Remove all"
        vc="vnmrjcmd('canvas', 'textBox', 'deleteall')"
        bg="transparent"
        decor1="yes"
        tooltip="Remove all text frames"
        halignment="Center"
        valignment="Center"
        />
      <button loc="80 50" size="65 25"
        style="Heading2"
        label="Hide"
        vc="vnmrjcmd('canvas', 'textBox', 'hideall')"
        bg="transparent"
        decor1="no"
        tooltip="Hide all text frames"
        halignment="Center"
        valignment="Center"
        />
      <button loc="10 50" size="70 25"
        style="Heading2"
        label="Show"
        vc="vnmrjcmd('canvas', 'textBox', 'showall')"
        bg="transparent"
        decor1="no"
        tooltip="Show all text frames"
        halignment="Center"
        valignment="Center"
        />
      <label loc="10 80" size="100 20"
        style="Label1"
        label="Select template"
        />
    </group>
    <group loc="5 10" size="300 105"
      style="Heading1"
      label="Inset"
      bg="transparent"
      border="Etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      reference="Display"
      useref="no"
      subtype="Major"
      expanded="yes"
      rows="1"
      columns="1"
      >
      <button loc="85 35" size="30 30"
        style="Label2"
        vq="buttonMode"
        vc="setButtonMode(4)"
        bg="transparent"
        decor1="no"
        icon="Copy_24"
        tooltip="Drag mouse to create spectrum inset"
        halignment="Center"
        valignment="Center"
        />
      <button loc="155 20" size="135 25"
        style="Heading2"
        label="Reset frame"
        vc="mfaction('fullsize', 1)"
        bg="transparent"
        decor1="yes"
        tooltip="Restore default frame to full size"
        halignment="Center"
        valignment="Center"
        />
      <button loc="155 45" size="135 25"
        style="Heading2"
        label="Remove selection"
        vc="mfaction('deleteInset')"
        bg="transparent"
        decor1="yes"
        tooltip="Remove selected inset"
        halignment="Center"
        valignment="Center"
        />
      <button loc="155 70" size="135 25"
        style="Heading2"
        label="Remove all"
        vc="mfaction('deleteAll')"
        bg="transparent"
        decor1="yes"
        tooltip="Remove all frames"
        halignment="Center"
        valignment="Center"
        />
      <button loc="30 35" size="30 30"
        style="PlainText"
        vq="buttonMode"
        vc="setButtonMode(-1)"
        bg="transparent"
        decor1="no"
        icon="aipselect"
        tooltip="Default mode"
        halignment="Center"
        valignment="Center"
        />
    </group>
  </group>
</template>
