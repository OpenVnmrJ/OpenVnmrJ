<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<template name="Plot1D" element="pages" type="processing" >
  <group size="776 275"
    style="Heading1"
    label="Plot"
    vq="personaType"
    show="$S=1 PersonaManager('showInPanel','process','plot1d'):$S $SHOW=$S"
    border="None"
    side="Top"
    justify="Left"
    tab="yes"
    enable="no"
    reference="Plot1D"
    useref="no"
    subtype="Untitled"
    expanded="yes"
    rows="1"
    columns="1"
    >
    <button loc="580 165" size="90 25"
      style="Heading2"
      label="Preview"
      vq="layout plotoption"
      vc="doplotoption pageview"
      show="array2array(plotoption):$pl if $pl&lt;&gt;'' then $ENABLE=1 else $ENABLE=-1 endif"
      bg="transparent"
      decor1="yes"
      halignment="Center"
      valignment="Center"
      />
    <button loc="670 165" size="90 25"
      style="Heading2"
      label="Print"
      vq="layout plotoption"
      vc="doplotoption page"
      show="array2array(plotoption):$pl if $pl&lt;&gt;'' then $ENABLE=1 else $ENABLE=-1 endif"
      bg="transparent"
      decor1="yes"
      halignment="Center"
      valignment="Center"
      />
    <group loc="575 5" size="190 150"
      style="Heading1"
      label="Send to"
      border="Etched"
      tab="no"
      enable="no"
      reference="Sendto"
      useref="no"
      subtype="Titled"
      expanded="yes"
      rows="1"
      columns="1"
      >
      <filemenu loc="10 20" size="170 20"
        style="PlainText"
        vq="plotter sysplotter"
        vc="mkpar('string','sysplotter','') setgroup('sysplotter','display') sysplotter=plotter plotter='$VALUE'"
        set="$VALUE=plotter"
        file="$VALUE=userdir+'/persistence/plotters'"
        type="file"
        bg="VJBackground"
        editable="No"
        vq2="plotter"
        statshow="yes"
        elastic="no"
        display="yes"
        />
      <label loc="13 45" size="75 20"
        style="Label1"
        label="Hz per mm:"
        />
      <textmessage loc="93 45" size="60 20"
        style="Info"
        label="15.4"
        vq="hzmm"
        set="$VALUE=hzmm"
        digits="1"
        />
      <radio loc="10 120" size="150 20"
        style="PlainText"
        label="Print double-sided"
        vq="plduplex"
        vc="plduplex=1"
        set="$VALUE=(plduplex=1)"
        show="exists('plduplex','parameter','global'):$ENABLE"
        />
      <radio loc="10 95" size="105 20"
        style="PlainText"
        label="Print 2 pages"
        vq="plduplex"
        vc="plduplex=0"
        set="$VALUE=(plduplex=0)"
        show="exists('plduplex','parameter','global'):$ENABLE"
        />
      <radio loc="10 70" size="105 20"
        style="PlainText"
        label="Print 1 page"
        vq="plduplex"
        vc="plduplex=2"
        set="$VALUE=(plduplex=2)"
        show="exists('plduplex','parameter','global'):$ENABLE"
        />
    </group>
    <group loc="295 5" size="270 255"
      style="Heading1"
      label="Lists"
      border="Etched"
      tab="no"
      enable="no"
      reference="Tables"
      useref="no"
      subtype="Titled"
      expanded="yes"
      rows="1"
      columns="1"
      >
      <group loc="12 152" size="250 65"
        style="Heading1"
        label="Peak positions"
        border="Etched"
        tab="no"
        enable="no"
        reference="Integralvalues"
        useref="no"
        subtype="Titled"
        expanded="yes"
        rows="1"
        columns="1"
        >
        <radio loc="110 36" size="40 20"
          style="PlainText"
          label="Hz"
          vq="dllcmd"
          vc="dllcmd=`$axis=axis axis='h' dll axis=$axis` "
          set="if (dllcmd=`$axis=axis axis='h' dll axis=$axis`) then $VALUE=1 else $VALUE=0 endif"
          />
        <radio loc="32 36" size="52 20"
          style="PlainText"
          label="ppm"
          vq="dllcmd"
          vc="dllcmd=`$axis=axis axis='p' dll axis=$axis`"
          set="if (dllcmd=`$axis=axis axis='p' dll axis=$axis`) then $VALUE=1 else $VALUE=0 endif"
          />
        <check loc="15 18" size="75 20"
          style="PlainText"
          label="Peak list"
          vq="layout plotoption"
          vc="plotoption('add','linelist')"
          vc2="plotoption('remove','linelist')"
          set="teststr('plotoption','linelist'):$VALUE"
          />
      </group>
      <group loc="10 75" size="250 70"
        style="Heading1"
        label="Integral values"
        border="Etched"
        tab="no"
        enable="no"
        reference="Integralvalues"
        useref="no"
        subtype="Titled"
        expanded="yes"
        rows="1"
        columns="1"
        >
        <check loc="15 20" size="135 20"
          style="PlainText"
          label="Integral list"
          vq="layout plotoption"
          vc="plotoption('add','intlist')"
          vc2="plotoption('remove','intlist')"
          set="teststr('plotoption','intlist'):$VALUE"
          />
        <radio loc="110 40" size="100 20"
          style="PlainText"
          label="Normalized"
          vq="intstyle"
          vc="insref='n' ds('again')"
          set="off('insref'):$VALUE"
          />
        <radio loc="35 40" size="70 20"
          style="PlainText"
          label="Scaled"
          vq="intstyle"
          vc="insref='y' ds('again')"
          set="on('insref'):$VALUE"
          />
      </group>
      <check loc="150 220" size="80 20"
        style="PlainText"
        label="Miniplots"
        vq="layout plotoption"
        vc="plotoption('add','miniplot')"
        vc2="plotoption('remove','miniplot')"
        set="teststr('plotoption','miniplot'):$VALUE"
        />
      <check loc="10 220" size="90 20"
        style="PlainText"
        label="Comments"
        vq="layout plotoption"
        vc="plotoption('add','comments')"
        vc2="plotoption('remove','comments')"
        set="teststr('plotoption','comments'):$VALUE"
        />
      <group loc="10 20" size="250 50"
        style="Heading1"
        label="Parameters"
        border="Etched"
        tab="no"
        enable="no"
        useref="no"
        subtype="Titled"
        rows="1"
        columns="1"
        >
        <radio loc="190 20" size="55 20"
          style="PlainText"
          label="None"
          vq="layout plotoption"
          vc="plotoption('remove','header') plotoption('remove','params')"
          set="teststr('plotoption','header'):$h teststr('plotoption','params'):$p if ($h and $p) then $VALUE=0 else $VALUE=1 endif"
          />
        <radio loc="110 20" size="45 20"
          style="PlainText"
          label="All"
          vq="layout plotoption"
          vc="plotoption('add','header') plotoption('add','params')"
          set="teststr('plotoption','header'):$h teststr('plotoption','params'):$p if ($h and $p) then $VALUE=1 else $VALUE=0 endif"
          />
        <radio loc="15 20" size="60 20"
          style="PlainText"
          label="Basic"
          vq="layout plotoption"
          vc="plotoption('add','header') plotoption('remove','params')"
          set="teststr('plotoption','header'):$h teststr('plotoption','params'):$p if ($h and not $p) then $VALUE=1 else $VALUE=0 endif"
          />
      </group>
    </group>
    <group loc="5 5" size="280 255"
      style="Heading1"
      label="Spectral graphics"
      border="Etched"
      tab="no"
      enable="no"
      reference="Graphics"
      useref="no"
      subtype="Titled"
      expanded="yes"
      rows="1"
      columns="1"
      >
      <group loc="10 20" size="250 50"
        style="Heading1"
        label="Spectrum"
        border="Etched"
        tab="no"
        enable="no"
        useref="no"
        subtype="Titled"
        rows="1"
        columns="1"
        >
        <check loc="90 20" size="90 20"
          style="PlainText"
          label="Full array"
          vq="layout plotoption arraydim"
          vc="plotoption('add','plarray') plotoption('remove','pl')"
          vc2="plotoption('remove','plarray')"
          set="teststr('plotoption','plarray'):$VALUE"
          show="if (arraydim&gt;1) then $ENABLE=1 else $ENABLE=-1 endif"
          />
        <check loc="190 20" size="45 20"
          style="PlainText"
          label="FID"
          vq="layout plotoption"
          vc="plotoption('add','plfid')"
          vc2="plotoption('remove','plfid')"
          set="teststr('plotoption','plfid'):$VALUE"
          />
        <check loc="15 20" size="70 20"
          style="PlainText"
          label="Current"
          vq="layout plotoption"
          vc="plotoption('add','pl') plotoption('remove','plarray')"
          vc2="plotoption('remove','pl')"
          set="teststr('plotoption','pl'):$VALUE"
          />
      </group>
      <group loc="10 75" size="250 45"
        style="Heading1"
        label="Logo"
        border="Etched"
        tab="no"
        enable="no"
        reference="Integralvalues"
        useref="no"
        subtype="Titled"
        expanded="yes"
        rows="1"
        columns="1"
        >
        <radio loc="15 15" size="60 20"
          style="PlainText"
          label="None"
          vq="plotoption layout plotlogo"
          vc="plotlogo='' plotoption('remove','logo')"
          set="teststr('plotoption','logo'):$logo if (plotlogo='' or $logo&lt;0.5)  then $VALUE=1 else $VALUE=0 endif"
          />
        <radio loc="80 15" size="75 25"
          style="PlainText"
          label="Custom"
          vq="plotlogo layout plotoption"
          vc="plotoption('add','logo')"
          set="teststr('plotoption','logo'):$logo if (plotlogo&lt;&gt;'' and $logo&gt;0.5) then $VALUE=1 else $VALUE=0 endif"
          />
        <button loc="150 15" size="80 25"
          style="Heading2"
          label="Browse..."
          vq="pllogo"
          vc="plotlogo('setup') vnmrjcmd('popup', 'mode:modal', 'file:Plotlogo.xml', 'title:Plot Logo')"
          bg="transparent"
          decor1="yes"
          halignment="Center"
          valignment="Center"
          />
      </group>
      <group loc="180 185" size="95 20"
        border="None"
        tab="no"
        enable="no"
        useref="no"
        subtype="Untitled"
        rows="1"
        columns="1"
        >
        <radio loc="5 0" size="55 20"
          style="PlainText"
          label="ppm"
          vq="axis"
          vc="axis='p' ds('again')"
          set="if axis='p' then $VALUE=1 else $VALUE=0 endif"
          />
        <radio loc="55 0" size="40 20"
          style="PlainText"
          label="Hz"
          vq="axis"
          vc="axis='h' ds('again')"
          set="if axis='h' then $VALUE=1 else $VALUE=0 endif"
          />
      </group>
      <menu loc="180 145" size="90 20"
        style="PlainText"
        label="Peak Pick"
        vq="pkpick"
        vc="$pkpick='$VALUE' if ($pkpick='none') then pkpick='' plotoption('remove','pklabels') dpf('turnoff') ds('again') else pkpick=$pkpick plotoption('add','pklabels') showmanual('1d','peak','refresh') endif"
        set="if pkpick='' then $VALUE='none' else $VALUE=pkpick endif"
        editable="No"
        >
        <mlabel 
          label="Hz"
          chval="ppf(`axish`)"
          />
        <mlabel 
          label="ppm"
          chval="ppf(`axisp`)"
          />
        <mlabel 
          label="Hz,  top"
          chval="ppf(`axish`,`top`)"
          />
        <mlabel 
          label="ppm, top"
          chval="ppf(`axisp`,`top`)"
          />
        <mlabel 
          label="Default"
          chval="ppf"
          />
        <mlabel 
          label="None"
          chval="none"
          />
      </menu>
      <check loc="180 205" size="80 20"
        style="PlainText"
        label="Molecule"
        vq="layout plotoption"
        vc="plotoption('add','molecule')"
        vc2="plotoption('remove','molecule')"
        set="teststr('plotoption','molecule'):$VALUE"
        />
      <group loc="5 185" size="170 20"
        border="None"
        tab="no"
        enable="no"
        useref="no"
        subtype="Untitled"
        rows="1"
        columns="1"
        >
        <radio loc="75 0" size="90 20"
          style="PlainText"
          label="Normalized"
          vq="intstyle"
          vc="intstyle='pirN' insref='n' teststr('plotoption','intval'):$on if ($on) then dpir endif"
          set="on('insref'):$VALUE"
          />
        <radio loc="10 0" size="60 20"
          style="PlainText"
          label="Scaled"
          vq="intstyle"
          vc="intstyle='pir' insref='y' teststr('plotoption','intval'):$on if ($on) then dpir endif"
          set="on('insref'):$VALUE"
          />
      </group>
      <label loc="180 125" size="75 20"
        style="Label1"
        label="Peak labels"
        justify="Left"
      />
      <check loc="180 165" size="75 20"
        style="PlainText"
        label="Axis"
        vq="layout plotoption"
        vc="plotoption('add','axis') "
        vc2="plotoption('remove','axis')"
        set="teststr('plotoption','axis'):$VALUE"
        />
      <check loc="10 165" size="125 20"
        style="PlainText"
        label="Integral values"
        vq="layout plotoption lifrq"
        vc="plotoption('add','intval') on('insref'):$e if ($e) then intstyle='pir' else intstyle='pirN' endif dpir"
        vc2="plotoption('remove','intval') intstyle='' dpir('turnoff') ds('again')"
        set="teststr('plotoption','intval'):$VALUE"
        show="if (lifrq&lt;&gt;0) then $ENABLE=1 else $ENABLE=-1 endif"
        />
      <check loc="10 125" size="110 20"
        style="PlainText"
        label="Integral lines"
        vq="layout plotoption intmod"
        vc="if (intmod='off') then intmod='partial' endif"
        vc2="intmod='off'"
        set="if (intmod='partial' or intmod='full') then $VALUE=1 else $VALUE=0 endif"
        />
      <group loc="10 205" size="145 20"
        border="None"
        tab="no"
        enable="no"
        useref="no"
        subtype="Untitled"
        rows="1"
        columns="1"
        >
        <radio loc="70 0" size="55 20"
          style="PlainText"
          label="Vert"
          vq="integralOrient"
          vc="integralOrient='vert' teststr('plotoption','intval'):$on if ($on) then dpir endif"
          set="$VALUE=(integralOrient='vert')"
          />
        <radio loc="5 0" size="60 20"
          style="PlainText"
          label="Horiz"
          vq="integralOrient"
          vc="integralOrient='' teststr('plotoption','intval'):$on if ($on) then dpir endif"
          set="$VALUE=(integralOrient&lt;&gt;'vert')"
          />
      </group>
      <group loc="15 145" size="120 20"
        border="None"
        tab="no"
        enable="no"
        useref="no"
        subtype="Untitled"
        rows="1"
        columns="1"
        >
        <radio loc="55 0" size="60 20"
          style="PlainText"
          label="Partial"
          vq="intmod"
          vc="intmod='partial'"
          set="if (intmod='partial') then $VALUE=1 else $VALUE=0 endif"
          />
        <radio loc="5 0" size="45 20"
          style="PlainText"
          label="Full"
          vq="intmod"
          vc="intmod='full'"
          set="if (intmod='full') then $VALUE=1 else $VALUE=0 endif"
          />
      </group>
    </group>
  </group>
</template>
