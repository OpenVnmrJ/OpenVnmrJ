<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<template name="LineLists" element="pages" type="processing" >
  <group size="745 260"
    style="Heading1"
    label="Cursors/Line Lists"
    vq="personaType"
    show="$S=1 PersonaManager('showInPanel','process','cursorslinelist'):$S $SHOW=$S"
    border="None"
    side="Top"
    justify="Left"
    tab="yes"
    enable="no"
    reference="LineLists"
    useref="no"
    subtype="Untitled"
    expanded="yes"
    rows="1"
    columns="1"
    >
    <button loc="660 10" size="75 20"
      style="Heading2"
      label="...in Editor"
      vq="curexp lifrq"
      vc="fp exists('fptmp','parameter'):$e if $e&lt;0.5 then create('fptmp','real') else destroy('fptmp') endif $fp=curexp+'/fp.out' exists($fp,'file'):$e if $e&lt;0.5 then write('reset',$fp) endif shell('gedit '+$fp+' &amp;')"
      bg="transparent"
      justify="Center"
      decor1="yes"
      />
    <button loc="455 10" size="205 20"
      style="Heading2"
      label="Display peaks in array"
      vc="fp exists('fptmp','parameter'):$e if $e&lt;0.5 then create('fptmp','real') else destroy('fptmp') endif"
      bg="transparent"
      justify="Center"
      decor1="yes"
      />
    <button loc="195 10" size="170 20"
      style="Heading2"
      label="Display line list"
      vc="dll"
      bg="transparent"
      justify="Center"
      decor1="yes"
      />
    <button loc="365 10" size="75 20"
      style="Heading2"
      label="...in Editor"
      vq="curexp lifrq"
      vc="dll $fll=curexp+'/dll.out' exists($fll,'file'):$e if $e&lt;0.5 then write('reset',$fll) endif shell('gedit '+$fll+' &amp;')"
      bg="transparent"
      justify="Center"
      decor1="yes"
      />
    <textfile loc="455 30" size="280 230"
      style="StdPar"
      vq="curexp fptmp"
      set="$fp=curexp+'/fp.out' exists($fp,'file'):$e if $e&lt;0.5 then write('reset',$fp) endif $VALUE=$fp"
      editable="no"
      wrap="no"
      units="char"
      />
    <textfile loc="195 30" size="250 230"
      style="StdPar"
      vq="curexp llfrq"
      set="$fll=curexp+'/dll.out' exists($fll,'file'):$e if $e&lt;0.5 then write('reset',$fll) endif $VALUE=$fll"
      editable="no"
      wrap="no"
      units="char"
      />
    <group loc="5 0" size="180 260"
      style="Heading1"
      label="Cursors"
      border="Etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      reference="Cursor(s)"
      useref="no"
      subtype="Major"
      expanded="yes"
      rows="1"
      columns="1"
      >
      <label loc="5 130" size="170 20"
        style="Label1"
        label="For 2 cursors on screen"
        justify="Left"
        />
      <button loc="10 150" size="160 20"
        style="Heading2"
        label="Show signal to noise"
        vc="dsn"
        justify="Center"
        decor1="yes"
        />
      <button loc="10 170" size="160 20"
        style="Heading2"
        label="Move spectral width"
        vc="movesw"
        justify="Center"
        decor1="yes"
        />
      <button loc="10 190" size="160 20"
        style="Heading2"
        label="Inset spectrum"
        vc="s(1,'') inset"
        justify="Center"
        decor1="yes"
        />
      <button loc="10 210" size="160 20"
        style="Heading2"
        label="Plot inset"
        vc="pl pscale"
        justify="Center"
        decor1="yes"
        />
      <button loc="10 230" size="160 20"
        style="Heading2"
        label="Return from inset"
        vc="r1 ds"
        justify="Center"
        decor1="yes"
        />
      <button loc="10 40" size="160 20"
        style="Heading2"
        label="Peak threshold"
        vc="thadj ds ds('thresh')"
        justify="Center"
        decor1="yes"
        />
      <button loc="10 60" size="160 20"
        style="Heading2"
        label="Place on nearest line"
        vc="nl"
        justify="Center"
        decor1="yes"
        />
      <button loc="10 80" size="160 20"
        style="Heading2"
        label="Show linewidth"
        vc="dres"
        justify="Center"
        decor1="yes"
        />
      <button loc="10 100" size="160 20"
        style="Heading2"
        label="Move transmitter"
        vc="movetof"
        justify="Center"
        decor1="yes"
        />
      <label loc="10 20" size="160 20"
        style="Label1"
        label="For 1 cursor on screen"
        justify="Left"
        />
    </group>
  </group>
</template>
