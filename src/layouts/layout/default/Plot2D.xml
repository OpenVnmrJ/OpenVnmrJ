<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<template name="Plot2D" element="pages" type="processing" >
  <group loc="0 0" size="810 250"
    style="Heading1"
    label="Plot"
    vq="personaType"
    show="$S=1 PersonaManager('showInPanel','process','plot2d'):$S $SHOW=$S"
    border="None"
    side="Top"
    justify="Left"
    tab="yes"
    enable="no"
    reference="Plot2D"
    useref="no"
    subtype="Untitled"
    expanded="yes"
    rows="1"
    columns="1"
    >
    <button loc="400 215" size="90 25"
      style="Heading2"
      label="Preview"
      vq="layout plotoption"
      vc="plotoption('2d') doplotoption pageview"
      bg="transparent"
      decor1="yes"
      halignment="Center"
      valignment="Center"
      />
    <button loc="490 215" size="90 25"
      style="Heading2"
      label="Print"
      vc="plotoption('2d') doplotoption page"
      bg="transparent"
      decor1="yes"
      halignment="Center"
      valignment="Center"
      />
    <group loc="595 105" size="205 135"
      style="Heading1"
      label="Send to"
      border="Etched"
      tab="no"
      enable="no"
      reference="Sendto"
      useref="no"
      subtype="Titled"
      expanded="yes"
      rows="1"
      columns="1"
      >
      <radio loc="10 65" size="150 20"
        style="PlainText"
        label="Print 1 page"
        vq="plduplex"
        vc="plduplex=2"
        set="$VALUE=(plduplex=2)"
        show="exists('plduplex','parameter','global'):$ENABLE"
        />
      <radio loc="10 85" size="150 20"
        style="PlainText"
        label="Print 2 pages"
        vq="plduplex"
        vc="plduplex=0"
        set="$VALUE=(plduplex=0)"
        show="exists('plduplex','parameter','global'):$ENABLE"
        />
      <radio loc="10 105" size="150 20"
        style="PlainText"
        label="Print double-sided"
        vq="plduplex"
        vc="plduplex=1"
        set="$VALUE=(plduplex=1)"
        show="exists('plduplex','parameter','global'):$ENABLE"
        />
      <filemenu loc="10 20" size="170 20"
        style="PlainText"
        vq="plotter sysplotter"
        vc="mkpar('string','sysplotter','') setgroup('sysplotter','display') sysplotter=plotter plotter='$VALUE'"
        set="$VALUE=plotter"
        file="$VALUE=userdir+'/persistence/plotters'"
        type="file"
        bg="VJBackground"
        editable="No"
        vq2="plotter"
        statshow="yes"
        elastic="no"
        display="yes"
        />
      <label loc="15 45" size="75 20"
        style="Label1"
        label="Hz per mm:"
        />
      <textmessage loc="93 46" size="60 20"
        style="Info"
        vq="hzmm"
        set="$VALUE=hzmm"
        digits="1"
        />
    </group>
    <group loc="593 6" size="205 95"
      style="Heading1"
      label="Lists"
      border="Etched"
      tab="no"
      enable="no"
      reference="Tables"
      useref="no"
      subtype="Titled"
      expanded="yes"
      rows="1"
      columns="1"
      >
      <check loc="110 70" size="80 20"
        style="PlainText"
        label="Miniplots"
        vq="layout plotoption"
        vc="plotoption('add','miniplot')"
        vc2="plotoption('remove','miniplot')"
        set="teststr('plotoption','miniplot'):$VALUE"
        />
      <check loc="10 70" size="100 20"
        style="PlainText"
        label="Comments"
        vq="layout plotoption"
        vc="plotoption('add','comments')"
        vc2="plotoption('remove','comments')"
        set="teststr('plotoption','comments'):$VALUE"
        />
      <group loc="10 20" size="185 45"
        style="Heading1"
        label="Parameters"
        border="Etched"
        tab="no"
        enable="no"
        useref="no"
        subtype="Titled"
        rows="1"
        columns="1"
        >
        <radio loc="75 15" size="45 20"
          style="PlainText"
          label="All"
          vq="layout plotoption partemplate"
          vc="plotoption('add','header') plotoption('add','params')"
          set="teststr('plotoption','header'):$h teststr('plotoption','params'):$p $VALUE=($h and $p)"
          />
        <radio loc="120 15" size="55 20"
          style="PlainText"
          label="None"
          vq="layout plotoption partemplate"
          vc="plotoption('remove','header') plotoption('remove','params')"
          set="teststr('plotoption','header'):$h teststr('plotoption','params'):$p $VALUE=(not $h and not $p)"
          />
        <radio loc="15 15" size="60 20"
          style="PlainText"
          label="Basic"
          vq="layout plotoption partemplate"
          vc="plotoption('add','header') plotoption('remove','params')"
          set="teststr('plotoption','header'):$h teststr('plotoption','params'):$p $VALUE=(($h) and not $p)"
          />
      </group>
    </group>
    <group loc="7 6" size="580 205"
      style="Heading1"
      label="Spectral graphics"
      border="Etched"
      tab="no"
      enable="no"
      reference="Graphics"
      useref="no"
      subtype="Titled"
      expanded="yes"
      rows="1"
      columns="1"
      >
      <check loc="121 27" size="76 20"
        style="PlainText"
        label="Molecule"
        vq="layout plotoption"
        vc="plotoption('add','molecule')"
        vc2="plotoption('remove','molecule')"
        set="teststr('plotoption','molecule'):$VALUE"
        />
      <group loc="10 128" size="560 70"
        style="Heading1"
        label="Overlaid 1D spectrum"
        border="Etched"
        tab="no"
        enable="no"
        reference="Overlaid1Dspectrum"
        useref="no"
        subtype="Titled"
        expanded="yes"
        rows="1"
        columns="1"
        >
        <check loc="15 41" size="20 20"
          style="PlainText"
          vq="trace"
          vc="plt2Darg('set','f1','f1')"
          vc2="plt2Darg('set','f1','none')"
          set="$v='' plt2Darg('get','f1'):$v $VALUE=($v&lt;&gt;'none')"
          />
        <menu loc="190 20" size="130 20"
          style="PlainText"
          vq="trace"
          vc="plt2Darg('set','f2','$VALUE')"
          set="$VALUE='' plt2Darg('get','f2'):$VALUE"
          editable="No"
          >
          <mlabel 
            label="Saved 1D fid"
            chval="f2"
            />
          <mlabel 
            label="Projection"
            chval="proj"
            />
          <mlabel 
            label="Other workspace"
            chval="exp"
            />
        </menu>
        <menu loc="190 40" size="130 20"
          style="PlainText"
          vq="trace"
          vc="plt2Darg('set','f1','$VALUE')"
          set="$VALUE='' plt2Darg('get','f1'):$VALUE"
          editable="No"
          >
          <mlabel 
            label="Saved 1D fid"
            chval="f1"
            />
          <mlabel 
            label="Projection"
            chval="proj"
            />
          <mlabel 
            label="Other workspace"
            chval="exp"
            />
        </menu>
        <group loc="325 20" size="210 20"
          vq="trace"
          show="if trace='f2' then $SHOW=(plt2Darg[4]='f2') else $SHOW=(plt2Darg[5]='f2') endif"
          border="None"
          tab="no"
          enable="no"
          useref="false"
          subtype="Untitled"
          rows="1"
          columns="1"
          >
          <textmessage loc="5 0" size="180 20"
            style="PlainText"
            label="Ethylindanone_PROTON_03"
            vq="trace"
            set="$VALUE='' plt2Darg('get','f2'):$v,$VALUE"
            />
        </group>
        <textmessage loc="35 41" size="155 20"
          style="Label1"
          vq="trace"
          set="if (trace='f2') then $VALUE='HiRes side spectrum (F1):' else $VALUE='HiRes top spectrum (F1):' endif"
          />
        <textmessage loc="35 21" size="155 20"
          style="Label1"
          vq="trace"
          set="if (trace='f2') then $VALUE='HiRes top spectrum (F2):' else $VALUE='HiRes side spectrum (F2):' endif"
          />
        <group loc="320 21" size="190 20"
          vq="trace"
          show="if (trace='f2') then strstr(plt2Darg[4],'exp'):$ret else strstr(plt2Darg[5],'exp'):$ret endif $SHOW=($ret=1)"
          border="None"
          tab="no"
          enable="no"
          useref="false"
          subtype="Untitled"
          rows="1"
          columns="1"
          >
          <check loc="70 0" size="120 20"
            style="Label1"
            label="Auto  vert scale"
            vq="trace"
            vc="plt2Darg('set',7,'vsadj')"
            vc2="plt2Darg('set',7,'')"
            set="$V='' plt2Darg('get',7):$V $VALUE=($V='vsadj')"
            />
          <entry loc="10 0" size="55 20"
            style="PlainText"
            vq="trace"
            vc="plt2Darg('set','f2','exp',$VALUE)"
            set="$VALUE=0 $v2='0' plt2Darg('get','f2'):$v,$v2 format($v2,'isreal'):$real if $real then format($v2,'lower'):$VALUE endif"
            digits="0"
            />
        </group>
        <group loc="325 41" size="210 20"
          vq="trace"
          show="if (trace='f2') then $SHOW=(plt2Darg[5]='f1') else $SHOW=(plt2Darg[4]='f1') endif"
          border="None"
          tab="no"
          enable="no"
          useref="false"
          subtype="Untitled"
          rows="1"
          columns="1"
          >
          <textmessage loc="5 0" size="180 20"
            style="PlainText"
            label="Ethylindanone_PROTON_03"
            vq="trace"
            set="$VALUE='' plt2Darg('get','f1'):$v,$VALUE"
            />
        </group>
        <group loc="320 41" size="190 20"
          vq="trace"
          show="if (trace='f2') then strstr(plt2Darg[5],'exp'):$ret else strstr(plt2Darg[4],'exp'):$ret endif $SHOW=($ret=1)"
          border="None"
          tab="no"
          enable="no"
          useref="false"
          subtype="Untitled"
          rows="1"
          columns="1"
          >
          <check loc="70 0" size="110 20"
            style="Label1"
            label="Auto vert scale"
            vq="trace"
            vc="plt2Darg('set',8,'vsadj')"
            vc2="plt2Darg('set',8,'')"
            set="$V='' plt2Darg('get',8):$V  $VALUE=($V='vsadj')"
            />
          <entry loc="10 0" size="55 20"
            style="PlainText"
            vq="trace"
            vc="plt2Darg('set','f1','exp',$VALUE)"
            set="$VALUE=0 $v2='0' plt2Darg('get','f1'):$v,$v2 format($v2,'isreal'):$real if $real then format($v2,'lower'):$VALUE endif"
            digits="0"
            />
        </group>
        <check loc="15 21" size="20 20"
          style="PlainText"
          vq="trace"
          vc="plt2Darg('set','f2','f2')"
          vc2="plt2Darg('set','f2','none')"
          set="$v='' plt2Darg('get','f2'):$v $VALUE=($v&lt;&gt;'none')"
          />
      </group>
      <group loc="330 59" size="240 65"
        style="Heading1"
        label="Logo"
        border="Etched"
        tab="no"
        enable="no"
        reference="Integralvalues"
        useref="no"
        subtype="Titled"
        expanded="yes"
        rows="1"
        columns="1"
        >
        <radio loc="85 15" size="70 25"
          style="PlainText"
          label="Custom"
          vq="plotlogo layout plotoption"
          vc="plotoption('add','logo')"
          set="teststr('plotoption','logo'):$ret $VALUE=(plotlogo&lt;&gt;systemdir+'/iconlib/plotLogo.gif' and $ret)"
          />
        <button loc="150 15" size="80 25"
          style="Heading2"
          label="Browse..."
          vq="plotlogo"
          vc="plotlogo('setup') vnmrjcmd('popup','mode:modal','file:Plotlogo.xml','title:Plot Logo')"
          bg="transparent"
          decor1="yes"
          halignment="Center"
          valignment="Center"
          />
        <radio loc="15 35" size="60 20"
          style="PlainText"
          label="None"
          vq="plotlogo layout plotoption"
          vc="plotoption('remove','logo')"
          set="teststr('plotoption','logo'):$ret $VALUE=(plotlogo='' or $ret&lt;0.5)"
          />
      </group>
      <group loc="10 59" size="315 65"
        style="Heading1"
        label="2D contours"
        border="Etched"
        tab="no"
        enable="no"
        reference="2DContours"
        useref="no"
        subtype="Titled"
        expanded="yes"
        rows="1"
        columns="1"
        >
        <radio loc="200 15" size="95 20"
          style="PlainText"
          label="Both"
          vq="trace"
          vc="plt2Darg('set',1,'both')"
          vc2="plt2Darg('set',1,'pos')"
          set="plt2Darg('get',1):$v $VALUE=($v='both')"
          />
        <radio loc="105 15" size="95 20"
          style="PlainText"
          label="Negative"
          vq="trace"
          vc="plt2Darg('set',1,'neg')"
          vc2="plt2Darg('set',1,'both')"
          set="plt2Darg('get',1):$v $VALUE=($v='neg')"
          />
        <radio loc="10 15" size="95 20"
          style="PlainText"
          label="Positive"
          vq="trace"
          vc="plt2Darg('set',1,'pos')"
          vc2="plt2Darg('set',1,'both')"
          set="plt2Darg('get',1):$v $VALUE=($v='pos')"
          />
        <label loc="115 35" size="55 20"
          style="Label1"
          label="Spacing"
          />
        <entry loc="170 35" size="40 20"
          style="PlainText"
          vq="trace"
          vc="format('$VALUE','isreal'):$real if $real then $v=0 format('$VALUE','lower'):$v plt2Darg('set',3,$v) endif"
          set="$VALUE='1.5' plt2Darg('get',3):$v format($v,'lower'):$VALUE"
          digits="2"
          />
        <entry loc="65 35" size="40 20"
          style="PlainText"
          vq="trace"
          vc="format('$VALUE','isreal'):$real if $real then $v=0 format('$VALUE',0,0):$v plt2Darg('set',2,$v) endif"
          set="$VALUE='7' plt2Darg('get',2):$v format($v,'lower'):$VALUE"
          digits="0"
          />
        <label loc="15 35" size="55 20"
          style="Label1"
          label="Number"
          />
      </group>
      <group loc="330 15" size="240 40"
        style="Heading1"
        label="2D plot size"
        border="Etched"
        tab="no"
        enable="no"
        reference="Highres1D"
        useref="no"
        subtype="Titled"
        expanded="yes"
        rows="1"
        columns="1"
        >
        <radio loc="35 15" size="95 20"
          style="PlainText"
          label="As displayed"
          vq="trace"
          vc="plt2Darg('set',6,'nosize')"
          vc2="plt2Darg('set',6,'resize')"
          set="plt2Darg('get',6):$v $VALUE=($v='nosize')"
          />
        <radio loc="140 15" size="95 20"
          style="PlainText"
          label="Fit to page"
          vq="trace"
          vc="plt2Darg('set',6,'resize')"
          vc2="plt2Darg('set',6,'nosize')"
          set="plt2Darg('get',6):$v $VALUE=($v='resize')"
          />
      </group>
      <group loc="205 15" size="120 40"
        style="Heading1"
        label="Trace axis"
        border="Etched"
        tab="no"
        enable="no"
        reference="Highres1D"
        useref="no"
        subtype="Titled"
        expanded="yes"
        rows="1"
        columns="1"
        >
        <radio loc="65 15" size="55 20"
          style="PlainText"
          label="F2"
          vq="trace"
          vc="trace='f2' plt2Darg('toggle') dconi('again')"
          vc2="trace='f1' plt2Darg('toggle') dconi"
          set="$VALUE=(trace='f2')"
          />
        <radio loc="15 15" size="55 20"
          style="PlainText"
          label="F1"
          vq="trace"
          vc="trace='f1' plt2Darg('toggle') dconi('again')"
          vc2="trace='f2' plt2Darg('toggle') dconi"
          set="$VALUE=(trace='f1')"
          />
      </group>
      <button loc="10 25" size="100 25"
        style="Heading2"
        label="Invert phase"
        vc="showmanual('2d','invert')"
        bg="transparent"
        decor1="yes"
        halignment="Center"
        valignment="Center"
        />
    </group>
  </group>
</template>
