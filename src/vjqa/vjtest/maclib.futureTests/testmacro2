$dirs='/home/vnmr1/BPwalkup_Lyon_Inova600_VJ2.2D/vnmrsys/maclib/'
$num=size('$dirs')
$j=0
while ($j < $num) do
  $j = $j+1
  $dir = $dirs[$j]
  getfile($dir):$nfiles
  $i=0
  write('line3','checking %d macros in %s',$nfiles, $dir)
  while ($i<$nfiles) do
     $i=$i+1
     getfile($dir,$i):$macro_name
     macrold($dir+$macro_name):$e
     purge($macro_name)
  endwhile
endwhile
write('line3','macro test done')
