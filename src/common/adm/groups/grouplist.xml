<template element="panels" type="acquisition" >
  <port size="506 298" style="Bold" point="8"
    fg="black"
    >
   <wgroup  label="Labels"
       border="None" side="Top" justify="Left" tab="no"
       useref="no"
     keyword="accname"
    >
    <wlabel loc="20 5" size="100 30" font="Heading2"
      style="Heading2"
      point="Heading2"
      fg="Heading2"
      label="Group Name:"
      justify="Right"
      />
    <wentry loc="125 5" size="100 30" font="Menu4"
      style="Menu4"
      point="Menu4"
      fg="Menu4"
      disable="Grayed out"
      />
   </wgroup>
   <wgroup label="Labels"
       border="None" side="Top" justify="Left" tab="no"
       useref="no"
     keyword="group_userdir"
    >
    <wlabel loc="20 5" size="100 30" font="Heading2"
      style="Heading2"
      point="Heading2"
      fg="Heading2"
      label="Group Directory:"
      justify="Right"
      />
    <wentry loc="125 5" size="100 30" font="Menu4"
      style="Menu4"
      point="Menu4"
      fg="Menu4"
      disable="Grayed out"
      />
   </wgroup>
   <wgroup  label="Labels"
       border="None" side="Top" justify="Left" tab="no"
       useref="no"
     keyword="group_sysdir"
    >
    <wlabel loc="20 5" size="100 30" font="Heading2"
      style="Heading2"
      point="Heading2"
      fg="Heading2"
      label="System Directory:"
      justify="Right"
      />
    <wentry loc="125 5" size="100 30" font="Menu4"
      style="Menu4"
      point="Menu4"
      fg="Menu4"
      disable="Grayed out"
      />
   </wgroup>
   <wgroup  label="Labels"
       border="None" side="Top" justify="Left" tab="no"
       useref="no"
      keyword="group_datadir"
    > 
    <wlabel loc="20 5" size="100 30" font="Heading2"
      style="Heading2"
      point="Heading2"
      fg="Heading2"
      label="Data Directory:"
      justify="Right"
      />
    <wentry loc="125 5" size="100 30" font="Menu4"
      style="Menu4"
      point="Menu4"
      fg="Menu4"
      disable="Grayed out"
      />
   </wgroup>
   <wgroup  label="Labels"
       border="None" side="Top" justify="Left" tab="no"
       useref="no"
     keyword="group_appdir"
    >
    <wlabel loc="20 5" size="100 30" font="Heading2"
      style="Heading2"
      point="Heading2"
      fg="Heading2"
      label="Application Directory:"
      justify="Right"
      />
    <wentry loc="125 5" size="100 30" font="Menu4"
      style="Menu4"
      point="Menu4"
      fg="Menu4"
      disable="Grayed out"
      />
   </wgroup>
   <wgroup  label="Labels"
       border="None" side="Top" justify="Left" tab="no"
       useref="no"
     keyword="group_itype"
    >
    <wlabel loc="230 10" size="60 20" font="Heading1"
      style="Heading1"
      point="Heading1"
      fg="Heading1"
      label="Interface Type:"
      justify="Left"
      />
    <wmenu loc="295 10" size="60 20" font="Heading2"
      style="Heading2"
      point="Heading2"
      fg="Heading2"
      label="menu"
      vq="np"
      vc="np=$VALUE*2"
      set="$VALUE=np/2"
      >
      <mlabel label="Sylvia" chval="Sylvia"/>
      <mlabel label="Imaging" chval="Imaging"/>
      <mlabel label="Walkup/Automation" chval="Rudy"/>
      <mlabel label="Administrator" chval="Wanda"/>
      <mlabel />
    </wmenu>
   </wgroup>
   <wgroup  label="Labels"
       border="None" side="Top" justify="Left" tab="no"
       useref="no"
     keyword="group_dataacq"
    >
    <wlabel loc="360 10" size="60 20" font="Heading1"
      style="Heading1"
      point="Heading1"
      fg="Heading1"
      label="Data Acquisition:"
      justify="Left"
      />
    <wmenu loc="425 10" size="60 20" font="Heading2"
      style="Heading2"
      point="Heading2"
      fg="Heading2"
      label="menu"
      vq="np"
      vc="np=$VALUE*2"
      set="$VALUE=np/2"
      >
      <mlabel label="Always Notify Administrator" chval="always"/>
      <mlabel label="Never Notify Administrator" chval="never"/>
      <mlabel label="User choice to notify administrator" chval="userchoice"/>
      <mlabel />
    </wmenu>
   </wgroup>
   <wgroup  label="Labels"
       border="None" side="Top" justify="Left" tab="no"
       useref="no"
     keyword="group_acqerror"
    >
    <wlabel loc="190 40" size="60 20" font="Heading1"
      style="Heading1"
      point="Heading1"
      fg="Heading1"
      label="Acquisition error:"
      justify="Left"
      />
