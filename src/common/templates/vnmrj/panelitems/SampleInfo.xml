<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<template element="panels" type="acquisition" >
  <group loc="0 0" size="620 220"
    style="Heading1"
    label="Sample information"
    border="Etched"
    side="Top"
    justify="Left"
    tab="no"
    enable="no"
    reference="SampleInfo"
    useref="no"
    subtype="Titled"
    expanded="yes"
    rows="1"
    columns="1"
    >
    <textfile loc="380 90" size="230 120"
      style="PlainText"
      vq="curexp"
      set="$VALUE=curexp+'/text'"
      editable="yes"
      wrap="yes"
      units="char"
      />
    <label loc="380 70" size="65 20"
      style="Label1"
      label="Comments"
      justify="Left"
      />
    <entry loc="425 40" size="185 20"
      style="PlainText"
      vq="emailaddr "
      vc="emailaddr='$VALUE'"
      set="$VALUE=emailaddr"
      disable="Grayed out"
      />
    <label loc="380 40" size="40 20"
      style="Label1"
      label="Email"
      justify="Left"
      />
    <toggle loc="300 100" size="60 20"
      style="Heading2"
      label="Other"
      vq="solvent"
      vc="solvent=solvent"
      set="format(solvent,'lower'):$solv $VALUE=(($solv&lt;&gt;'d2o') and ($solv&lt;&gt;'dmso') and ($solv&lt;&gt;'cdcl3'))"
      enable="yes"
      radiobutton="yes"
      subtype="no"
      />
    <toggle loc="240 100" size="60 20"
      style="Heading2"
      label="D2O"
      vq="solvent"
      vc="solvent='d2o' setref"
      set="format(solvent,'lower'):$solv $VALUE=($solv='d2o')"
      enable="yes"
      radiobutton="yes"
      subtype="no"
      />
    <toggle loc="180 100" size="60 20"
      style="Heading2"
      label="CDCl3"
      vq="solvent"
      vc="solvent='cdcl3' setref"
      set="format(solvent,'lower'):$solv $VALUE=($solv='cdcl3')"
      enable="yes"
      radiobutton="yes"
      subtype="no"
      />
    <toggle loc="120 100" size="60 20"
      style="Heading2"
      label="DMSO"
      vq="solvent"
      vc="solvent='dmso' setref"
      set="format(solvent,'lower'):$solv $VALUE=($solv='dmso')"
      enable="yes"
      radiobutton="yes"
      subtype="no"
      />
    <entry loc="270 150" size="45 20"
      style="PlainText"
      vq="concentration"
      vc="concentration=$VALUE"
      set="$VALUE=concentration"
      digits="1"
      disable="Grayed out"
      />
    <label loc="320 150" size="30 20"
      style="Label1"
      label="mM"
      justify="Left"
      />
    <label loc="15 150" size="60 20"
      style="Label1"
      label="Mass"
      justify="Left"
      />
    <entry loc="120 150" size="45 20"
      style="PlainText"
      vq="mass molecularmass samplevolume"
      vc="mass=$VALUE"
      set="$VALUE=mass"
      show="$ENABLE=(samplevolume>0 and molecularmass>0)"
      digits="1"
      disable="Grayed out"
      />
    <label loc="170 150" size="40 20"
      style="Label1"
      label="mg"
      justify="Left"
      />
    <label loc="320 130" size="40 20"
      style="Label1"
      label="g/mol"
      justify="Left"
      />
    <entry loc="270 130" size="45 20"
      style="PlainText"
      vq="molecularmass"
      vc="molecularmass=$VALUE"
      set="$VALUE=molecularmass"
      digits="1"
      disable="Grayed out"
      />
    <label loc="205 130" size="60 20"
      style="Label1"
      label="Mol. Mass"
      justify="Left"
      />
    <label loc="170 130" size="30 20"
      style="Label1"
      label="Î¼L"
      justify="Left"
      />
    <entry loc="120 130" size="45 20"
      style="PlainText"
      vq="samplevolume"
      vc="samplevolume=$VALUE"
      set="$VALUE=samplevolume"
      digits="0"
      disable="Grayed out"
      />
    <filemenu loc="120 80" size="240 20"
      style="PlainText"
      vq="solvent"
      vc="solvent='$VALUE' setref"
      set="format(solvent,'lower'):$VALUE"
      file="/vnmr/solventlist"
      type="file"
      bg="VJBackground"
      editable="No"
      statshow="yes"
      elastic="no"
      display="yes"
      />
    <textmessage loc="120 60" size="240 20"
      style="PlainText"
      vq="sample sdirtmplt adirtmplt samplename"
      set="if (sample='') then $as='' $s='' Svfname(adirtmplt+'/'+sdirtmplt,''):$as shell('basename '+$as):$s $VALUE='('+$s+')' else $VALUE=sample endif"
      />
    <entry loc="120 40" size="240 20"
      style="PlainText"
      vq=" samplename"
      vc=" samplename='$VALUE' setsamplename"
      set="$VALUE=samplename"
      disable="Grayed out"
      />
    <entry loc="120 170" size="240 20"
      style="PlainText"
      vq="notebook"
      vc="notebook='$VALUE'"
      set="$VALUE=notebook"
      disable="Grayed out"
      />
    <entry loc="120 190" size="240 20"
      style="PlainText"
      vq=" page"
      vc=" page='$VALUE'"
      set="$VALUE=page"
      disable="Grayed out"
      />
    <label loc="15 40" size="100 20"
      style="Label1"
      label="Sample name"
      justify="Left"
      />
    <label loc="15 60" size="100 20"
      style="Label1"
      label="Sample directory"
      justify="Left"
      />
    <label loc="15 80" size="100 20"
      style="Label1"
      label="Solvent"
      justify="Left"
      />
    <label loc="205 150" size="100 20"
      style="Label1"
      label="Conc."
      justify="Left"
      />
    <label loc="15 130" size="100 20"
      style="Label1"
      label="Sample volume"
      justify="Left"
      />
    <label loc="15 170" size="100 20"
      style="Label1"
      label="Notebook"
      justify="Left"
      />
    <label loc="15 190" size="100 20"
      style="Label1"
      label="Page"
      justify="Left"
      />
    <button loc="300 20" size="60 20"
      style="Heading2"
      label="Clear"
      vc="resetsampglobal('clearSQ')"
      bg="transparent"
      decor1="yes"
      halignment="Center"
      valignment="Center"
      />
  </group>
</template>
