<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<template name="Rcvr" element="composites" type="sample" >
  <group size="100 100" fg="PlainText" vq="rcvrs"
    show="on('rcvrs'):$VALUE"
    bg="transparent"
    border="None"
    side="Top"
    justify="Left"
    tab="no"
    reference="Rcvr"
    useref="no"
    >
    <group loc="0 40" size="100 20" fg="PlainText"
      vq="numrcvrs"
      show="$VALUE=(numrcvrs&gt;=2)"
      bg="transparent"
      border="None"
      side="Top"
      justify="Left"
      tab="no"
      useref="no"
      >
      <check loc="0 0" size="90 20" font="PlainText"
        style="PlainText"
        point="PlainText"
        fg="PlainText"
        label="Use Rcvr 2"
        vq="rcvrs"
        vc="substr(rcvrs,2,1,'y'):rcvrs"
        vc2="substr(rcvrs,2,1,'n'):rcvrs"
        set="substr(rcvrs,2,1):$ch $VALUE=($ch='y')"
        show="on('rcvrs'):$VALUE"
        />
    </group>
    <group loc="0 80" size="100 20" fg="PlainText"
      vq="numrcvrs"
      show="$VALUE=(numrcvrs&gt;=4)"
      bg="transparent"
      border="None"
      side="Top"
      justify="Left"
      tab="no"
      useref="no"
      >
      <check loc="0 0" size="90 20" font="PlainText"
        style="PlainText"
        point="PlainText"
        fg="PlainText"
        label="Use Rcvr 4"
        vq="rcvrs"
        vc="substr(rcvrs,4,1,'y'):rcvrs"
        vc2="substr(rcvrs,4,1,'n'):rcvrs"
        set="substr(rcvrs,4,1):$ch $VALUE=($ch='y')"
        show="on('rcvrs'):$VALUE"
        />
    </group>
    <group loc="0 60" size="100 20" fg="PlainText"
      vq="numrcvrs"
      show="$VALUE=(numrcvrs&gt;=3)"
      bg="transparent"
      border="None"
      side="Top"
      justify="Left"
      tab="no"
      useref="no"
      >
      <check loc="0 0" size="90 20" font="PlainText"
        style="PlainText"
        point="PlainText"
        fg="PlainText"
        label="Use Rcvr 3"
        vq="rcvrs"
        vc="substr(rcvrs,3,1,'y'):rcvrs"
        vc2="substr(rcvrs,3,1,'n'):rcvrs"
        set="substr(rcvrs,3,1):$ch $VALUE=($ch='y')"
        show="on('rcvrs'):$VALUE"
        />
    </group>
    <label loc="0 0" size="90 20" font="Heading2"
      style="Heading2"
      point="Heading2"
      fg="Heading2"
      label="Receivers"
      justify="Left"
      />
    <check loc="0 20" size="90 20" font="PlainText"
      style="PlainText"
      point="PlainText"
      fg="PlainText"
      label="Use Rcvr 1"
      vq="rcvrs"
      vc="substr(rcvrs,1,1,'y'):rcvrs"
      vc2="substr(rcvrs,1,1,'n'):rcvrs"
      set="substr(rcvrs,1,1):$ch $VALUE=($ch='y')"
      show="on('rcvrs'):$VALUE"
      />
  </group>
</template>
