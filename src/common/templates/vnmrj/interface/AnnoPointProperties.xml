<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<template element="panels" type="acquisition" >
  <group loc="0 0" size="240 390"
    border="None"
    tab="no"
    enable="no"
    reference="AnnoPointProperties"
    useref="no"
    subtype="Untitled"
    expanded="yes"
    rows="1"
    columns="1"
    >
    <check loc="10 365" size="100 20"
      style="PlainText"
      label="Pin to canvas"
      vq="aspSel"
      vc="aspAnno('set',aspSel[2],'mm',1) aspProperty[16]='1'"
      vc2="aspAnno('set',aspSel[2],'mm',0) aspProperty[16]='0'"
      set="aspAnno('get',aspSel[2],'mm'):$VALUE"
      />
    <slider loc="100 340" size="130 20"
      style="PlainText"
      vq="aspSel"
      vc="aspAnno('set',aspSel[2],'transparency',$VALUE)"
      set="aspAnno('get',aspSel[2],'transparency'):$v format($v,0,0):$VALUE"
      digital="true"
      min="0"
      max="90"
      incr1="1"
      incr2="10"
      digits="3"
      />
    <label loc="10 340" size="90 20"
      style="Label1"
      label="Transparency"
      />
    <group loc="10 180" size="220 155"
      style="Heading1"
      label="Point"
      border="Etched"
      tab="no"
      enable="no"
      reference="AnnoProperty"
      useref="no"
      subtype="Titled"
      expanded="yes"
      rows="1"
      columns="1"
      >
      <group loc="5 60" size="210 90"
        label="point"
        vq="aspProperty"
        show="if(aspProperty[1]='POINT') then $SHOW=1 else $SHOW=0 endif"
        border="None"
        tab="no"
        enable="no"
        useref="no"
        subtype="Untitled"
        rows="1"
        columns="1"
        >
        <entry loc="105 20" size="60 20"
          vq="aspSel aspProperty"
          vc="aspAnno('set',aspSel[2],'y',$VALUE)"
          set="aspAnno('get',aspSel[2],'y'):$v format($v,0,3):$VALUE"
          />
        <label loc="95 20" size="10 20"
          style="Label1"
          label="y"
          />
        <check loc="5 65" size="95 20"
          style="PlainText"
          label="Show pointer"
          vq="aspSel"
          vc="aspAnno('set',aspSel[2],'showLink',1)"
          vc2="aspAnno('set',aspSel[2],'showLink',0)"
          set="aspAnno('get',aspSel[2],'showLink'):$VALUE"
          />
        <check loc="5 45" size="95 20"
          style="Label1"
          label="Show marker"
          vq="aspSel"
          vc="aspAnno('set',aspSel[2],'showRoi',1)"
          vc2="aspAnno('set',aspSel[2],'showRoi',0)"
          set="aspAnno('get',aspSel[2],'showRoi'):$VALUE"
          />
        <label loc="15 20" size="10 20"
          style="Label1"
          label="x"
          />
        <entry loc="25 20" size="60 20"
          vq="aspSel aspProperty"
          vc="aspAnno('set',aspSel[2],'x',$VALUE)"
          set="aspAnno('get',aspSel[2],'x'):$v format($v,0,3):$VALUE"
          />
        <label loc="5 0" size="80 20"
          style="Label1"
          label="Coordinates:"
          />
      </group>
      <label loc="10 40" size="70 20"
        style="Label1"
        label="Thickness"
        />
      <colorchooser loc="85 20" size="125 20"
        style="PlainText"
        vq="aspSel"
        vc="aspAnno('set',aspSel[2],'lineColor','$VALUE') aspProperty[9]='$VALUE'"
        set="aspAnno('get',aspSel[2],'lineColor'):aspProperty[9] $VALUE=aspProperty[9]"
        savekids="false"
        keyval="blue"
        display="System"
        />
      <menu loc="85 40" size="125 20"
        style="PlainText"
        label="menu"
        vq="aspSel"
        vc="aspAnno('set',aspSel[2],'lineThickness',$VALUE)"
        set="aspAnno('get',aspSel[2],'lineThickness'):$VALUE"
        editable="Yes"
        >
        <mlabel 
          label="1"
          chval="1"
          />
        <mlabel 
          label="2"
          chval="2"
          />
        <mlabel 
          label="3"
          chval="3"
          />
        <mlabel 
          label="4"
          chval="4"
          />
        <mlabel 
          label="5"
          chval="5"
          />
        <mlabel 
          label="6"
          chval="6"
          />
        <mlabel 
          label="7"
          chval="7"
          />
        <mlabel 
          label="8"
          chval="8"
          />
        <mlabel 
          label="9"
          chval="9"
          />
        <mlabel 
          label="10"
          chval="10"
          />
      </menu>
      <label loc="10 20" size="70 20"
        style="Label1"
        label="Color"
        />
    </group>
    <group loc="10 5" size="220 170"
      style="Heading1"
      label="Label"
      border="Etched"
      tab="no"
      enable="no"
      reference="AnnoProperty"
      useref="no"
      subtype="Titled"
      expanded="yes"
      rows="1"
      columns="1"
      >
      <check loc="10 145" size="85 20"
        style="Label1"
        label="Show label"
        vq="aspSel"
        vc="aspAnno('set',aspSel[2],'showLabel',1)"
        vc2="aspAnno('set',aspSel[2],'showLabel',0)"
        set="aspAnno('get',aspSel[2],'showLabel'):$VALUE"
        />
      <label loc="10 120" size="70 20"
        style="Label1"
        label="Orientation"
        />
      <label loc="10 100" size="70 20"
        style="Label1"
        label="Font"
        />
      <check loc="85 120" size="65 20"
        style="Label1"
        label="Vertical"
        vq="aspSel"
        vc="aspAnno('set',aspSel[2],'vert',1)"
        vc2="aspAnno('set',aspSel[2],'vert',0)"
        set="aspAnno('get',aspSel[2],'vert'):$VALUE"
        />
      <fontchooser loc="85 100" size="125 20"
        style="PlainText"
        vq="aspSel"
        vc="aspAnno('set',aspSel[2],'fontName','$VALUE')"
        set="aspAnno('get',aspSel[2],'fontName'):$VALUE"
        chval="$Value=colorName[2]"
        key="Dialog"
        keyval="$Value=colorName[2]"
        display="Selected"
        />
      <stylechooser loc="85 80" size="125 20"
        style="PlainText"
        vq="aspSel"
        vc="aspAnno('set',aspSel[2],'fontStyle','$VALUE')"
        set="aspAnno('get',aspSel[2],'fontStyle'):$VALUE"
        chval="$VALUE=colorName[3]"
        key="Plain"
        keyval="$VALUE=colorName[3]"
        />
      <colorchooser loc="85 60" size="125 20"
        style="PlainText"
        vq="aspSel"
        vc="aspAnno('set',aspSel[2],'fontColor','$VALUE') aspProperty[4]='$VALUE'"
        set="aspAnno('get',aspSel[2],'fontColor'):aspProperty[4] $VALUE=aspProperty[4]"
        savekids="false"
        keyval="blue"
        display="System"
        />
      <menu loc="85 20" size="125 20"
        style="PlainText"
        label="menu"
        vq="aspSel"
        vc="aspAnno('set',aspSel[2],'label','$VALUE')"
        set="aspAnno('get',aspSel[2],'label'):$VALUE"
        editable="Yes"
        >
        <mlabel 
          label="%val%"
          chval="%val%"
          />
        <mlabel 
          label="%ppm%"
          chval="%ppm%"
          />
        <mlabel 
          label="%hz%"
          chval="%hz%"
          />
        <mlabel 
          label="%ht%"
          chval="%ht%"
          />
      </menu>
      <menu loc="85 40" size="125 20"
        style="PlainText"
        label="menu"
        vq="aspSel"
        vc="aspAnno('set',aspSel[2],'fontSize',$VALUE)"
        set="aspAnno('get',aspSel[2],'fontSize'):$VALUE"
        editable="Yes"
        >
        <mlabel 
          label="10"
          chval="10"
          />
        <mlabel 
          label="12"
          chval="12"
          />
        <mlabel 
          label="14"
          chval="14"
          />
        <mlabel 
          label="16"
          chval="16"
          />
        <mlabel 
          label="18"
          chval="18"
          />
        <mlabel 
          label="20"
          chval="20"
          />
        <mlabel 
          label="24"
          chval="24"
          />
        <mlabel 
          label="28"
          chval="28"
          />
        <mlabel 
          label="32"
          chval="32"
          />
        <mlabel 
          label="36"
          chval="36"
          />
        <mlabel 
          label="40"
          chval="40"
          />
      </menu>
      <label loc="11 81" size="70 20"
        style="Label1"
        label="Style"
        />
      <label loc="11 61" size="70 20"
        style="Label1"
        label="Color"
        />
      <label loc="11 41" size="70 20"
        style="Label1"
        label="Size"
        />
      <label loc="11 21" size="70 20"
        style="Label1"
        label="Text"
        />
    </group>
  </group>
</template>
