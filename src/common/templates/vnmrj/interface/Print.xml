<template name="Print.xml" element="pages" type="sample" >
  <group size="380 490"
    label="I/O"
    bg=""
    tab="yes"
    enable="yes"
    reference="cdump"
    useref="no"
    subtype="Basic"
    expanded="yes"
    >
    <group loc="10 0" size="370 110"
      style="Heading1"
      label="Printer"
      bg=""
      border="Etched"
      tab="no"
      enable="no"
      reference="Display"
      useref="no"
      subtype="Basic"
      expanded="yes"
      >
      <label loc="10 23" size="60 20"
        style="Heading1"
        label="Print to:"
        />
      <radio loc="20 50" size="60 20"
        style="Label1"
        label="Printer"
        vq="printsend"
        vc="printsend='print'"
        set="$VALUE=(printsend='print')"
        />
      <filemenu loc="80 50" size="190 20"
        style="PlainText"
        vq="plotter"
        vc="plotter='$VALUE'"
        set="$VALUE=plotter"
        file="$VALUE=userdir+'/persistence/plotters'"
        type="file"
        bg=""
        editable="No"
        statshow="yes"
        />
      <radio loc="20 80" size="50 20"
        style="Label1"
        label="File"
        vq="printsend"
        vc="printsend='file'"
        set="$VALUE=(printsend='file')"
        />
      <filebrowser loc="70 80" size="270 20"
        label="file"
        vq="printfile"
        bg="transparent"
        tab="no"
        enable="no"
        reference="filebrowser"
        useref="no"
        subtype="Basic"
        expanded="yes"
        >
        <entry loc="10 0" size="190 20"
          style="PlainText"
          vq="printfile printsend"
          vc="printfile='$VALUE'"
          set="$VALUE=printfile"
          show="if(printsend='file') then $VALUE=1 else $VALUE=-1 endif"
          bg=""
          />
        <button loc="200 0" size="60 20"
          style="Heading2"
          label="Browse..."
          vq="printsend"
          show="if(printsend='file') then $VALUE=1 else $VALUE=-1 endif"
          decor1=""
          />
      </filebrowser>
    </group>
    <group loc="10 110" size="370 380"
      style="Heading1"
      label="Printing"
      bg=""
      border="Etched"
      tab="no"
      enable="no"
      reference="Display"
      useref="no"
      subtype="Basic"
      expanded="yes"
      >
      <label loc="10 30" size="100 20"
        style="Heading1"
        label="Region"
        />
      <group loc="130 30" size="180 20"
        show="if(appmode='imaging') then $VALUE=-1 else $VALUE=1 endif"
        bg=""
        border="None"
        tab="no"
        enable="no"
        useref="no"
        subtype="Convenience"
        >
        <menu loc="0 0" size="150 20"
          style="PlainText"
          label="Select"
          vq="printregion"
          vc="printregion='$VALUE'"
          set="$VALUE=printregion"
          editable="No"
          >
          <mlabel 
            label="Graphics Area"
            chval="graphics"
            />
          <mlabel 
            label="VnmrJ Screen"
            chval="vnmrj"
            />
        </menu>
      </group>
      <group loc="130 30" size="180 20"
        show="if(appmode='imaging') then $VALUE=1 else $VALUE=-1 endif"
        bg=""
        border="None"
        tab="no"
        enable="no"
        useref="no"
        subtype="Convenience"
        >
        <menu loc="20 0" size="150 20"
          style="PlainText"
          label="Select"
          vq="printregion"
          vc="printregion='$VALUE'"
          set="$VALUE=printregion"
          editable="No"
          >
          <mlabel 
            label="Graphics Area"
            chval="graphics"
            />
          <mlabel 
            label="All Frames"
            chval="allframes"
            />
          <mlabel 
            label="Selected Frames"
            chval="frames"
            />
          <mlabel 
            label="VnmrJ Screen"
            chval="vnmrj"
            />
        </menu>
      </group>
      <label loc="10 60" size="100 20"
          style="Label1"
          label="Image Format"
          />
      <group loc="120 60" size="180 20"
        vq="printsend"
        bg=""
        tab="no"
        enable="no"
        useref="no"
        subtype="Basic"
        show="if(printsend='file') then $VALUE=1 else $VALUE=-1 endif"
        >
        <menu loc="10 0" size="150 20"
          style="PlainText"
          label="Format"
          vq="printsaveformat"
          vc="printsaveformat='$VALUE'"
          set="$VALUE=printsaveformat"
          editable="No"
          >
          <mlabel
            label="BITMAP"
            chval="bmp"
            />
          <mlabel
            label="GIF"
            chval="gif"
            />
          <mlabel
            label="JPEG"
            chval="jpg"
            />
          <mlabel
            label="PCL"
            chval="pcl"
            />
          <mlabel
            label="PDF"
            chval="pdf"
            />
          <mlabel
            label="PNG"
            chval="png"
            />
          <mlabel
            label="PPM"
            chval="ppm"
            />
          <mlabel
            label="POSTSCRIPT"
            chval="ps"
            />
          <mlabel
            label="TIFF"
            chval="tif"
            />
        </menu>
      </group>
      <group loc="120 60" size="180 20"
        vq="printsend"
        bg=""
        tab="no"
        enable="no"
        useref="no"
        subtype="Basic"
        show="if(printsend='file') then $VALUE=-1 else $VALUE=1 endif"
        >
        <menu loc="10 0" size="150 20"
          style="PlainText"
          label="Format"
          vq="printformat printsend"
          vc="printformat='$VALUE'"
          set="$VALUE=printformat"
          editable="No"
          >
          <mlabel 
            label="POSTSCRIPT"
            chval="ps"
            />
          <mlabel 
            label="PCL"
            chval="pcl"
            />
        </menu>
      </group>
      <label loc="10 90" size="100 20"
          style="Label1"
          label="Paper Size"
          />
      <menu loc="130 90" size="150 20"
          style="PlainText"
          vq="papersize"
          vc="papersize='$VALUE'"
          set="$VALUE=papersize"
          editable="No"
          >
          <mlabel
            label="Letter"
            chval="letter"
            />
          <mlabel
            label="Legal"
            chval="legal"
            />
          <mlabel
            label="Ledger"
            chval="ledger"
            />
          <mlabel
            label="11x17"
            chval="11x17"
            />
          <mlabel
            label="A4"
            chval="A4"
            />
          <mlabel
            label="A5"
            chval="A5"
            />
          <mlabel
            label="A6"
            chval="A6"
            />
          <mlabel
            label="B3"
            chval="B3"
            />
          <mlabel
            label="B4"
            chval="B4"
            />
          <mlabel
            label="B5"
            chval="B5"
            />
          <mlabel
            label="C3"
            chval="C3"
            />
          <mlabel
            label="C4"
            chval="C4"
            />
          <mlabel
            label="C5"
            chval="C5"
            />
          <mlabel
            label="C6"
            chval="C6"
            />
      </menu>
      <group loc="10 120" size="280 20"
          tab="no"
          vq="printsend"
          bg=""
          subtype="Basic"
          show="if(printsend='file') then $VALUE=1 else $VALUE=-1 endif"
          >
          <label loc="0 0" size="115 20"
            style="Heading1"
            label="Graphics Color"
            />
          <radio loc="120 0" size="50 20"
            style="Label1"
            label="Mono"
            vq="printsavecolor"
            vc="printsavecolor='mono'"
            set="$VALUE=(printsavecolor='mono')"
            />
          <radio loc="180 0" size="50 20"
            style="Label1"
            label="Color"
            vq="printsavecolor"
            vc="printsavecolor='color'"
            set="$VALUE=(printsavecolor='color')"
            />
      </group>
      <group loc="10 120" size="280 20"
          tab="no"
          vq="printsend"
          show="if(printsend='file') then $VALUE=-1 else $VALUE=1 endif"
          >
          <label loc="0 0" size="115 20"
            style="Heading1"
            label="Graphics Color"
            />
          <radio loc="120 0" size="50 20"
            style="Label1"
            label="Mono"
            vq="printcolor"
            vc="printcolor='mono'"
            set="$VALUE=(printcolor='mono')"
            />
          <radio loc="180 0" size="50 20"
            style="Label1"
            label="Color"
            vq="printcolor"
            vc="printcolor='color'"
            set="$VALUE=(printcolor='color')"
            />
      </group>
      <group loc="10 145" size="280 20"
          tab="no"
          >
          <label loc="0 0" size="120 20"
            style="Heading1"
            label="Graphics Line Width"
            />
          <entry loc="130 0" size="40 20"
            style="PlainText"
            label="1"
            vq="printlw"
            vc="printlw='$VALUE'"
            set="$VALUE=printlw"
            />
          <label loc="174 0" size="80 20"
            style="Label1"
            label="pixel"
            />
      </group>
      <group loc="10 170" size="190 20"
          tab="no"
          vq="printsend"
          show="if(printsend='file') then $VALUE=-1 else $VALUE=1 endif"
          >
         <label loc="0 0" size="120 20"
            style="Heading1"
            label="Printer Resolution"
          />
         <entry loc="130 0" size="60 20"
             style="PlainText"
             label="300"
             vq="printdpi printsend printregion"
             vc="printdpi='$VALUE'"
             set="$VALUE=printdpi"
             show="if(printregion='graphics') then $VALUE=1 else $VALUE=-1 endif"
          />
      </group>
      <group loc="10 170" size="190 20"
          tab="no"
          vq="printsend"
          show="if(printsend='file') then $VALUE=1 else $VALUE=-1 endif"
          >
         <label loc="0 0" size="120 20"
            style="Heading1"
            label="Image Resolution"
          />
         <entry loc="130 0" size="60 20"
             style="PlainText"
             label="300"
             vq="printsavedpi printsend printregion"
             vc="printsavedpi='$VALUE'"
             set="$VALUE=printsavedpi"
             show="if(printregion='graphics') then $VALUE=1 else $VALUE=-1 endif"
          />
      </group>
      <label loc="204 170" size="120 20"
          style="Label1"
          label="dots per inch"
          />
      <label loc="10 195" size="130 20"
          style="Label1"
          label="Screen Resolution is "
          />
      <label loc="140 195" size="40 20"
          style="Label1"
          vq="screendpi"
          label="85"
          set="$VALUE=screendpi"
          />
      <label loc="180 195" size="120 20"
          style="Label1"
          label="dots per inch"
          />

      <group loc="0 220" size="300 50"
        bg=""
        tab="no"
        enable="no"
        useref="no"
        subtype="Basic"
        >
        <label loc="10 0" size="100 20"
          style="Heading1"
          label="Orientation"
          />
        <radio loc="110 20" size="120 20"
          style="Label1"
          label="Portrait"
          vq="printlayout printsend"
          vc="printlayout='portrait'"
          set="$VALUE=(printlayout='portrait')"
          />
        <radio loc="110 0" size="110 20"
          style="Label1"
          label="Landscape"
          vq="printlayout printsend"
          vc="printlayout='landscape'"
          set="$VALUE=(printlayout='landscape')"
          />
      </group>
      <group loc="0 270" size="300 70"
        bg=""
        tab="no"
        enable="no"
        useref="no"
        subtype="Basic"
        >
        <label loc="10 0" size="100 20"
          style="Heading1"
          label="Size"
          />
        <radio loc="110 40" size="120 20"
          style="Label1"
          label="Quarter Page"
          vq="printsize printsend"
          vc="printsize='quarterpage'"
          set="$VALUE=(printsize='quarterpage')"
          />
        <radio loc="110 20" size="120 20"
          style="Label1"
          label="Half Page"
          vq="printsize printsend"
          vc="printsize='halfpage'"
          set="$VALUE=(printsize='halfpage')"
          />
        <radio loc="110 0" size="110 20"
          style="Label1"
          label="Full Page"
          vq="printsize printsend"
          vc="printsize='page'"
          set="$VALUE=(printsize='page')"
          />
      </group>
      <group loc="10 350" size="280 25"
        vq="printsend"
        bg=""
        tab="no"
        enable="no"
        useref="no"
        subtype="Basic"
        show="if(printsend='file') then $VALUE=-1 else $VALUE=1 endif"
        >
        <button loc="80 0" size="150 20"
          style="Heading2"
          label="Print"
          vc="jprint"
          decor1=""
        />
      </group>
      <group loc="10 350" size="280 25"
        vq="printsend"
        bg=""
        tab="no"
        enable="no"
        useref="no"
        subtype="Basic"
        show="if(printsend='file') then $VALUE=1 else $VALUE=-1 endif"
        >
        <button loc="80 0" size="150 20"
          style="Heading2"
          label="Save"
          vc="jprint"
          decor1=""
          />
      </group>
    </group>
  </group>
</template>
