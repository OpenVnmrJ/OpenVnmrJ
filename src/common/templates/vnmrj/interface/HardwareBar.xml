<template element="panel" type="system" name="HardwareBar" >
  <group loc="5 5" size="1260 40"
    border="None"
    side="Top"
    justify="Left"
    tab="false"
    >
    <trashcan loc="5 2" size="30 35"/>
    <statusbutton loc="50 2" size="60 37"
      style="Heading2"
      maxmark="true"
      values="1000"
      name="Chart-Temp"
      title="Temp"
      statkey="vt"
      statcol="fg"
      enabled="yes"
	color1="ffffff"
	color2="000000"
      />
    <statusbutton loc="110 2" size="60 37"
      style="Heading2"
      maxmark="true"
      values="1000"
      name="Chart-Spin"
      title="Spin"
      statkey="spin"
      statcol="fg"
      enabled="yes"
      color1="ffffff"
      color2="000000"
      />
    <statusbutton loc="170 2" size="60 37"
      style="Heading2"
      maxmark="true"
      values="1000"
      name="Chart-Lock"
      title="Lock"
      statkey="lock"
      statcol="fg"
      enabled="yes"
      color1="ffffff"
      color2="000000"
      />
    <group loc="230 2" size="60 37"
      style="Heading2"
      border="Etched"
      side="Top"
      justify="Left"
      tab="no"
      useref="no"
      >
    <label loc="0 1" size="60 18"
        style="Heading2"
        label="Sample"
        justify="Center"
        />
    <textmessage loc="20 18" size="40 18"
      style="Interactive"
      statpar="sample"
      justify="Center"
      />
    </group>
    <button loc="310 0" size="110 20"
      style="Heading2"
      label="Probe"
      toolTip="Select/Edit/Calibrate Probe"
      vc="ProbePopup"
      enabled="yes"
      />
    <group loc="309 19" size="112 22"
      style="PlainText"
      border="none"
      side="Top"
      justify="Left"
      tab="no"
      useref="no"
      >
    </group>
    <textmessage loc="315 20" size="105 20"
      style="PlainText"
      vq="probe"
      set="$VALUE=probe"
      />
    <group loc="440 5" size="222 27"
      vq="system"
      show="$SHOW=(system='spectrometer')"
      bg="transparent"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      useref="no"
      >
      <expmeter loc="0 0" size="220 27"
        style="PlainText"
        />
      </group>
    <messagebox loc="680 5" size="580 27"
      style="PlainText"
      />
  </group>
</template>
