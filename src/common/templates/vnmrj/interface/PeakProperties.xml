<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<template name="PeakProperties" element="groups" type="generic" >
  <group size="550 170"
    style="Heading1"
    label="Peaks"
    border="Etched"
    tab="no"
    enable="no"
    reference="PeakProperties"
    useref="no"
    subtype="Titled"
    expanded="yes"
    rows="1"
    columns="1"
    >
    <check loc="8 135" size="140 25"
      style="PlainText"
      label="Show Links"
      vq="peakProperty"
      vc="peakProperty[5]='0' aspPeaks('nolink',0)"
      vc2="peakProperty[5]='1' aspPeaks('nolink',1)"
      set="$VALUE=(peakProperty[5]='0')"
      />
    <check loc="8 115" size="140 25"
      style="PlainText"
      label="Show Marks"
      vq="peakProperty"
      vc="peakProperty[4]='1' aspPeaks('mark',1)"
      vc2="peakProperty[4]='0' aspPeaks('mark',0)"
      set="$VALUE=(peakProperty[4]='1')"
      />
    <label loc="13 95" size="75 20"
      style="Label2"
      label="Show Values"
      />
    <check loc="248 95" size="140 25"
      style="PlainText"
      label="Vertical"
      vq="peakProperty"
      vc="peakProperty[3]='1' aspPeaks('vert',1)"
      vc2="peakProperty[3]='0' aspPeaks('vert',0)"
      set="$VALUE=(peakProperty[3]='1')"
      />
    <entry loc="128 95" size="115 20"
      vq="peakProperty"
      vc="peakProperty[1]='$VALUE'"
      set="$VALUE=peakProperty[1]"
      key="PeakMarkThickness"
      keyval="1"
      />
    <colorchooser loc="8 40" size="255 20"
      label="Peak Label"
      vc="java('display style','PeakLabelColor $VALUE')"
      set="PeakLabelColor"
      savekids="false"
      key="PeakLabelColor"
      keyval="0x13CAD6"
      display="System"
      />
    <colorchooser loc="8 20" size="255 20"
      label="Peak Numbers"
      vc="java('display style','PeakNumColor $VALUE')"
      set="PeakNumColor"
      savekids="false"
      key="PeakNumColor"
      keyval="0x90D2FF"
      display="System"
      />
    <colorchooser loc="8 60" size="255 20"
      label="Peak Mark"
      vc="java('display style','graphics269Color $VALUE')"
      set="graphics269Color"
      savekids="false"
      key="graphics269Color"
      keyval="0x707070"
      display="System"
      />
    <entry loc="268 60" size="50 20"
      vc="java('display style','PeakMarkThickness=$VALUE')"
      key="PeakMarkThickness"
      keyval="1"
      />
    <entry loc="268 40" size="50 20"
      vc="java('display style','PeakLabelSize=$VALUE')"
      key="PeakNumSize"
      keyval="12"
      />
    <entry loc="268 20" size="50 20"
      vc="java('display style','PeakNumSize=$VALUE')"
      key="PeakNumSize"
      keyval="12"
      />
    <stylechooser loc="323 40" size="80 20"
      style="PlainText"
      vc="java('display style','PeakLabelStyle=$VALUE')"
      set="PeakLabelStyle"
      chval="Bold-Italic"
      key="PeakLabelStyle"
      keyval="Bold-Italic"
      />
    <stylechooser loc="323 20" size="80 20"
      style="PlainText"
      vc="java('display style','PeakNumStyle=$VALUE')"
      set="PeakNumStyle"
      chval="Bold"
      key="PeakNumStyle"
      keyval="Bold"
      />
    <fontchooser loc="408 40" size="120 20"
      style="PlainText"
      vc="java('display style','PeakLabelFont=$VALUE')"
      set="PeakLabelFont"
      chval="Dialog"
      key="PeakLabelFont"
      keyval="Dialog"
      display="Selected"
      />
    <fontchooser loc="408 20" size="120 20"
      style="PlainText"
      vc="java('display style','PeakNumFont=$VALUE')"
      set="PeakNumFont"
      chval="Dialog"
      key="PeakNumFont"
      keyval="Dialog"
      display="Selected"
      />
  </group>
</template>
