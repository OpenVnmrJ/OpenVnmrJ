<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<template element="panels" type="acquisition" >
  <group loc="0 0" size="245 125"
    border="None"
    tab="no"
    enable="no"
    reference="AnnoLineProperties"
    useref="no"
    subtype="Untitled"
    expanded="yes"
    rows="1"
    columns="1"
    >
    <group loc="5 10" size="235 110"
      style="Heading1"
      label="Line"
      border="Etched"
      tab="no"
      enable="no"
      reference="AnnoProperty"
      useref="no"
      subtype="Titled"
      expanded="yes"
      rows="1"
      columns="1"
      >
      <menu loc="10 80" size="210 20"
        style="Label1"
        label=""
        vq="aspSel"
        vc="aspCmd('setmm',$VALUE)"
        set="aspAnno('get',aspSel[2],'mm'):$VALUE"
        editable="No"
        >
        <mlabel
        label="Do not pin to canvas"
        chval="0"
        />
      <mlabel
        label="Pin to canvas"
        chval="1"
        />
      <mlabel
        label="Pin vertical to canvas"
        chval="2"
        />
      <mlabel
        label="Pin vertical to trace"
        chval="3"
        />
      </menu>
      <slider loc="100 60" size="130 20"
        style="PlainText"
        vq="aspSel"
        vc="aspAnno('set',aspSel[2],'transparency',$VALUE)"
        set="aspAnno('get',aspSel[2],'transparency'):$v format($v,0,0):$VALUE"
        digital="true"
        min="0"
        max="90"
        incr1="1"
        incr2="10"
        digits="3"
        />
      <menu loc="100 40" size="125 20"
        style="PlainText"
        label="menu"
        vq="aspSel"
        vc="aspAnno('set',aspSel[2],'lineThickness',$VALUE)"
        set="aspAnno('get',aspSel[2],'lineThickness'):$VALUE"
        editable="Yes"
        >
        <mlabel 
          label="1"
          chval="1"
          />
        <mlabel 
          label="2"
          chval="2"
          />
        <mlabel 
          label="3"
          chval="3"
          />
        <mlabel 
          label="4"
          chval="4"
          />
        <mlabel 
          label="5"
          chval="5"
          />
        <mlabel 
          label="6"
          chval="6"
          />
        <mlabel 
          label="7"
          chval="7"
          />
        <mlabel 
          label="8"
          chval="8"
          />
        <mlabel 
          label="9"
          chval="9"
          />
        <mlabel 
          label="10"
          chval="10"
          />
      </menu>
      <colorchooser loc="100 20" size="125 20"
        style="PlainText"
        vq="aspSel"
        vc="aspAnno('set',aspSel[2],'lineColor','$VALUE') aspProperty[9]='$VALUE'"
        set="aspAnno('get',aspSel[2],'lineColor'):aspProperty[9] $VALUE=aspProperty[9]"
        savekids="false"
        keyval="blue"
        display="System"
        />
      <label loc="10 60" size="90 20"
        style="Label1"
        label="Transparency"
        />
      <label loc="10 40" size="70 20"
        style="Label1"
        label="Thickness"
        />
      <label loc="10 20" size="70 20"
        style="Label1"
        label="Color"
        />
    </group>
  </group>
</template>
