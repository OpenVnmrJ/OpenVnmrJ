<template name="TextEditor" element="pages" type="sample" >
  <group size="300 250"
    style="Heading1"
    label="Text"
    bg=""
    border="None"
    side="Top"
    justify="Left"
    tab="yes"
    enable="no"
    reference="TextEditor"
    useref="no"
    subtype="Convenience"
    expanded="yes"
    >
    <group loc="10 20" size="280 220"
      label="New Text"
      bg=""
      border="etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      reference="Tool"
      useref="no"
      subtype="Major"
      expanded="yes"
      >
      <textfile loc="0 70" size="280 150"
        style="PlainText"
        vq="mfText"
        set="$VALUE=userdir + '/mfEditText'"
        editable="yes"
        wrap="yes"
        />
      <menu loc="110 30" size="80 20"
        style="PlainText"
        label="font size"
        vq="mfTextFontSize"
        vc="vnmrjcmd('okButton') mfTextFontSize=$VALUE mfaction('saveNewText')"
        set="$VALUE=mfTextFontSize"
        editable="No"
        >
        <mlabel 
          label="8"
          chval="8"
          />
        <mlabel 
          label="10"
          chval="10"
          />
        <mlabel 
          label="12"
          chval="12"
          />
        <mlabel 
          label="14"
          chval="14"
          />
        <mlabel 
          label="16"
          chval="16"
          />
        <mlabel 
          label="18"
          chval="18"
          />
        <mlabel 
          label="24"
          chval="24"
          />
        <mlabel 
          label="32"
          chval="32"
          />
        <mlabel 
          label="resizable"
          chval="0"
          />
      </menu>
      <colorchooser loc="10 30" size="100 20"
        style="plain"
        vq="mfTextColor"
        vc="mfTextColor='$VALUE'"
        set="$VALUE=mfTextColor"
        savekids="false"
        keyval="red"
        display="System"
        />
      <menu loc="190 30" size="80 20"
        style="PlainText"
        label="menu"
        vq="mfTextStyle"
        vc="mfTextStyle='$VALUE'"
        set="$VALUE=mfTextStyle"
        editable="No"
        >
        <mlabel
          label="Plain"
          chval="Plain"
          />
        <mlabel
          label="Bold"
          chval="Bold"
          />
        <mlabel
          label="PlainItalic"
          chval="PlainItalic"
          />
        <mlabel
          label="BoldItalic"
          chval="BoldItalic"
          />
      </menu>
    </group>
  </group>
</template>
