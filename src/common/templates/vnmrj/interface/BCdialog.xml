<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<template name="BCdialog" element="groups" type="generic" >
  <group size="330 265"
    border="None"
    tab="no"
    enable="no"
    reference="BCdialog"
    useref="no"
    subtype="Untitled"
    expanded="yes"
    rows="1"
    columns="1"
    >
    <group loc="5 3" size="320 35"
      border="None"
      tab="no"
      enable="no"
      useref="no"
      subtype="Untitled"
      rows="1"
      columns="1"
      >
      <radio loc="150 7" size="165 25"
        style="PlainText"
        label="Use CWT baseline mask"
        vq="bcmode"
        vc="bcmode[1]=0 aspRegion('CWT')"
        vc2="bcmode[1]=1 aspRegion(bcmode[5])"
        set="$VALUE=(bcmode[1]=0)"
        />
      <radio loc="0 7" size="150 25"
        style="PlainText"
        label="Use baseline points"
        vq="bcmode"
        vc="bcmode[1]=1 aspRegion(bcmode[5])"
        vc2="bcmode[1]=0 aspRegion('CWT')"
        set="$VALUE=(bcmode[1]&gt;0)"
        />
    </group>
    <group loc="0 38" size="320 60"
      label="CWT"
      vq="bcmode"
      show="$VALUE=(bcmode[1]=0)"
      border="None"
      tab="no"
      enable="no"
      useref="no"
      subtype="Untitled"
      rows="1"
      columns="1"
      >
      <slider loc="65 30" size="250 20"
        style="PlainText"
        vq="bcmode"
        vc="bcmode[3]=$VALUE aspRegion('CWT')"
        set="$VALUE=bcmode[3]"
        digital="true"
        min="1"
        max="100000"
        incr1="1"
        incr2="50"
        digits="6"
        statpar="bcmode"
        drag="50"
        tooltip="Whittaker smooth factor"
        />
      <slider loc="65 10" size="250 20"
        style="PlainText"
        vq="bcmode"
        vc="bcmode[2]=$VALUE aspRegion('CWT')"
        set="$VALUE=bcmode[2]"
        digital="true"
        min="0.05"
        max="200"
        incr1="1"
        incr2="2"
        digits="6"
        statpar="bcmode"
        drag="50"
        tooltip="CWT scaling factor"
        />
      <label loc="13 10" size="50 20"
        style="Label1"
        label="Scaling"
        />
      <label loc="13 30" size="50 20"
        style="Label1"
        label="Smooth"
        />
    </group>
    <group loc="5 38" size="320 200"
      label="BC points"
      vq="bcmode"
      show="$VALUE=(bcmode[1]&gt;0)"
      border="None"
      tab="yes"
      enable="no"
      useref="yes"
      subtype="Untitled"
      rows="1"
      columns="1"
      >
      <group loc="5 5" size="310 110"
        style="Heading2"
        label="Baseline Points"
        border="Etched"
        tab="no"
        enable="no"
        useref="no"
        subtype="Titled"
        rows="1"
        columns="1"
        >
        <group loc="5 45" size="295 60"
          border="None"
          tab="no"
          enable="no"
          useref="no"
          subtype="Untitled"
          rows="1"
          columns="1"
          >
          <button loc="225 35" size="55 20"
            style="Heading2"
            label="Clear"
            vc="aspRegion('clear')"
            bg="transparent"
            decor1="yes"
            halignment="Center"
            valignment="Center"
            />
          <label loc="5 5" size="65 20"
            style="Label1"
            label="Add points"
            />
          <label loc="5 30" size="120 20"
            style="Label1"
            label="Modify/Delete points"
            />
          <group loc="135 30" size="35 25"
            vq="aspMode"
            show="$VALUE=(aspMode=1)"
            border="None"
            tab="no"
            enable="no"
            useref="no"
            subtype="Untitled"
            rows="1"
            columns="1"
            >
            <button loc="0 0" size="25 25"
              style="Heading2"
              vc="aspSetState(1)"
              bg="transparent"
              decor1="yes"
              icon="Select_down.png"
              halignment="Center"
              valignment="Center"
              />
          </group>
          <group loc="135 30" size="30 30"
            vq="aspMode"
            show="$VALUE=(aspMode&lt;&gt;1)"
            border="None"
            tab="no"
            enable="no"
            useref="no"
            subtype="Untitled"
            rows="1"
            columns="1"
            >
            <button loc="0 0" size="25 25"
              style="Heading2"
              vc="aspSetState(1)"
              bg="transparent"
              decor1="yes"
              icon="Select_up.png"
              halignment="Center"
              valignment="Center"
              />
          </group>
          <group loc="125 0" size="35 35"
            vq="aspMode"
            show="$VALUE=(aspMode&lt;&gt;38)"
            border="None"
            tab="no"
            enable="no"
            useref="no"
            subtype="Untitled"
            rows="1"
            columns="1"
            >
            <button loc="11 5" size="25 25"
              style="Heading2"
              vc="aspSetState(38)"
              bg="transparent"
              decor1="yes"
              icon="aippoint.gif"
              halignment="Center"
              valignment="Center"
              />
          </group>
          <group loc="130 0" size="40 30"
            vq="aspMode"
            show="$VALUE=(aspMode=38)"
            border="None"
            tab="no"
            enable="no"
            useref="no"
            subtype="Untitled"
            rows="1"
            columns="1"
            >
            <button loc="5 5" size="25 25"
              style="Heading2"
              vc="aspSetState(38)"
              bg="transparent"
              decor1="yes"
              icon="aippointon.gif"
              halignment="Center"
              valignment="Center"
              />
          </group>
        </group>
        <group loc="5 20" size="280 25"
          border="None"
          tab="no"
          enable="no"
          useref="no"
          subtype="Untitled"
          rows="1"
          columns="1"
          >
          <slider loc="70 0" size="205 20"
            style="PlainText"
            vq="bcmode"
            vc="bcmode[5]=$VALUE aspRegion($VALUE)"
            set="$VALUE=bcmode[5]"
            digital="true"
            min="10"
            max="100"
            incr1="1"
            incr2="2"
            digits="4"
            statpar="bcmode"
            drag="100"
            tooltip="Number of baseline points"
            />
          <label loc="1 0" size="70 20"
            style="Label1"
            label="# of points"
            />
        </group>
      </group>
      <group loc="5 120" size="310 75"
        style="Heading2"
        label="Baseline Model"
        border="Etched"
        tab="no"
        enable="no"
        reference="BaselineModel"
        useref="no"
        subtype="Titled"
        expanded="yes"
        rows="1"
        columns="1"
        >
        <menu loc="95 20" size="205 20"
          style="PlainText"
          label="menu"
          vq="bcmode"
          vc="bcmode[1]=$VALUE aspRegion('bm')"
          set="$VALUE=bcmode[1]"
          editable="No"
          >
          <mlabel 
            label="Spline"
            chval="1"
            />
          <mlabel 
            label="Polynomial"
            chval="2"
            />
          <mlabel 
            label="Whittaker smoother"
            chval="3"
            />
        </menu>
        <label loc="10 20" size="85 20"
          style="Label1"
          label="Select method"
          />
        <group loc="5 40" size="295 35"
          vq="bcmode"
          show="$VALUE=(bcmode[1]=2)"
          border="None"
          tab="no"
          enable="no"
          useref="no"
          subtype="Untitled"
          rows="1"
          columns="1"
          >
          <label loc="5 7" size="45 20"
            style="Label1"
            label="Order"
            />
          <slider loc="55 5" size="220 20"
            style="PlainText"
            vq="bcmode"
            vc="bcmode[4]=$VALUE aspRegion('bm')"
            set="$VALUE=bcmode[4]"
            digital="true"
            min="1"
            max="20"
            incr1="1"
            incr2="2"
            digits="6"
            statpar="bcmode"
            drag="50"
            tooltip="Polynormial order"
            />
        </group>
        <group loc="5 40" size="300 30"
          vq="bcmode"
          show="$VALUE=(bcmode[1]=3)"
          border="None"
          tab="no"
          enable="no"
          useref="no"
          subtype="Untitled"
          rows="1"
          columns="1"
          >
          <slider loc="55 5" size="205 20"
            style="PlainText"
            vq="bcmode"
            vc="bcmode[7]=$VALUE aspRegion('bm')"
            set="$VALUE=bcmode[7]"
            digital="true"
            min="1"
            max="1000"
            incr1="1"
            incr2="2"
            digits="6"
            statpar="bcmode"
            drag="100"
            tooltip="Whittaker smooth factor"
            />
          <label loc="5 5" size="45 20"
            style="Label1"
            label="Factor"
            />
        </group>
      </group>
    </group>
    <button loc="175 243" size="65 20"
      style="Heading2"
      label="Apply"
      vc="aspRegion('doBC')"
      bg="transparent"
      decor1="yes"
      halignment="Center"
      valignment="Center"
      />
    <button loc="240 243" size="65 20"
      style="Heading2"
      label="Cancel"
      vc="aspRegion('undoBC')"
      bg="transparent"
      decor1="yes"
      halignment="Center"
      valignment="Center"
      />
  </group>
</template>
