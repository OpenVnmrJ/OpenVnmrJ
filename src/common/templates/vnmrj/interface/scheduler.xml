<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<template name="scheduler" element="groups" type="acquisition" >
  <group size="480 240"
    border="None"
    tab="no"
    enable="no"
    reference="scheduler"
    useref="no"
    subtype="Convenience"
    expanded="yes"
    >
    <group loc="5 10" size="475 120"
      style="Heading1"
      label="Define sample to shim"
      border="Etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      reference="PROTONacq"
      useref="no"
      subtype="Titled"
      expanded="yes"
      >
      <button loc="150 85" size="150 25"
        style="Heading2"
        label="Create CSV file"
        vc="shim_scheduler('create')"
        />
      <button loc="300 85" size="150 25"
        style="Heading2"
        label="Delete CSV file"
        vc="shim_scheduler('delete')"
        />
      <label loc="330 25" size="55 25"
        style="Label1"
        label="Solvent"
        />
      <label loc="170 25" size="100 25"
        style="Label1"
        label="ShimMethod"
        />
      <menu loc="165 55" size="160 20"
        style="PlainText"
        label="menu"
        vq="shim_sched_meth"
        vc="shim_sched_meth='$VALUE'"
        set="$VALUE=shim_sched_meth"
        editable="No"
        >
        <mlabel 
          label="LongLineshape"
          chval="LongLineshape"
          />
        <mlabel 
          label="FastLineshape"
          chval="FastLineshape"
          />
        <mlabel 
          label="fidshim_lineshape"
          chval="fidshim_lineshape"
          />
        <mlabel 
          label="fidshim_lineshape_fast"
          chval="fidshim_lineshape_fast"
          />
        <mlabel 
          label="Lineshape-No shim"
          chval="Lineshape"
          />
      </menu>
      <filemenu loc="330 55" size="120 20"
        style="PlainText"
        vq="shim_sched[7]"
        vc="shim_sched[7]='$VALUE' setref"
        set="format(shim_sched[7],'lower'):$VALUE"
        file="/vnmr/solventlist"
        type="file"
        editable="No"
        statshow="yes"
        elastic="no"
        display="yes"
        />
      <entry loc="115 55" size="40 20"
        style="PlainText"
        vq="shim_sched[1]"
        vc="shim_sched[1]='$VALUE'"
        set="$VALUE=shim_sched[1]"
        />
      <entry loc="10 55" size="100 20"
        style="PlainText"
        vq="shim_sched[6]"
        vc="shim_sched[6]='$VALUE'"
        set="$VALUE=shim_sched[6]"
        />
      <label loc="110 25" size="65 25"
        style="Label1"
        label="Position"
        />
      <label loc="10 25" size="100 25"
        style="Label1"
        label="Samplename"
        />
    </group>
    <group loc="5 140" size="475 100"
      style="Heading1"
      label="Schedule shimming time"
      vq="shim_sched"
      show="exists('Shim.csv','csvlib'):$VALUE"
      border="Etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      reference="PROTONacq"
      useref="no"
      subtype="Titled"
      expanded="yes"
      >
      <button loc="300 65" size="150 25"
        style="Heading2"
        label="Cancel shim service"
        vc="shim_scheduler('cancel')"
        />
      <button loc="150 65" size="150 25"
        style="Heading2"
        label="Schedule shim service"
        vc="shim_scheduler('schedule')"
        />
      <entry loc="345 37" size="40 20"
        style="PlainText"
        vq="shim_sched[3]"
        vc="shim_sched[3]='$VALUE'"
        set="$VALUE=shim_sched[3]"
        />
      <label loc="300 37" size="55 20"
        style="Label1"
        label="Minute"
        justify="Left"
        />
      <entry loc="230 37" size="40 20"
        style="PlainText"
        vq="shim_sched[2]"
        vc="shim_sched[2]='$VALUE'"
        set="$VALUE=shim_sched[2]"
        />
      <label loc="195 37" size="45 20"
        style="Label1"
        label="Hour"
        justify="Left"
        />
      <menu loc="50 37" size="125 20"
        style="PlainText"
        label="menu"
        vq="shim_sched_day"
        vc="shim_sched_day='$VALUE'"
        set="$VALUE=shim_sched_day"
        editable="No"
        >
        <mlabel 
          label="Once"
          chval="once"
          />
        <mlabel 
          label="Monday"
          chval="mon"
          />
        <mlabel 
          label="Tuesday"
          chval="tue"
          />
        <mlabel 
          label="Wednesday"
          chval="wed"
          />
        <mlabel 
          label="Thursday"
          chval="thurs"
          />
        <mlabel 
          label="Friday"
          chval="fri"
          />
        <mlabel 
          label="Saturday"
          chval="sat"
          />
        <mlabel 
          label="Sunday"
          chval="sun"
          />
        <mlabel 
          label="Everyday"
          chval="all"
          />
      </menu>
      <label loc="20 37" size="40 20"
        style="Label1"
        label="Day"
        justify="Left"
        />
    </group>
  </group>
</template>
