<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<template name="bbxsetup" element="groups" type="acquisition" >
  <group size="395 225"
    bg=""
    border="None"
    tab="no"
    enable="no"
    reference="bbxsetup"
    useref="no"
    subtype="Convenience"
    expanded="yes"
    >
    <label loc="255 35" size="95 25"
      style="Heading1"
      label="[Maximum: 9]"
      justify="Center"
      />
    <label loc="10 60" size="110 20"
      style="Label1"
      label="Select to Add:"
      />
    <filemenu loc="35 80" size="115 20"
      style="PlainText"
      vq="CPbbxvals"
      vq2="CPbbxvals"
      vc="CPbbxvals[2]='$VALUE' CPbbxvals[3]=''"
      set="$VALUE=CPbbxvals[2] "
      file="$VALUE=userdir+'/persistence/bbxexp_no'"
      type="file"
      bg=""
      editable="No"
      statshow="yes"
      />
    <button loc="155 80" size="80 20"
      style="Heading2"
      label="Add"
      vq="CPbbxvals"
      vc="blackbox('add',CPbbxvals[2])"
      show="$ENABLE=(CPbbxvals[2]&lt;&gt;'')*2-1"
      decor1=""
      />
    <label loc="10 110" size="110 20"
      style="Label1"
      label="Select to Remove:"
      />
    <button loc="155 130" size="80 20"
      style="Heading2"
      label="Remove"
      vq="CPbbxvals"
      vc="blackbox('delete',CPbbxvals[3])"
      show="$ENABLE=(CPbbxvals[3]&lt;&gt;'')*2-1"
      decor1=""
      />
    <filemenu loc="35 130" size="115 20"
      style="PlainText"
      vq="CPbbxvals"
      vq2="CPbbxvals"
      vc="CPbbxvals[3]='$VALUE' CPbbxvals[2]=''"
      set="$VALUE=CPbbxvals[3]"
      file="$VALUE=userdir+'/persistence/bbxexp_yes'"
      type="file"
      bg=""
      editable="No"
      statshow="yes"
      />
    <button loc="80 185" size="135 25"
      style="Heading2"
      label="Save Selections"
      vq="CPbbxvals"
      vc="blackbox('save')"
      bg=""
      decor1=""
      />
    <textfile loc="250 60" size="105 150"
      style="PlainText"
      vq="userdir CPbbxvals"
      set="$VALUE=userdir+'/persistence/bbxpanels'"
      editable="no"
      wrap="no"
      />
    <label loc="10 0" size="375 25"
      style="Label1"
      label="Experiments for Simplified Interface"
      justify="Center"
      />
  </group>
</template>
