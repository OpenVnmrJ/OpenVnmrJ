<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<template element="panels" type="acquisition" >
  <group loc="0 0" size="715 320"
    style="Heading1"
    label="FIDDLE"
    border="None"
    side="Top"
    justify="Left"
    tab="yes"
    enable="no"
    reference="fiddle"
    useref="no"
    subtype="Untitled"
    expanded="yes"
    rows="1"
    columns="1"
    >
    <group loc="5 5" size="700 295"
      border="None"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      reference="fn"
      useref="no"
      subtype="Untitled"
      expanded="yes"
      rows="1"
      columns="1"
      >
      <textmessage loc="200 250" size="490 20"
        style="Info"
        set="dofiddle('checkname'):$VALUE"
        />
      <check loc="15 250" size="195 20"
        style="Label1"
        label="Write out corrected data as"
        vq="fiddle_writeflg"
        vc="fiddle_writeflg='y'"
        vc2="fiddle_writeflg='n'"
        set="$VALUE=(fiddle_writeflg='y')"
        />
      <button loc="180 215" size="170 25"
        style="Heading2"
        label="Display FIDDLE manual"
        vc="man('fiddle') vnmrjcmd('setpage','Process','Text Output')"
        decor1="yes"
        halignment="Center"
        valignment="Center"
        />
      <button loc="15 215" size="160 25"
        style="Heading2"
        label="Do FIDDLE"
        vc="dofiddle"
        decor1="yes"
        halignment="Center"
        valignment="Center"
        />
      <group loc="5 105" size="355 100"
        style="Heading1"
        label="Reference line"
        border="Etched"
        side="Top"
        justify="Left"
        tab="no"
        enable="no"
        reference="ReferenceLine"
        useref="no"
        subtype="Major"
        expanded="yes"
        rows="1"
        columns="1"
        >
        <group loc="5 20" size="345 75"
          border="None"
          side="Top"
          justify="Left"
          tab="no"
          enable="no"
          reference="ds_selfrq"
          useref="no"
          subtype="Untitled"
          expanded="yes"
          rows="1"
          columns="1"
          >
          <button loc="170 50" size="170 20"
            style="Heading2"
            label="Show reference line info"
            vq="rfl rfp"
            vc="dofiddle('showref')"
            decor1="yes"
            halignment="Center"
            valignment="Center"
            />
          <button loc="170 25" size="170 20"
            style="Heading2"
            label="Expand/full"
            vc="ds('expand')"
            decor1="yes"
            halignment="Center"
            valignment="Center"
            />
          <button loc="5 50" size="160 20"
            style="Heading2"
            label="Select"
            vc="if crmode='c' then write('error','Use 2 cursors') else dofiddle('selectref') endif "
            decor1="yes"
            halignment="Center"
            valignment="Center"
            />
          <button loc="5 25" size="160 20"
            style="Heading2"
            label="Box/cursor"
            vc="ds('toggle')"
            decor1="yes"
            halignment="Center"
            valignment="Center"
            />
          <label loc="5 0" size="335 20"
            style="Info"
            label="Select reference signal (singlet) using cursors"
            justify="Left"
            />
        </group>
      </group>
      <group loc="5 0" size="355 100"
        style="Heading1"
        label="Data"
        border="Etched"
        side="Top"
        justify="Left"
        tab="no"
        enable="no"
        reference="Data"
        useref="no"
        subtype="Major"
        expanded="yes"
        rows="1"
        columns="1"
        >
        <label loc="40 45" size="195 20"
          style="Label1"
          label="Acquired complex points (np/2)"
          justify="Left"
          />
        <check loc="15 20" size="135 20"
          style="Label1"
          label="1D FT size (fn/2)"
          vq="fn"
          vc="on('fn')"
          vc2="off('fn')"
          set="on('fn'):$VALUE"
          />
        <menu loc="150 20" size="100 20"
          style="PlainText"
          label="menu"
          vq="fn"
          vc="fn=$VALUE*2"
          set="$VALUE=fn/2"
          show="on('fn'):$VALUE"
          editable="No"
          >
          <mlabel 
            label="4k"
            chval="4096"
            />
          <mlabel 
            label="8k"
            chval="8192"
            />
          <mlabel 
            label="16k"
            chval="16384"
            />
          <mlabel 
            label="32k"
            chval="32768"
            />
          <mlabel 
            label="64k"
            chval="65536"
            />
          <mlabel 
            label="128k"
            chval="131072"
            />
          <mlabel 
            label="256k"
            chval="262144"
            />
          <mlabel 
            label="512k"
            chval="524288"
            />
        </menu>
        <textmessage loc="240 45" size="75 20"
          style="Info"
          vq="np"
          set="$VALUE=np/2"
          digits="0"
          />
        <button loc="175 70" size="170 20"
          style="Heading2"
          label="Do weighted FT"
          vc="wft"
          decor1="yes"
          halignment="Center"
          valignment="Center"
          />
        <button loc="10 70" size="160 20"
          style="Heading2"
          label="Do FT"
          vc="ft"
          decor1="yes"
          halignment="Center"
          valignment="Center"
          />
      </group>
      <group loc="365 0" size="260 235"
        style="Heading1"
        label="Ideal lineshape"
        border="Etched"
        side="Top"
        justify="Left"
        tab="no"
        enable="no"
        reference="Weighting"
        useref="no"
        subtype="Major"
        expanded="yes"
        rows="1"
        columns="1"
        >
        <button loc="25 70" size="200 20"
          style="Heading2"
          label="Interactive weighting"
          vc="wti"
          decor1="yes"
          halignment="Center"
          valignment="Center"
          />
        <label loc="10 40" size="185 20"
          style="Info"
          label="standard weighting functions"
          />
        <label loc="10 20" size="220 25"
          style="Info"
          label="Define the ideal lineshape using the"
          />
        <check loc="10 205" size="210 20"
          style="Label1"
          label="Include TMS satellite signals"
          vq="fiddle_tmsflg"
          vc="fiddle_tmsflg='y'"
          vc2="fiddle_tmsflg='n'"
          set="$VALUE=(fiddle_tmsflg='y')"
          />
        <group loc="25 90" size="200 110"
          style="PlainText"
          border="None"
          side="Top"
          justify="Left"
          tab="no"
          enable="no"
          useref="no"
          subtype="Untitled"
          rows="1"
          columns="1"
          >
          <label loc="10 5" size="105 20"
            style="Label1"
            label="line broadening"
            justify="Left"
            />
          <entry loc="120 85" size="50 20"
            style="PlainText"
            vq="gf gfs"
            vc="gfs=$VALUE"
            set="$VALUE=gfs"
            show="onparams('gf','gfs'):$VALUE"
            disable="Grayed out"
            />
          <entry loc="120 65" size="50 20"
            style="PlainText"
            vq="gf"
            vc="gf=$VALUE"
            set="$VALUE=gf"
            show="on('gf'):$VALUE"
            disable="Grayed out"
            />
          <entry loc="120 45" size="50 20"
            style="PlainText"
            vq="sb sbs"
            vc="sbs=$VALUE"
            set="$VALUE=sbs"
            show="onparams('sb','sbs'):$VALUE"
            disable="Grayed out"
            />
          <entry loc="120 25" size="50 20"
            style="PlainText"
            vq="sb"
            vc="sb=$VALUE"
            set="$VALUE=sb"
            show="on('sb'):$VALUE"
            disable="Grayed out"
            />
          <entry loc="120 5" size="50 20"
            style="PlainText"
            vq="lb"
            vc="lb=$VALUE"
            set="$VALUE=lb"
            show="on('lb'):$VALUE"
            digits="1"
            disable="Grayed out"
            />
          <check loc="170 5" size="20 20"
            style="Label1"
            vq="lb"
            vc="lb='y'"
            vc2="lb='n'"
            set="on('lb'):$VALUE"
            />
          <check loc="170 25" size="20 20"
            style="Label1"
            vq="sb sbs"
            vc="sb='y'"
            vc2="sb='n'"
            set="on('sb'):$VALUE"
            />
          <check loc="170 45" size="20 20"
            style="Label1"
            vq="sbs"
            vc="sbs='y'"
            vc2="sbs='n'"
            set="on('sbs'):$VALUE"
            />
          <check loc="170 65" size="20 20"
            style="Label1"
            vq="gf gfs"
            vc="gf='y'"
            vc2="gf='n'"
            set="on('gf'):$VALUE"
            />
          <check loc="170 85" size="20 20"
            style="Label1"
            vq="gfs"
            vc="gfs='y'"
            vc2="gfs='n'"
            set="on('gfs'):$VALUE"
            />
          <label loc="20 85" size="60 20"
            style="Label1"
            label="shift"
            justify="Left"
            />
          <label loc="10 65" size="80 20"
            style="Label1"
            label="gaussian"
            justify="Left"
            />
          <label loc="20 45" size="60 20"
            style="Label1"
            label="shift"
            justify="Left"
            />
          <label loc="20 25" size="80 20"
            style="Label1"
            label="sinebell"
            justify="Left"
            />
        </group>
      </group>
    </group>
  </group>
</template>
