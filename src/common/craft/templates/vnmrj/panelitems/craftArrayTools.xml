<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<template name="craftArrayTools" element="groups" type="processing" >
   <group size="400 75"
     style="Heading1"
     bg="transparent"
     border="None"
     vq="craftnmrparRef"
     subtype="Basic"
     expanded="yes"
     >
      <label loc="10 0" size="100 22"
        style="Label1"
        label="View as"
        justify="Left"
        />
      <button loc="110 0" size="24 24"
        style="Heading2"
	vq="craftnmrparRef"
	show="$ok=0 strstr(file,'/CraftSummaryFids/'):$ok $ENABLE=($ok and craftDispPar[14]='dss')*2-1"
        vc="showarrays('setup') full getvalue('arraydim'):$arraydim vo=wc2max/($arraydim+1) ho=0 showarray='vert' craft_dssredisplay"
        bg="transparent"
	toolTip="Vertical stack"
        icon="dss"
        />
      <button loc="205 0" size="24 24"
        style="Heading2"
	vq="craftnmrparRef"
	show="$ok=0 strstr(file,'/CraftSummaryFids/'):$ok $ENABLE=($ok and craftDispPar[14]='dss')*2-1"
        vc="showarrays('setup') getvalue('arraydim'):$arraydim vo=0 ho=(wcmax+5)/$arraydim wc=ho-5 sc=(ho*($arraydim-1)) showarray='horiz' craft_dssredisplay"
        bg="transparent"
        decor1="yes"
	toolTip="Horizontal stack"
        icon="dssh"
        />
      <button loc="300 0" size="24 24"
        style="Heading"
	vq="craftnmrparRef"
	show="$ok=0 strstr(file,'/CraftSummaryFids/'):$ok $ENABLE=($ok and craftDispPar[14]='dss')*2-1"
        vc="ff craft_dssredisplay('ds')"
        bg="transparent"
        decor1="no"
	toolTip="Interactive 1D"
        icon="dspec2"
        />
      <group loc="0 25" size="400 50"
	vq="craftnmrparRef"
	show="$ok=0 strstr(file,'/CraftSummaryFids/'):$ok $ENABLE=($ok and craftDispPar[14]='dss')*2-1"
        >
        <label loc="10 0" size="100 23"
          style="Label1"
          label="Horizontal"
          justify="Left"
          />
        <shimbutton loc="110 0" size="90 23"
          style="Label1"
          label="Width"
          vq="wc"
          vc="wc=$VALUE craft_dssredisplay"
          set="$VALUE=wc"
          min="-500"
          max="500"
          pointy="false"
          rocker="true"
          arrow="true"
          arrowcolor="GraphForeground"
          wrap="false"
          />
        <shimbutton loc="205 0" size="90 23"
          style="Label1"
          label="Position"
          vq="sc"
          vc="sc=$VALUE craft_dssredisplay"
          set="$VALUE=sc"
          min="-500"
          max="500"
          pointy="false"
          rocker="true"
          arrow="true"
          arrowcolor="GraphForeground"
          wrap="false"
          />
        <shimbutton loc="300 0" size="90 23"
          style="Label1"
          label="Offset"
          vq="ho"
          vc="ho=$VALUE craft_dssredisplay"
          set="$VALUE=ho"
          min="-500"
          max="500"
          pointy="false"
          rocker="true"
          arrow="true"
          arrowcolor="GraphForeground"
          wrap="false"
          />
        <label loc="10 25" size="100 23"
          style="Label1"
          label="Vertical"
          justify="Left"
          />
        <shimbutton loc="110 25" size="90 23"
          style="Label1"
          label="Height"
          vq="vs"
          vc="vs=$VALUE craft_dssredisplay"
          set="$VALUE=vs"
          min="-5000000"
          max="5000000"
          pointy="false"
          rocker="true"
          arrow="true"
          arrowcolor="GraphForeground"
          wrap="false"
          />
        <shimbutton loc="205 25" size="90 23"
          style="Label1"
          label="Position"
          vq="vp"
          vc="vp=$VALUE craft_dssredisplay"
          set="$VALUE=vp"
          min="-500"
          max="500"
          pointy="false"
          rocker="true"
          arrow="true"
          arrowcolor="GraphForeground"
          wrap="false"
          />
        <shimbutton loc="300 25" size="90 23"
          style="Label1"
          label="Offset"
          vq="vo"
          vc="vo=$VALUE craft_dssredisplay"
          set="$VALUE=vo"
          min="-500"
          max="500"
          pointy="false"
          rocker="true"
          arrow="true"
          arrowcolor="GraphForeground"
          wrap="false"
          />
        </group>
    </group>
</template>
