#!/bin/bash

orig=$(readlink /vnmr)
if [ -d $orig/fidlib ]
then
  (cd $orig; zip -ryq fidlib.zip fidlib; mv fidlib.zip /tmp )
fi
if [ -d $orig/help ]
then
  (cd $orig; zip -ryq help.zip help; mv help.zip /tmp )
fi
if [ -d $orig/nmrPipe ]
then
  (cd $orig; zip -ryq nmrpipe.zip nmrPipe; mv nmrpipe.zip /tmp )
fi
rm -rf /Applications/OpenVnmrJ.app/Contents_OVJVERS_Beta
rm -f /Applications/OpenVnmrJ.app/Contents
