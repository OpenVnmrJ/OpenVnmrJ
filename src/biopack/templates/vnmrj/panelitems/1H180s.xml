<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<template name="1H180s" element="groups" type="acquisition" >
  <group size="755 260"
    vq="bio_type"
    show="if (bio_type='RNA') then $SHOW=1 else $SHOW=0 endif"
    bg="transparent"
    border="None"
    tab="no"
    enable="no"
    reference="1H180s"
    useref="no"
    subtype="Convenience"
    expanded="yes"
    >
    <group loc="5 60" size="720 160"
      vq="detailsC13"
      show="if detailsC13=1 then $SHOW=1 else $SHOW=0 endif"
      bg="transparent"
      border="None"
      tab="no"
      enable="no"
      useref="no"
      subtype="Convenience"
      >
      <button loc="175 5" size="210 20"
        style="PlainText"
        label="generate C5' selective pulse with "
        vc="{setup_macro}('CA180')"
        bg="transparent"
        decor1="yes"
        />
      <button loc="495 5" size="210 20"
        style="PlainText"
        label="generate C4' refocusing pulse "
        vc="{setup_macro}('CO')"
        bg="transparent"
        decor1="yes"
        />
      <group loc="10 105" size="565 35"
        bg="transparent"
        border="None"
        tab="no"
        enable="no"
        useref="no"
        subtype="Convenience"
        >
        <label loc="120 5" size="75 25"
          style="PlainText"
          label="mixing time"
          justify="Left"
          />
        <label loc="255 5" size="65 25"
          style="Label1"
          label="ms"
          />
        <entry loc="205 5" size="50 25"
          style="PlainText"
          vq="mix"
          vc="mix=$VALUE*1e-3"
          set="$VALUE=mix*1e3"
          show=" exists('mix','parameter'):$VALUE"
          digits="1"
          disable="Grayed out"
          />
        <label loc="15 5" size="75 25"
          style="Heading2"
          label="NOESY"
          />
      </group>
      <label loc="90 35" size="65 20"
        style="PlainText"
        label="C13 pulse"
        justify="Left"
        />
      <entry loc="300 35" size="25 20"
        style="PlainText"
        vq="pwXlvl"
        vc="pwXlvl=$VALUE"
        set="$VALUE=pwXlvl"
        show="exists('pwXlvl','parameter'):$VALUE"
        digits="0"
        disable="Grayed out"
        />
      <entry loc="300 60" size="25 20"
        style="PlainText"
        vq="pwX180lvl"
        vc="pwX180lvl=$VALUE"
        set="$VALUE=pwX180lvl"
        show="exists('pwX180lvl','parameter'):$VALUE"
        digits="0"
        disable="Grayed out"
        />
      <entry loc="165 35" size="50 20"
        style="PlainText"
        vq="pwX"
        vc="pwX=$VALUE"
        set="$VALUE=pwX"
        show="exists('pwX','parameter'):$VALUE"
        digits="1"
        disable="Grayed out"
        />
      <label loc="215 60" size="85 20"
        style="PlainText"
        label="us, at power"
        justify="Left"
        />
      <label loc="215 35" size="80 20"
        style="PlainText"
        label="us, at power"
        justify="Left"
        />
      <check loc="10 10" size="170 20"
        style="PlainText"
        label="decouple from C4' in t1"
        vq="refocCO"
        vc="refocCO='y'"
        vc2="refocCO='n'"
        set="if refocCO='y' then $VALUE=1 else $VALUE=0 endif"
        />
      <entry loc="165 60" size="50 20"
        style="PlainText"
        vq="pwXshp"
        vc="pwXshp=$VALUE"
        set="$VALUE=pwXshp"
        show="exists('pwXshp','parameter'):$VALUE"
        digits="1"
        disable="Grayed out"
        />
      <entry loc="445 60" size="165 20"
        style="PlainText"
        vq="X180shape"
        vc="X180shape=$VALUE"
        set="$VALUE=X180shape"
        show="exists('X180shape','parameter'):$VALUE"
        digits="1"
        disable="Grayed out"
        />
      <label loc="335 60" size="110 20"
        style="PlainText"
        label="db,    shape name"
        justify="Left"
        />
      <label loc="5 60" size="155 20"
        style="PlainText"
        label="selective 180 on C5' pulse"
        justify="Left"
        />
    </group>
    <label loc="5 0" size="210 25"
      style="Heading2"
      label="RNA experiment options"
      />
    <check loc="345 30" size="115 25"
      style="PlainText"
      label="more controls"
      vq="detailsC13"
      vc="detailsC13=1"
      vc2="detailsC13=0"
      set="$VALUE=detailsC13"
      />
    <button loc="155 30" size="175 25"
      style="PlainText"
      label="selectively labeled: C1' C5' "
      vc="refocCO='n' pwX180lvl=pwXlvl pwXshp=2*pwX  X180shape='hard'"
      bg="transparent"
      decor1="yes"
      toolTip="hard 180 on C5' and do not decouple from C4' "
      />
    <button loc="5 30" size="145 25"
      style="PlainText"
      label="Uniformly labled RNA"
      vc="refocCO='y' {setup_macro}('CA180')"
      bg="transparent"
      decor1="yes"
      toolTip="decouple from C4' and use selective pulse on C5'"
      />
  </group>
</template>
