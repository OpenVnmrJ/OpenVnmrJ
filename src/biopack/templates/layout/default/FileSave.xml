<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<template name="FileSave" element="pages" type="display" >
  <group size="856 256"
    style="PlainText"
    label="File Save"
    bg="transparent"
    border="None"
    side="Top"
    justify="Left"
    tab="yes"
    enable="no"
    reference="FileSave"
    useref="no"
    subtype="Untitled"
    expanded="yes"
    >
    <button loc="600 90" size="160 25"
      style="Label3"
      label="Save Parameter Set Now"
      vq="BPsvfdir svfname"
      vc="svp(BPsvfdir+'/'+svfname)"
      bg="transparent"
      decor1="no"
      />
    <entry loc="336 128" size="256 24"
      style="PlainText"
      vq="comment"
      vc="comment='$VALUE'"
      set="$VALUE=comment"
      disable="Grayed out"
      />
    <entry loc="336 88" size="256 24"
      style="PlainText"
      vq="svfname"
      vc="svfname='$VALUE'"
      set="$VALUE=svfname"
      show="if svfname='' then $VALUE=0 else $VALUE=1 endif"
      disable="Grayed out"
      />
    <entry loc="336 48" size="256 24"
      style="PlainText"
      vq="BPsvfdir"
      vc="BPsvfdir='$VALUE'"
      set="$VALUE=BPsvfdir"
      show="if BPsvfdir='' then $VALUE=0 else $VALUE=1 endif"
      disable="Grayed out"
      />
    <button loc="600 48" size="160 24"
      style="Label3"
      label="Save FID Now"
      vq="BPsvfdir svfname"
      vc="BPsvf(BPsvfdir+'/'+svfname)"
      bg="transparent"
      decor1="no"
      />
    <textfile loc="336 168" size="304 80"
      style="PlainText"
      vq="curexp"
      set="$VALUE=curexp+'/text'"
      editable="yes"
      wrap="yes"
      units="char"
      />
    <label loc="192 168" size="144 24"
      style="PlainText"
      label="Store with the Text"
      justify="Left"
      />
    <group loc="448 8" size="400 24"
      style="PlainText"
      vq="dofidsave"
      show="if dofidsave='y' then $VALUE=1 else $VALUE=0 endif"
      bg="transparent"
      border="None"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      useref="no"
      subtype="Untitled"
      >
      <textmessage loc="128 0" size="248 24"
        style="PlainText"
        label="/home/vnmr1/forfrank/ghn_co_nus01.fid"
        set="svfname:$VALUE"
        />
      <label loc="0 0" size="128 24"
        style="PlainText"
        label="Autosave FID name:"
        />
    </group>
    <group loc="312 8" size="152 24"
      style="PlainText"
      bg="transparent"
      border="None"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      useref="no"
      subtype="Untitled"
      >
      <check loc="0 0" size="144 24"
        style="Label3"
        label="Automatic FID save"
        vc="dofidsave='y'"
        vc2="dofidsave='n'"
        set="if dofidsave='y' then $VALUE=1 else $VALUE=0 endif"
        />
    </group>
    <label loc="192 128" size="144 24"
      style="PlainText"
      label="Store with the comment"
      justify="Left"
      />
    <button loc="20 50" size="160 20"
      style="Label3"
      label="Create This Directory"
      vq="svfdir"
      vc="mkdir(svfdir)"
      bg="VJBackground"
      decor1="no"
      />
    <label loc="190 50" size="140 20"
      style="PlainText"
      label="Storage Directory"
      justify="Left"
      />
    <label loc="190 90" size="140 20"
      style="PlainText"
      label="Stored under the name"
      justify="Left"
      />
    <label loc="0 0" size="208 24"
      style="Heading1"
      label="FID / Parameter Set Storage"
      justify="Left"
      />
  </group>
</template>
