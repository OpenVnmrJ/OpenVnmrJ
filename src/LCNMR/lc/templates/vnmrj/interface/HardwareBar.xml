<template element="panel" type="system" name="HardwareBar" >
  <group loc="5 5" size="1600 40" font="Dialog"
    style="Plain"
    point="12"
    fg="black"
    border="None"
    side="Top"
    justify="Left"
    tab="false"
    entrycmd="lcInit"
    >
    <trashcan loc="0 2" size="30 35"/>

    <button loc="35 0" size="70 20" font="Heading4"
      style="Heading4"
      point="Heading4"
      fg="Heading4"
      label="Probe"
      vc="vnmrjcmd(`VP current probelist('init') vnmrjcmd('popup','mode:modeless','file:Probe.xml','location:controlPanel','title:Probe')`)"
      enabled="yes"
      />
    <group loc="34 19" size="72 22" font="Heading3"
      style="Heading3"
      point="Heading3"
      fg="Heading3"
      border="Etched"
      side="Top"
      justify="Left"
      tab="no"
      useref="no"
      >
    </group>
    <textmessage loc="40 20" size="65 20" font="Menu4"
      style="Menu4"
      point="Menu4"
      fg="Menu4"
      vq="probe"
      set="$VALUE=probe"
      />

    <statusbutton loc="110 2" size="60 37" font="Dialog"
      style="Bold"
      point="12"
      fg="black"
      maxmark="true"
      values="200"
      name="Chart-Temp"
      title="Temp"
      statkey="vt"
      statcol="fg"
      enabled="yes"
      color1="ffffff"
      color2="000000"
      />

    <statusbutton loc="170 2" size="60 37" font="Dialog"
      style="Bold"
      point="12"
      fg="black"
      maxmark="true"
      values="200"
      name="Chart-Lock"
      title="Lock"
      statkey="lock"
      statcol="fg"
      enabled="yes"
      color1="ffffff"
      color2="000000"
      />

    <msstatus loc="230 2" size="100 37" font="Dialog"
      style="Bold"
      point="12"
      fg="black"
      maxmark="true"
      values="200"
      name="MS Status"
      title="MS Status"
      statcol="fg"
      enabled="no"
      vq="msSelection"
      disable="Grayed out"
      show="$SHOW = (msSelection &lt;&gt; '0')"
      color1="ffffff"
      color2="000000"
      />

    <lcstatusbutton loc="330 2" size="100 37" font="Dialog"
      style="Bold"
      point="12"
      fg="black"
      maxmark="true"
      values="200"
      name="Pump"
      title="Pump"
      statpar="pumpStatus"
      statset="pumpPress"
      statkey="pumpPct"
      statval="pumpTime"
      statcol="fg"
      enabled="yes"
      color1="GraphBackground"
      color2="black"
      color3="adff33"
      color4="abffff"
      icon="pumpStatus.gif"
      />

    <lcstatusbutton loc="430 2" size="100 37" font="Dialog"
      style="Bold"
      point="12"
      fg="black"
      maxmark="true"
      values="200"
      name="UV-Vis"
      title="UV-Vis"
      statpar="uvStatus"
      statset="uvAttn"
      statkey="uvLambda"
      statval="uvTime"
      statcol="fg"
      enabled="yes"
      color1="GraphBackground"
      color2="black"
      color3="adff33"
      color4="abffff"
      icon="uvStatus.gif"
      />

    <expmeter loc="535 5" size="200 27"
      font="Dialog" style="Bold" point="12"
      />

    <messagebox loc="740 5" size="1100 27"
      font="Dialog" style="Bold" point="12"
      />
  </group>
</template>
