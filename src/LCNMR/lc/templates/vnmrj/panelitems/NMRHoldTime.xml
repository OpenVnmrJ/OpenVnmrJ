<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<template name="NMRHoldTime" element="groups" type="acquisition" >
  <group size="190 90"
    style="Heading3"
    label="NMR Hold Time"
    bg="transparent"
    border="Etched"
    side="Top"
    justify="Left"
    tab="no"
    enable="no"
    reference="NMRHoldTime"
    useref="no"
    subtype="Basic"
    expanded="yes"
    >
    <radio loc="5 60" size="95 20"
      style="PlainText"
      label="Fixed Time:"
      vq="lcHoldTime lcexp lcid seqfil autodir"
      show="lcsq('checkrun'):$ENABLE"
      vc="lcHoldTime='1'"
      set="$r1=0 format(lcHoldTime,0,4):$r1  $VALUE=($r1&gt;0)"
      />
    <group loc="105 60" size="80 20"
      vq="lcHoldTime"
      show="$r1=0 format(lcHoldTime,0,4):$r1  $VALUE=($r1&gt;0)"
      bg="transparent"
      border="None"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      useref="no"
      subtype="Basic"
      >
      <label loc="50 0" size="25 20"
        style="Label1"
        label="min"
        justify="Left"
        />
      <entry loc="0 0" size="50 20"
        style="PlainText"
        vq="lcHoldTime lcexp lcid seqfil autodir"
        show="lcsq('checkrun'):$ENABLE"
        vc="lcHoldTime='$VALUE'"
        set="$VALUE=lcHoldTime"
        digits="2"
        disable="Label"
        />
    </group>
    <radio loc="5 40" size="180 20"
      style="PlainText"
      label="Until NMR Finishes"
      vq="lcHoldTime lcexp lcid seqfil autodir"
      show="lcsq('checkrun'):$ENABLE"
      vc="lcHoldTime='0'"
      set="$r1=0 format(lcHoldTime,0,4):$r1  $VALUE=($r1=0)"
      />
    <radio loc="5 20" size="180 20"
      style="PlainText"
      label="Indefinite"
      vq="lcHoldTime lcexp lcid seqfil autodir"
      show="lcsq('checkrun'):$ENABLE"
      vc="lcHoldTime='-1'"
      set="$r1=0 format(lcHoldTime,0,4):$r1  $VALUE=($r1&lt;0)"
      />
  </group>
</template>
