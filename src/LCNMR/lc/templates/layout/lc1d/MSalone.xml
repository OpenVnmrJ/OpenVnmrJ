<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<template name="MSalone" element="pages" type="acquisition" >
  <group size="820 260"
    style="Heading3"
    label="LC Alone"
    vq="lcexp"
    show="$VALUE = (lcexp = 'lcalone')"
    bg="transparent"
    border="Etched"
    side="Top"
    justify="Left"
    tab="yes"
    enable="no"
    reference="MSalone"
    useref="no"
    subtype="Basic"
    expanded="yes"
    >
    <group loc="630 130" size="180 110"
      style="Heading3"
      label="LC Display"
      bg="transparent"
      border="etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      reference="Split"
      useref="no"
      subtype="Major"
      expanded="yes"
      >
      <button loc="10 80" size="160 20"
        style="Label1"
        label="Show 2D PDA Spectrum"
        vc="filepath(svfdir, lcid):$str lccmd('pdagetimage', $str)"
        decor1="No"
        />
      <button loc="10 60" size="160 20"
        style="Label1"
        label="Mass Spectrum Position"
        vc="substr(lcGraphSplit2,1,1):$str if ($str='v') then $str='h' else $str='v' endif substr(lcGraphSplit2,1,1,$str):lcGraphSplit2"
        decor1="No"
        icon="rot_split.png"
        />
      <button loc="10 40" size="160 20"
        style="Label1"
        label="Chromatogram Position"
        vc="substr(lcGraphSplit,1,1):$str if ($str='v') then $str='h' else $str='v' endif substr(lcGraphSplit,1,1,$str):lcGraphSplit"
        decor1="No"
        icon="rot_split.png"
        />
      <button loc="90 20" size="80 20"
        style="Label1"
        label="Hide LC"
        vc="lccmd('hideLcGraph')"
        decor1="No"
        />
      <button loc="10 20" size="80 20"
        style="Label1"
        label="Show LC"
        vc="lccmd('showLcGraph')"
        decor1="No"
        />
    </group>
    <button loc="650 20" size="130 30"
      style="Label1"
      label="Edit Current Method"
      vc="lccmd('editMethod', lcMethodFile)"
      bg="darkGray"
      decor1="Yes"
      />
    <textmessage loc="30 40" size="410 20"
      style="PlainText"
      label="/export/home/lc21b/vnmrsys/data/Onflow1001"
      vq="lcid svfdir"
      set="filepath(svfdir, lcid):$VALUE"
      />
    <label loc="30 20" size="400 20"
      style="Label1"
      label="Chromatography, MS data and Run Log will be automatically saved in"
      justify="Left"
      />
  </group>
</template>
