<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<template name="StopFlow" element="pages" type="acquisition" >
  <group size="850 270"
    label="Stop Flow Setup"
    vq="lcexp"
    show="$VALUE = (lcexp = 'stop' or lcexp = 'enter')"
    bg="transparent"
    border="None"
    side="Top"
    justify="Left"
    tab="yes"
    enable="no"
    reference="StopFlow"
    useref="no"
    subtype="Basic"
    expanded="yes"
    >
    <textmessage loc="10 230" size="600 20"
      style="PlainText"
      label="/usr25/chrisp/vnmrsys/data/Sample4033"
      vq="lcid svfdir"
      set="filepath(svfdir, lcid):$VALUE"
      />
    <label loc="10 210" size="260 20"
      style="PlainText"
      label="LC/NMR(MS) data will be stored in:  "
      justify="Left"
      />
    <group loc="10 10" size="610 200"
      style="Heading3"
      label="Acquisition"
      bg="transparent"
      border="Etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      reference="AcqStopFlow"
      useref="no"
      subtype="Basic"
      expanded="yes"
      >
      <textmessage loc="185 65" size="50 20"
        style="PlainText"
        label="0"
        vq="ct"
        set="$VALUE=ct"
        />
      <label loc="25 65" size="100 20"
        style="PlainText"
        label="Completed (ct)"
        justify="Left"
        />
      <check loc="5 20" size="180 20"
        style="PlainText"
        label="Steady State Transients (ss)"
        vq="ss"
        vc="ss='y'"
        vc2="ss='n'"
        set="onparams('ss'):$VALUE"
        />
      <label loc="25 40" size="160 20"
        style="PlainText"
        label="Number of Transients (nt)"
        justify="Left"
        />
      <menu loc="250 155" size="65 20"
        style="Label1"
        label="menu"
        vq="at"
        vc="parunits('set','d1','$VALUE')"
        set="parunits('get','d1'):$VALUE"
        editable="No"
        >
        <mlabel 
          label="sec"
          chval="sec"
          />
        <mlabel 
          label="ms"
          chval="ms"
          />
        <mlabel 
          label="us"
          chval="us"
          />
      </menu>
      <entry loc="185 155" size="65 20"
        style="PlainText"
        vq="d1"
        vc="vnmrunits('set','d1',$VALUE)"
        set="vnmrunits('get','d1'):$VALUE"
        digits="3"
        disable="Grayed out"
        />
      <label loc="25 155" size="140 20"
        style="Label1"
        label="Relaxation Time (d1)"
        />
      <label loc="25 135" size="130 20"
        style="PlainText"
        label="Complex points"
        justify="Left"
        />
      <entry loc="185 135" size="65 20"
        style="PlainText"
        vq="np"
        vc="np=$VALUE*2"
        set="$VALUE=( np / 2)"
        disable="Grayed out"
        />
      <menu loc="250 115" size="65 20"
        style="Label1"
        label="menu"
        vq="at"
        vc="parunits('set','at','$VALUE')"
        set="parunits('get','at'):$VALUE"
        editable="No"
        >
        <mlabel 
          label="sec"
          chval="sec"
          />
        <mlabel 
          label="ms"
          chval="ms"
          />
        <mlabel 
          label="us"
          chval="us"
          />
      </menu>
      <label loc="25 115" size="130 20"
        style="PlainText"
        label="Acquisition time (at)"
        justify="Left"
        />
      <entry loc="185 115" size="65 20"
        style="PlainText"
        vq="at"
        vc="vnmrunits('set','at',$VALUE)"
        set="vnmrunits('get','at'):$VALUE"
        digits="3"
        disable="Grayed out"
        />
      <menu loc="250 90" size="65 20"
        style="Label1"
        vq="sw"
        vc="parunits('set','sw','$VALUE')"
        set="parunits('get','sw'):$VALUE"
        editable="No"
        >
        <mlabel 
          label="ppm"
          chval="ppm1"
          />
        <mlabel 
          label="Hz"
          chval="Hz"
          />
      </menu>
      <entry loc="185 90" size="65 20"
        style="PlainText"
        vq="sw"
        vc="vnmrunits('set','sw',$VALUE)"
        set="vnmrunits('get','sw'):$VALUE"
        digits="1"
        disable="Grayed out"
        />
      <label loc="25 90" size="130 20"
        style="PlainText"
        label="Spectral width (sw)"
        justify="Left"
        />
      <group loc="420 100" size="190 90"
        style="Label1"
        label="NMR Hold Time"
        bg="transparent"
        border="None"
        side="Top"
        justify="Left"
        tab="no"
        enable="no"
        reference="NMRHoldTime"
        useref="no"
        subtype="Convenience"
        expanded="yes"
        >
        <label loc="0 0" size="150 20"
          style="PlainText"
          label="NMR Hold Time:"
          justify="Left"
          />
        <radio loc="0 60" size="100 20"
          style="PlainText"
          label="Fixed Time:"
          vq="lcHoldType lcexp lcid seqfil autodir"
          vc="lcHoldType='fixed'"
          set="$VALUE=(lcHoldType='fixed')"
          show="lcsq('checkrun'):$ENABLE"
          />
        <radio loc="0 40" size="180 20"
          style="PlainText"
          label="Until NMR Finishes"
          vq="lcHoldType lcexp lcid seqfil autodir"
          vc="lcHoldType='nmr'"
          set="$VALUE=(lcHoldType='nmr')"
          show="lcsq('checkrun'):$ENABLE"
          />
        <radio loc="0 20" size="180 20"
          style="PlainText"
          label="Indefinitely"
          vq="lcHoldType lcexp lcid seqfil autodir"
          vc="lcHoldType='indefinite'"
          set="$VALUE=(lcHoldType='indefinite')"
          show="lcsq('checkrun'):$ENABLE"
          />
        <group loc="105 60" size="80 20"
          vq="lcHoldType lcexp"
          show="$SHOW=(lcHoldType='fixed')"
          bg="transparent"
          border="None"
          side="Top"
          justify="Left"
          tab="no"
          enable="no"
          useref="no"
          subtype="Basic"
          >
          <label loc="50 0" size="25 20"
            style="Label1"
            label="min"
            justify="Left"
            />
          <entry loc="0 0" size="50 20"
            style="PlainText"
            vq="lcHoldTime lcHoldType lcexp lcid seqfil autodir"
            vc="lcHoldTime='$VALUE'"
            set="$VALUE=lcHoldTime"
            show="lcsq('checkrun'):$ENABLE"
            digits="2"
            disable="Label"
            />
        </group>
      </group>
      <group loc="420 10" size="190 80"
        style="Label1"
        bg="transparent"
        border="None"
        side="Top"
        justify="Left"
        tab="no"
        enable="no"
        reference="NMRHoldTime"
        useref="no"
        subtype="Convenience"
        expanded="yes"
        >
        <button loc="10 40" size="150 40"
          style="Label1"
          label="Select Experiments"
          vq="lcenter lcexp savefile"
          vc="lcenter"
          show="if lcexp='enter' then $SHOW=1 else $SHOW=-1 endif"
          bg="0xccccff"
          decor1="no"
          />
        <check loc="10 3" size="170 30"
          style="Heading3"
          label="Selected Experiments"
          vq="lcexp lcHoldType lcid seqfil autodir"
          vc="lcexp='enter'"
          vc2="lcexp='stop'"
          set="$VALUE = (lcexp='enter')"
          show="lcsq('checkrun'):$ENABLE"
          />
      </group>
      <entry loc="187 42" size="49 21"
        style="PlainText"
        vq="nt"
        vc="nt=$VALUE"
        set="$VALUE=nt"
        digits="0"
        disable="Grayed out"
        />
      <entry loc="187 21" size="49 21"
        style="PlainText"
        vq="ss"
        vc="ss=$VALUE"
        set="$VALUE=ss"
        show="onparams('ss'):$VALUE $VALUE=(2*$VALUE)-1"
        disable="Grayed out"
        />
    </group>
    <button loc="690 20" size="130 30"
      style="Label1"
      label="Edit Current Method"
      vc="lccmd('editMethod', lcMethodFile)"
      bg="darkGray"
      decor1="no"
      />
    <group loc="650 140" size="190 110"
      style="Heading3"
      label="LC Display"
      bg="transparent"
      border="etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      reference="Split"
      useref="no"
      subtype="Major"
      expanded="yes"
      >
      <button loc="10 80" size="160 20"
        style="Label1"
        label="Show 2D PDA Spectrum"
        vc="filepath(svfdir, lcid):$str lccmd('pdagetimage', $str)"
        decor1="no"
        />
      <button loc="10 60" size="160 20"
        style="Label1"
        label="Mass Spectrum Position"
        vq="msSelection"
        vc="substr(lcGraphSplit2,1,1):$str if ($str='v') then $str='h' else $str='v' endif substr(lcGraphSplit2,1,1,$str):lcGraphSplit2"
        show="if (msSelection&lt;&gt;'0') then $SHOW=1 else $SHOW=-1 endif"
        decor1="no"
        icon="rot_split.png"
        />
      <button loc="10 40" size="160 20"
        style="Label1"
        label="Chromatogram Position"
        vc="substr(lcGraphSplit,1,1):$str if ($str='v') then $str='h' else $str='v' endif substr(lcGraphSplit,1,1,$str):lcGraphSplit"
        decor1="no"
        icon="rot_split.png"
        />
      <button loc="90 20" size="80 20"
        style="Label1"
        label="Hide LC"
        vc="lccmd('hideLcGraph')"
        decor1="no"
        />
      <button loc="10 20" size="80 20"
        style="Label1"
        label="Show LC"
        vc="lccmd('showLcGraph')"
        decor1="no"
        />
    </group>
  </group>
</template>
