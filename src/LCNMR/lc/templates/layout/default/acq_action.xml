<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<template name="action" element="pages" type="acquisition" >
  <group size="560 25"
    style="PlainText"
    label="action"
    bg="transparent"
    border="None"
    side="Top"
    justify="Left"
    tab="yes"
    enable="no"
    reference="action"
    useref="no"
    subtype="Basic"
    expanded="yes"
    >
    <label loc="0 0" size="30 25"
      style="Label1"
      label="Flow:"
      />
    <check loc="30 0" size="50 25"
      style="PlainText"
      label="NMR"
      vq="lcNmrValve"
      vc="lccmd('toNmr')"
      vc2="lccmd('toWaste')"
      set="$VALUE=lcNmrValve"
      />
    <check loc="80 0" size="60 25"
      style="PlainText"
      label="Column"
      vq="lcColumnValve"
      vc="lccmd('toColumn')"
      vc2="lccmd('toCollector')"
      set="$VALUE=lcColumnValve"
      />
    <label loc="150 0" size="40 25"
      style="Label1"
      label="Pump:"
      />
    <button loc="190 0" size="30 25"
      style="Heading3"
      label="On"
      vc="lccmd('gpib ' + lcPump + ' pump')"
      statpar="pumpStatus"
      statshow="Pump_Off"
      decor1="Yes"
      toolTip="&lt;html&gt;Turn LC pump ON"
      />
    <button loc="220 0" size="30 25"
      style="Heading3"
      label="Off"
      vc="lccmd('gpib ' + lcPump + ' stop')"
      statpar="pumpStatus"
      statshow="Ready"
      decor1="Yes"
      toolTip="&lt;html&gt;Turn LC pump OFF"
      />
    <label loc="260 0" size="90 25"
      style="Label1"
      label="Current Loop #"
      />
    <textmessage loc="350 0" size="20 25"
      style="PlainText"
      label="1"
      vq="lcLoopIndex"
      set="$VALUE=lcLoopIndex"
      />
    <button loc="370 0" size="20 25"
      style="PlainText"
      vq="startloop"
      vc="lccmd('step')"
      decor1="No"
      icon="up11x17"
      />
    <button loc="435 0" size="60 25"
      style="PlainText"
      vq="lcexp lcid lcHoldType seqfil autodir lcRunActive"
      show="lcsq('checkrun'):$ENABLE"
      vc="StartLcnmrMsRun"
      decor1="Yes"
      icon="goflow"
      toolTip="&lt;html&gt;Start Flow Run"
      />
    <button loc="495 0" size="60 25"
      style="PlainText"
      vc="EndRun"
      decor1="Yes"
      icon="noflow"
      toolTip="&lt;html&gt;Abort or End Flow Run"
      />
  </group>
</template>
