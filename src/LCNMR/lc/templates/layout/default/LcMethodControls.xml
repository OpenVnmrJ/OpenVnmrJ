<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<template name="LcMethodControls" element="pages" type="preparation" >
  <group size="580 250"
    style="Heading3"
    label="LC Methods"
    bg="transparent"
    border="None"
    side="Top"
    justify="Left"
    tab="yes"
    enable="no"
    reference="LcMethodControls"
    useref="no"
    subtype="Basic"
    expanded="yes"
    >
    <group loc="0 0" size="570 250"
      style="Heading3"
      label="LC Method"
      bg="transparent"
      border="None"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      reference="LCMethod"
      useref="no"
      subtype="Convenience"
      expanded="yes"
      >
      <group loc="10 130" size="560 120"
        style="Heading3"
        label="Edit / View Method"
        bg="transparent"
        border="etched"
        side="Top"
        justify="Left"
        tab="no"
        enable="no"
        reference="Edit/ViewMethod"
        useref="no"
        subtype="Major"
        expanded="yes"
        >
        <group loc="0 60" size="550 50"
          bg="transparent"
          border="None"
          tab="no"
          enable="no"
          useref="no"
          subtype="Convenience"
          >
          <textmessage loc="110 0" size="440 20"
            style="Label1"
            label="test003"
            vq="lcid"
            set="$VALUE=lcid"
            />
          <button loc="210 30" size="90 20"
            style="Label1"
            label="New"
            vc="lccmd('editMethod', 'NewMethod')"
            bg="transparent"
            decor1="yes"
            toolTip="Create a new method"
            tooltip="Create a new method"
            />
          <button loc="10 30" size="90 20"
            style="Label1"
            label="Loaded"
            vc="lccmd('editMethod', 'LOADED_METHOD')"
            bg="transparent"
            decor1="yes"
            toolTip="&lt;html&gt;View the currently loaded method&lt;br&gt;It may have changed since it was loaded"
            tooltip="&lt;html&gt;View the currently loaded method&lt;br&gt;It may have changed since it was loaded"
            />
          <button loc="10 0" size="90 20"
            style="Label1"
            label="From Run:"
            vc="filepath(svfdir, lcid):$str lccmd('editMethod', 'METHOD_FROM_RUN', '\&quot;'+$str+'\&quot;')"
            bg="transparent"
            decor1="yes"
            />
          <button loc="110 30" size="90 20"
            style="Label1"
            label="Selected"
            vc="lccmd('editMethod', lcMethodFile)"
            bg="transparent"
            decor1="yes"
            toolTip="Edit the version in the file"
            tooltip="Edit the version in the file"
            />
        </group>
        <cascadingMenu loc="10 30" size="460 20"
          style="Label1"
          vc="lccmd('editMethod', '\&quot;$VALUE\&quot;')"
          set="$VALUE='Select method to edit'"
          file="lc/lcmethods"
          bg="VJBackground"
          statshow="no"
          />
        <button loc="480 30" size="70 20"
          style="Label1"
          label="Browse ..."
          vc="lccmd('editMethod', 'FILE_BROWSER')"
          bg="transparent"
          decor1="yes"
          />
      </group>
      <group loc="10 30" size="560 90"
        style="Heading3"
        label="Select / Load Method"
        bg="transparent"
        border="etched"
        side="Top"
        justify="Left"
        tab="no"
        enable="no"
        reference="Select/LoadMethod"
        useref="no"
        subtype="Major"
        expanded="yes"
        >
        <button loc="480 30" size="70 20"
          style="Label1"
          label="Browse ..."
          vq="lcRunActive"
          vc="lccmd('loadMethod', 'FILE_BROWSER')"
          show="$ENABLE=(-2 * lcRunActive) + 1"
          bg="transparent"
          decor1="yes"
          />
        <cascadingMenu loc="10 30" size="460 20"
          style="Label1"
          label="Select method to load"
          vq="lcMethodFile"
          vc="lccmd('loadMethod', '\&quot;$VALUE\&quot;')"
          set="$VALUE=lcMethodFile"
          file="lc/lcmethods"
          bg="VJBackground"
          statshow="no"
          />
        <button loc="10 60" size="70 20"
          style="Label1"
          label="Reload"
          vq="lcRunActive"
          vc="lccmd('loadMethod', lcMethodFile)"
          show="$ENABLE=(-2 * lcRunActive) + 1"
          bg="transparent"
          decor1="yes"
          />
      </group>
      <label loc="0 0" size="230 20"
        style="Heading3"
        label="LC Methods"
        />
    </group>
  </group>
</template>
