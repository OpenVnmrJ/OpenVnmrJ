# define to get tokens from, a file
def getTokenValue(str,file):
   f=open(file,'r')
   for line in f:
      lineParts=line.split("=",1)
      if (lineParts[0]==str):
         value=lineParts[1]
         value=value[:-1]
         break
   f.close()
   return(value)

