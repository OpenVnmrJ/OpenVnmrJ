    vnmrBgCppEnv.Append(CPPDEFINES = 'boost=std')
else:
# This is for CentOS 7
    if os.path.exists("/usr/bin/systemctl"):
        vnmrBgCppEnv.Append(CCFLAGS = ' -std=c++11 ')
        vnmrBgCppEnv.Append(CPPDEFINES = 'boost=std')

