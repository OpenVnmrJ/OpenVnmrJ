<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<template name="DOSYDisplay" element="pages" type="processing" >
  <group size="790 270"
    style="Heading1"
    label="DOSY Display"
    bg=""
    border="None"
    side="Top"
    justify="Right"
    tab="yes"
    enable="no"
    reference="DOSYDisplay"
    useref="no"
    subtype="Untitled"
    expanded="yes"
    >
    <group loc="5 10" size="260 210"
      style="Heading1"
      label="Peak Analysis"
      bg=""
      border="Etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      useref="no"
      subtype="Titled"
      >
      <check loc="15 25" size="55 20"
        style="Label1"
        label="Cross"
        vq="ll2dmode"
        vc="substr(ll2dmode,1,1,'y'):ll2dmode dconi"
        vc2="substr(ll2dmode,1,1,'n'):ll2dmode dconi"
        set="substr(ll2dmode,1,1):$cross $VALUE=($cross='y')"
        />
      <check loc="75 25" size="45 20"
        style="Label1"
        label="Box"
        vq="ll2dmode"
        vc="substr(ll2dmode,3,1,'y'):ll2dmode dconi"
        vc2="substr(ll2dmode,3,1,'n'):ll2dmode dconi"
        set="substr(ll2dmode,3,1):$box $VALUE=($box='y')"
        />
      <check loc="120 25" size="55 20"
        style="Label1"
        label="Num"
        vq="ll2dmode"
        vc="substr(ll2dmode,2,1,'y'):ll2dmode dconi"
        vc2="substr(ll2dmode,2,1,'n'):ll2dmode dconi"
        set="substr(ll2dmode,2,1):$num $VALUE=($num='y')"
        />
      <check loc="170 25" size="90 20"
        style="Label1"
        label="Diff. Const."
        vq="ll2dmode"
        vc="substr(ll2dmode,4,1,'y'):ll2dmode dconi"
        vc2="substr(ll2dmode,4,1,'n'):ll2dmode dconi"
        set="substr(ll2dmode,4,1):$diff $VALUE=($diff='y')"
        />
      <button loc="15 55" size="230 20"
        style="Heading2"
        label="Redisplay 2D spectrum"
        vc="dconi('dpcon',20,1.2)"
        bg=""
        decor1=""
        />
      <group loc="10 75" size="235 120"
        bg=""
        border="None"
        side="Top"
        justify="Left"
        tab="no"
        enable="no"
        reference="Fitmultiplier2"
        useref="no"
        subtype="Untitled"
        expanded="yes"
        >
        <label loc="105 10" size="80 20"
          style="Heading1"
          label="Fit multiplier"
          justify="Left"
          />
        <button loc="5 95" size="230 20"
          style="Heading2"
          label="Show residual for Peak # above"
          vc="if (dosy_peaknum&gt;0)and(dosy_peakmult&gt;0) then showdosyresidual(dosy_peaknum,dosy_peakmult) else banner('Please set peak number  
 and fit multiplier') endif if dosy_autoincr='y' then dosy_peaknum=dosy_peaknum+1 endif"
          bg=""
          decor1=""
          />
        <button loc="5 70" size="230 20"
          style="Heading2"
          label="Show fit for Peak # above"
          vc="if (dosy_peaknum&gt;0)and(dosy_peakmult&lt;&gt;0) then showdosyfit(dosy_peaknum,dosy_peakmult) else banner('Please set peak number  
 and fit multiplier') endif if dosy_autoincr='y' then dosy_peaknum=dosy_peaknum+1 endif"
          bg=""
          decor1=""
          />
        <entry loc="185 10" size="50 20"
          style="PlainText"
          vq="dosy_peakmult"
          vc="dosy_peakmult=$VALUE"
          set="$VALUE=dosy_peakmult"
          digits="1"
          />
        <check loc="35 40" size="165 20"
          style="Label1"
          label="Auto Increment peak #"
          vq="dosy_autoincr"
          vc="dosy_autoincr='y'"
          vc2="dosy_autoincr='n'"
          set="$VALUE=(dosy_autoincr='y')"
          />
        <entry loc="55 10" size="35 20"
          style="PlainText"
          vq="dosy_peaknum"
          vc="dosy_peaknum=$VALUE"
          set="$VALUE=dosy_peaknum"
          digits="0"
          />
        <label loc="5 10" size="50 20"
          style="Label1"
          label="Peak #"
          justify="Left"
          />
      </group>
    </group>
    <group loc="270 10" size="255 210"
      style="Heading1"
      label="Display 2D Projections"
      bg=""
      border="Etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      useref="no"
      subtype="Titled"
      >
      <button loc="15 135" size="225 20"
        style="Heading2"
        label="Rotate spectrum by 45 degrees in F1"
        vc="rotate(45)"
        bg=""
        decor1=""
        />
      <button loc="15 160" size="225 20"
        style="Heading2"
        label="Symmetrize spectrum for F1=0"
        vc="foldj"
        bg=""
        decor1=""
        />
      <button loc="15 185" size="225 20"
        style="Heading2"
        label="Show original 2D spectrum"
        vc="$lowlim=lowlim $uplim=uplim undosy3D lowlim=$lowlim uplim=$uplim"
        bg=""
        decor1=""
        />
      <button loc="15 110" size="225 20"
        style="Heading2"
        label="Show diffusion projection within limits"
        vq="lowlim uplim"
        vc="$lowlim=lowlim $uplim=uplim undosy3D lowlim=$lowlim uplim=$uplim makeslice(lowlim,uplim)"
        bg=""
        decor1=""
        />
      <button loc="15 25" size="225 20"
        style="Heading2"
        label="Show diffusion display"
        vc="sdp"
        bg=""
        decor1=""
        />
      <label loc="15 55" size="130 20"
        style="Label1"
        label="Lower Diffusion Limit"
        justify="Left"
        />
      <entry loc="145 55" size="55 20"
        style="PlainText"
        vq="lowlim"
        vc="lowlim=$VALUE"
        set="$VALUE=lowlim"
        digits="1"
        />
      <label loc="200 55" size="35 20"
        style="Label1"
        label="m²/s"
        justify="Left"
        />
      <label loc="200 85" size="35 20"
        style="Label1"
        label="m²/s"
        justify="Left"
        />
      <entry loc="145 85" size="55 20"
        style="PlainText"
        vq="uplim"
        vc="uplim=$VALUE"
        set="$VALUE=uplim"
        digits="1"
        />
      <label loc="15 85" size="130 20"
        style="Label1"
        label="Upper Diffusion Limit"
        justify="Left"
        />
    </group>
  </group>
</template>
