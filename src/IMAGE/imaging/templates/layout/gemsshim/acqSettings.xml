<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<template name="acqSettings" element="pages" type="acquisition" >
  <group size="860 300"
    label="Settings"
    bg="transparent"
    border="None"
    side="Top"
    justify="Left"
    tab="yes"
    enable="no"
    reference="acqSettings"
    useref="no"
    subtype="Basic"
    expanded="yes"
    >
    <group loc="315 50" size="445 215"
      style="Heading1"
      label="Defaults"
      bg="transparent"
      border="Etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      reference="ShimCalibration"
      useref="no"
      subtype="Basic"
      expanded="yes"
      >
      <textmessage loc="190 185" size="110 20"
        style="PlainText"
        label="alex_insert12cm"
        vq="gcoil"
        set="$VALUE = gcoil"
        />
      <entry loc="305 185" size="85 20"
        style="PlainText"
        vq="shimpar"
        vc="shimpar='$VALUE'"
        set="$VALUE=shimpar"
        digits="1"
        disable="Grayed out"
        />
      <entry loc="190 130" size="70 20"
        style="PlainText"
        vq="z2z0"
        vc="z2z0=$VALUE"
        set="$VALUE=z2z0"
        show="on('z2z0'):$VALUE"
        digits="3"
        disable="Grayed out"
        />
      <label loc="5 130" size="175 20"
        style="Label1"
        label="z2 frequency shift (Hz/DAC)"
        justify="Left"
        />
      <label loc="5 185" size="175 20"
        style="Label1"
        label="Shimmap ID (gcoil...)"
        justify="Left"
        />
      <label loc="5 85" size="185 20"
        style="Label1"
        label="Reference delay, delref (msec)"
        justify="Left"
        />
      <entry loc="190 85" size="70 20"
        style="PlainText"
        vq="delref"
        vc="delref=$VALUE/1000"
        set="$VALUE=delref*1000"
        show="on('delref'):$VALUE"
        digits="2"
        disable="Grayed out"
        />
      <entry loc="190 105" size="70 20"
        style="PlainText"
        vq="thresh"
        vc="thresh=$VALUE"
        set="$VALUE=thresh"
        show="on('thresh'):$VALUE"
        digits="1"
        disable="Grayed out"
        />
      <label loc="5 105" size="175 20"
        style="Label1"
        label="Intensity threshold (%)"
        justify="Left"
        />
    </group>
    <group loc="10 50" size="290 120"
      style="Heading1"
      label="Options"
      bg="transparent"
      border="Etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      reference="ShimCalibration"
      useref="no"
      subtype="Basic"
      expanded="yes"
      >
      <check loc="5 40" size="190 20"
        style="PlainText"
        label="Measure and set H1offset"
        vq="setres"
        vc="setres='y'"
        vc2="setres='n'"
        set="$VALUE=(setres='y')"
        show="on('setres'):$VALUE"
        />
      <check loc="5 20" size="190 20"
        style="PlainText"
        label="Calculate and set H1offset"
        vq="setf"
        vc="setf='y'"
        vc2="setf='n'"
        set="$VALUE=(setf='y')"
        show="on('setf'):$VALUE"
        />
    </group>
    <textmessage loc="0 0" size="150 20"
      style="Heading1"
      label="Sgemsshim"
      vq="pslabel"
      set="$VALUE=pslabel"
      />
  </group>
</template>
