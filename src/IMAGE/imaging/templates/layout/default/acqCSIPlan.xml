<template name="acqCSIPlan" element="pages" type="acquisition" >
  <group size="800 270"
    label="Plan"
    bg="transparent"
    border="None"
    side="Top"
    justify="Left"
    tab="yes"
    enable="no"
    reference="acqCSIPlan"
    useref="no"
    subtype="Convenience"
    expanded="yes"
    >
    <group loc="5 0" size="210 270"
      style="Heading1"
      label="FOV"
      vq="iplanType"
      bg="transparent"
      border="etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      reference="FOV3D"
      useref="no"
      subtype="Major"
      expanded="yes"
      >
      <group loc="5 120" size="200 45"
        bg="transparent"
        border="None"
        tab="no"
        enable="no"
        reference="euler_horz"
        useref="no"
        subtype="Convenience"
        expanded="yes"
        >
        <entry loc="105 20" size="50 20"
          style="PlainText"
          vq="theta"
          vc="gplan('setValue','theta',$VALUE)"
          set="$VALUE=theta"
          digits="1"
          disable="Grayed out"
          />
        <entry loc="0 20" size="45 20"
          style="PlainText"
          vq="psi"
          vc="gplan('setValue','psi',$VALUE)"
          set="$VALUE=psi"
          digits="1"
          disable="Grayed out"
          />
        <entry loc="50 20" size="50 20"
          style="PlainText"
          vq="phi"
          vc="gplan('setValue','phi',$VALUE)"
          set="$VALUE=phi"
          digits="1"
          disable="Grayed out"
          />
        <label loc="0 0" size="145 20"
          style="Label1"
          label="Angles (psi, phi, theta)"
          justify="Left"
          />
      </group>
      <group loc="5 45" size="200 65"
        bg="transparent"
        border="None"
        tab="no"
        enable="no"
        reference="3DFOV"
        useref="no"
        subtype="Convenience"
        expanded="yes"
        >
        <check loc="180 25" size="20 20"
          style="PlainText"
          vc="gplan('setUseppe',1) ppe=ppe"
          vc2="gplan('setUseppe',0)"
          set="gplan('getUseppe'):$VALUE"
          />
        <label loc="155 25" size="25 20"
          style="Label1"
          label="mm"
          justify="Left"
          />
        <label loc="105 5" size="40 20"
          style="Label1"
          label="Offset"
          justify="Left"
          />
        <label loc="50 5" size="40 20"
          style="Label1"
          label="FOV"
          justify="Left"
          />
        <label loc="0 25" size="50 20"
          style="Label1"
          label="Phase"
          justify="Left"
          />
        <entry loc="50 25" size="50 20"
          style="PlainText"
          vq="lpe"
          vc="gplan('setValue','lpe',$VALUE/10.0)"
          set="$VALUE=lpe*10.0"
          digits="2"
          disable="Grayed out"
          />
        <entry loc="105 25" size="50 20"
          style="PlainText"
          vq="ppe"
          vc="gplan('setValue','ppe',$VALUE/10.0)"
          set="$VALUE=ppe*10.0"
          show="gplan('getUseppe'):$v if ($v = 0) then $VALUE = 0 else $VALUE = 1 endif"
          digits="2"
          disable="Label"
          />
        <label loc="155 45" size="25 20"
          style="Label1"
          label="mm"
          justify="Left"
          />
        <entry loc="105 45" size="50 20"
          style="PlainText"
          vq="ppe2"
          vc="gplan('setValue','ppe2',$VALUE/10.0)"
          set="$VALUE=ppe2*10.0"
          digits="2"
          disable="Label"
          />
        <entry loc="50 45" size="50 20"
          style="PlainText"
          vq="lpe2"
          vc="gplan('setValue','lpe2',$VALUE/10.0)"
          set="$VALUE=lpe2*10.0"
          digits="2"
          disable="Grayed out"
          />
        <label loc="0 45" size="50 20"
          style="Label1"
          label="Phase 2"
          justify="Left"
          />
      </group>
      <group loc="5 20" size="200 20"
        vq="studyid"
        show="$VALUE=1"
        bg="transparent"
        border="None"
        side="Top"
        justify="Left"
        tab="no"
        enable="no"
        useref="no"
        subtype="Basic"
        >
        <label loc="0 0" size="90 20"
          style="Label1"
          label="Orientation"
          justify="Left"
          />
        <filemenu loc="95 0" size="100 20"
          style="PlainText"
          vq="orient planValue"
          vc="iplanType = 2 planValue='$VALUE' setgplan('$VALUE')"
          set="$VALUE = planValue"
          file="exists(sqdir+'/plans','file'):$e if ($e = 0) then $VALUE=systemdir+'/imaging/templates/vnmrj/choicefiles/plans' else $VALUE=sqdir+'/plans' endif"
          type="file"
          editable="No"
          vq2="sqdir studyid"
          statshow="yes"
          />
      </group>
      <group loc="5 185" size="200 30"
        bg="transparent"
        border="None"
        tab="no"
        enable="no"
        useref="no"
        subtype="Convenience"
        >
        <button loc="0 0" size="100 20"
          style="Label1"
          label="Marking"
          vc="gplan('setMarkMode', 1)"
          decor1="No"
          />
        <button loc="100 0" size="100 20"
          style="Label1"
          label="Add Volume"
          vc="gplan('addAstack',2)"
          decor1="No"
          />
      </group>
    </group>
    <group loc="435 125" size="210 145"
      style="Heading1"
      label="Sat Bands"
      vq="sat"
      show="exists('sat','parameter'):$VALUE"
      bg="transparent"
      border="etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      reference="plansatbands"
      useref="no"
      subtype="Major"
      expanded="yes"
      >
      <toggle loc="110 55" size="85 25"
        style="PlainText"
        label="View"
        vq="iplanType"
        vc="gplan('setDefaultType', 4) iplanDefaultType=4 setgplan('standard getCurrentStacks' )"
        vc2="gplan('setDefaultType', 0) iplanDefaultType=0 setgplan('standard getCurrentStacks' )"
        set="$VALUE = (iplanType = 4)"
        radiobutton="false"
        />
      <button loc="110 35" size="85 20"
        style="PlainText"
        label="Delete"
        vq="planSs"
        vc="if (size('satpos') = 1) then sat = n endif gplan('deleteSelected')  if (sat = 'n') then gplan('setDefaultType', 0) iplanDefaultType=0 setgplan('standard getcurrentStacks') endif"
        decor1="No"
        />
      <button loc="110 15" size="85 20"
        style="PlainText"
        label="Add"
        vc="gplan('addAstack',4)"
        decor1="No"
        />
      <check loc="5 15" size="90 20"
        style="PlainText"
        label="On/Off"
        vq="sat"
        vc="sat = 'y' gplan('setDefaultType', 4) iplanDefaultType=4 setgplan('standard getCurrentStacks' )"
        vc2="sat = 'n'  gplan('setDefaultType', 0) iplanDefaultType=0 setgplan('standard getCurrentStacks' )"
        set="$VALUE = (sat = 'y')"
        />
      <textmessage loc="70 65" size="30 20"
        style="PlainText"
        label="0"
        vq="nsat sat satpos"
        set="$VALUE=size('satpos')*(sat='y')"
        />
      <label loc="5 65" size="55 20"
        style="Label1"
        label="Bands"
        justify="Left"
        />
      <group loc="5 85" size="155 40"
        bg="transparent"
        border="None"
        tab="no"
        enable="no"
        useref="no"
        subtype="Convenience"
        >
        <label loc="0 0" size="60 20"
          style="Label1"
          label="Position"
          justify="Left"
          />
        <label loc="100 20" size="30 20"
          style="Label1"
          label="mm"
          justify="Left"
          />
        <label loc="100 0" size="30 20"
          style="Label1"
          label="mm"
          justify="Left"
          />
        <entry loc="60 20" size="40 20"
          style="PlainText"
          vq="satthk planSs"
          vc="gplan('setValue','satthk',$VALUE)"
          set="gplan('getValue', 'satthk'):$VALUE"
          disable="Grayed out"
          />
        <entry loc="60 0" size="40 20"
          style="PlainText"
          vq="satpos planSs"
          vc="gplan('setValue','satpos',$VALUE/10.0)"
          set="gplan('getValue', 'satpos'):$v $VALUE=$v*10"
          disable="Grayed out"
          />
        <label loc="0 20" size="60 20"
          style="Label1"
          label="Thickness"
          justify="Left"
          />
      </group>
      <group loc="5 125" size="205 20"
        bg="transparent"
        border="None"
        tab="no"
        enable="no"
        useref="no"
        subtype="Convenience"
        >
        <entry loc="140 0" size="40 20"
          style="PlainText"
          vq="stheta planSs"
          vc="gplan('setValue','stheta',$VALUE)"
          set="gplan('getValue', 'stheta'):$VALUE"
          disable="Grayed out"
          />
        <entry loc="100 0" size="40 20"
          style="PlainText"
          vq="sphi planSs"
          vc="gplan('setValue','sphi',$VALUE)"
          set="gplan('getValue', 'sphi'):$VALUE"
          disable="Grayed out"
          />
        <entry loc="60 0" size="40 20"
          style="PlainText"
          vq="spsi planSs"
          vc="gplan('setValue','spsi',$VALUE)"
          set="gplan('getValue', 'spsi'):$VALUE"
          disable="Grayed out"
          />
        <label loc="0 0" size="60 20"
          style="Label1"
          label="Angles"
          justify="Left"
          />
      </group>
    </group>
    <group loc="435 0" size="210 125"
      style="Heading1"
      label="Display Options"
      vq="iplanType"
      bg="transparent"
      border="etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      reference="DisplayOptions"
      useref="no"
      subtype="Major"
      expanded="yes"
      >
      <group loc="5 20" size="130 100"
        bg="transparent"
        border="None"
        tab="no"
        enable="no"
        useref="no"
        subtype="Convenience"
        >
        <button loc="0 40" size="125 20"
          style="PlainText"
          label="Save for Shimming"
          vc="gs_slice"
          decor1="No"
          />
        <button loc="0 20" size="125 20"
          style="PlainText"
          label="Save Milestone"
          vc="gplan('saveMilestoneStacks')"
          decor1="No"
          />
        <button loc="0 0" size="125 20"
          style="PlainText"
          label="Clear Display"
          vc="gplan('clearStacks')"
          decor1="No"
          />
        <group loc="0 60" size="130 40"
          bg="transparent"
          border="None"
          tab="no"
          enable="no"
          useref="no"
          subtype="Convenience"
          >
          <check loc="0 20" size="100 20"
            style="PlainText"
            label="3D view"
            vq="iplanType"
            vc="gplan('setDraw3D', 1)"
            vc2="gplan('setDraw3D', 0)"
            set="gplan('getActStackInfo', 'draw3D'):$VALUE"
            />
          <check loc="0 0" size="100 20"
            style="PlainText"
            label="Display Axes"
            vq="iplanType"
            vc="gplan('setDrawAxes', 1)"
            vc2="gplan('setDrawAxes', 0)"
            set="gplan('getActStackInfo', 'drawAxes'):$VALUE"
            />
        </group>
      </group>
    </group>
    <group loc="220 0" size="210 270"
      style="Heading1"
      label="Slice"
      bg="transparent"
      border="etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      reference="Slice"
      useref="no"
      subtype="Major"
      expanded="yes"
      >
      <label loc="5 60" size="70 20"
        style="Label1"
        label="Thickness"
        justify="Left"
        />
      <entry loc="75 100" size="40 20"
        style="PlainText"
        vq="pss0"
        vc="pss0=$VALUE/10.0 gplan('setValue','pss0',$VALUE/10)"
        set="$VALUE=pss0*10"
        disable="Grayed out"
        />
      <label loc="115 100" size="30 20"
        style="Label1"
        label="mm"
        justify="Left"
        />
      <entry loc="75 80" size="40 20"
        style="PlainText"
        vq="gap"
        vc="gplan('setValue','gap',$VALUE/10)"
        set="$VALUE = gap*10"
        disable="Grayed out"
        />
      <label loc="115 80" size="30 20"
        style="Label1"
        label="mm"
        justify="Left"
        />
      <check loc="145 80" size="45 20"
        style="PlainText"
        label="Fix"
        vc="gplan('setGapMode',1)"
        vc2="gplan('setGapMode',0)"
        set="gplan('getGapMode'):$VALUE"
        />
      <entry loc="75 60" size="40 20"
        style="PlainText"
        vq="thk"
        vc="gplan('setValue','thk',$VALUE) go('check')"
        set="$VALUE = thk"
        disable="Grayed out"
        />
      <label loc="115 60" size="30 20"
        style="Label1"
        label="mm"
        justify="Left"
        />
      <entry loc="75 40" size="40 20"
        style="PlainText"
        vq="pss ns"
        vc="gplan('setValue','ns',$VALUE) ns=ns go('check') "
        set="$VALUE = size('pss')"
        disable="Grayed out"
        />
      <group loc="0 160" size="130 90"
        style="Heading1"
        label="Display Style"
        bg="transparent"
        border="None"
        side="Top"
        justify="Left"
        tab="no"
        enable="no"
        reference="SliceDisplay"
        useref="no"
        subtype="Minor"
        expanded="yes"
        >
        <radio loc="5 70" size="110 20"
          style="PlainText"
          label="Single line"
          vq="iplanType"
          vc="gplan('setDisplayStyle', 1)"
          vc2="gplan('setDisplayStyle', 0)"
          set="gplan('getActStackInfo', 'style'):$VALUE"
          />
        <radio loc="5 45" size="110 20"
          style="PlainText"
          label="Filled"
          vq="iplanType"
          vc="gplan('setDisplayStyle', 0) gplan('setFillPolygon', 1)"
          vc2="gplan('setFillPolygon', 0)"
          set="gplan('getActStackInfo', 'fill'):$VALUE"
          />
        <radio loc="5 20" size="80 20"
          style="PlainText"
          label="Normal"
          vq="iplanType"
          vc="gplan('setFillPolygon', 0) gplan('setDisplayStyle', 0)"
          set="gplan('getActStackInfo', 'fill'):$v1 gplan('getActStackInfo', 'style'):$v2 $VALUE = $v1+$v2"
          />
      </group>
      <check loc="5 130" size="160 20"
        style="PlainText"
        label="Show order"
        vq="iplanType"
        vc="gplan('setDrawOrders', 1)"
        vc2="gplan('setDrawOrders', 0)"
        set="gplan('getActStackInfo', 'drawOrder'):$VALUE"
        />
      <label loc="5 100" size="60 20"
        style="Label1"
        label="Position"
        justify="Left"
        />
      <label loc="5 80" size="60 20"
        style="Label1"
        label="Gap"
        justify="Left"
        />
      <label loc="5 40" size="60 20"
        style="Label1"
        label="Slices"
        justify="Left"
        />
      <menu loc="5 20" size="185 20"
        style="PlainText"
        vq="pss iplanType"
        vc="gplan('alternateSlices', $VALUE)"
        set="gplan('getActStackInfo', 'alternateOrder'):$VALUE"
        editable="No"
        >
        <mlabel 
          label="Linear"
          chval="0"
          />
        <mlabel 
          label="Interleaved"
          chval="1"
          />
        <mlabel 
          label="Reverse linear"
          chval="2"
          />
        <mlabel 
          label="Reverse interleaved"
          chval="3"
          />
      </menu>
    </group>
  </group>
</template>
