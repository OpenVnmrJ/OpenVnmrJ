<template name="acq_action" element="groups" type="acquisition" >
  <group size="700 20"
    vq="time_submitted"
    vc="xmenablepanel('Acquire','false')"
    bg="transparent"
    border="None"
    side="Top"
    justify="Left"
    tab="no"
    enable="no"
    reference="acq_action"
    useref="no"
    subtype="Basic"
    expanded="yes"
    squish="no"
    >
    <group loc="0 0" size="200 20"
      vq="jviewport layout"
      show="$SHOW=(jviewport=1)"
      bg="transparent"
      border="None"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      useref="no"
      subtype="Basic"
      >
      <button loc="0 0" size="80 20"
        style="PlainText"
        label="Prescan"
        vc="prescan_main"
        statpar="status"
        statshow="Idle"
        decor1="yes"
        />
      <button loc="80 0" size="80 20"
        style="PlainText"
        label="Gain"
        vc="{execprescan}"
        statpar="status"
        statshow="Idle"
        decor1="yes"
        />
      <label loc="160 0" size="40 20"
        label=""
        />
    </group>
    <group loc="0 0" size="200 20"
      vq="jviewport layout"
      show="$SHOW=(jviewport &lt;&gt; 1)"
      bg="transparent"
      border="None"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      useref="no"
      subtype="Basic"
      >
      <label loc="0 0" size="200 20"
        label=""
        />
    </group>

    <group loc="200 0" size="120 20"
      vq="jviewport layout"
      show="$SHOW=(jviewport &lt;&gt; 1)"
      bg="transparent"
      border="None"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      useref="no"
      subtype="Basic"
      >
      <label loc="0 0" size="120 20"
        label=""
        />
    </group>

    <group loc="200 0" size="120 20"
      vq="jviewport layout prepScan"
      show="$SHOW=(jviewport=1 and prepScan=1)"
      bg="transparent"
      border="None"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      useref="no"
      subtype="Basic"
      >
      <button loc="0 0" size="120 20"
        style="PlainText"
        label="Prep to Scan"
        vc="acquire('prep')"
        statpar="status"
        statshow="Idle"
        decor1="yes"
        />
    </group>
    <group loc="320 0" size="120 20"
      vq="jviewport layout"
      show="$SHOW=(jviewport=1)"
      bg="transparent"
      border="None"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      useref="no"
      subtype="Basic"
      >
      <button loc="0 0" size="120 20"
        style="Label4"
        label="Start scan"
        vc="acquire('start')"
        bg="0x006400"
        show="$SHOW=(jviewport=1)"
        decor1="yes"
        />
    </group>
    <group loc="320 0" size="120 20"
      vq="jviewport layout"
      show="$SHOW=(jviewport &lt;&gt; 1)"
      bg="transparent"
      border="None"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      useref="no"
      subtype="Basic"
      >
      <label loc="0 0" size="120 20"
        label=""
        />
    </group>
    <group loc="440 0" size="260 20"
      vq="jviewport layout"
      show="$SHOW=1"
      bg="transparent"
      border="None"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      useref="no"
      subtype="Basic"
      >
      <button loc="0 0" size="120 20"
        style="Label4"
        label="Stop"
        vq="system"
        vc="sqmode='pause' xmq('abort')"
        show="$VALUE=2*(system='spectrometer')-1"
        bg="darkRed"
        decor1="yes"
        />
      <label loc="120 0" size="60 20"
        label=""
        />
      <button loc="180 0" size="80 20"
        style="PlainText"
        label="Help"
        vc="sequencehelp"
        statpar="status"
        decor1="yes"
        />
    </group>
  </group>
</template>
