<template name="aipUtil" element="pages" type="imaging" >
  <group size="820 200"
    style="PlainText"
    label="Utilities"
    bg="transparent"
    border="None"
    side="Top"
    justify="Left"
    tab="yes"
    enable="no"
    reference="aipUtil"
    useref="no"
    subtype="Basic"
    expanded="yes"
    >
    <group loc="260 0" size="110 110"
      style="Heading1"
      label="Frames"
      bg="transparent"
      border="etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      useref="no"
      subtype="Major"
      >
      <button loc="8 24" size="80 24"
        style="PlainText"
        label="Select All"
        vc="aipSelectFrames('all')"
        decor1="No"
        />
      <button loc="8 48" size="80 24"
        style="PlainText"
        label="Deselect All"
        vc="aipSelectFrames('none')"
        decor1="No"
        />
    </group>
    <group loc="560 115" size="260 85"
      style="Heading1"
      label="Graphics Output"
      bg="transparent"
      border="etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      reference="DataOutput4"
      useref="no"
      subtype="Major"
      expanded="yes"
      >
      <menu loc="200 60" size="55 20"
        style="PlainText"
        vq="aipWriteFmtConvert"
        vc="aipWriteFmtConvert='$VALUE'"
        set="$VALUE=aipWriteFmtConvert"
        editable="No"
        >
        <mlabel 
          label="fdf"
          chval="FDF"
          />
        <mlabel 
          label="gif"
          chval="GIF convert -flip fits:$1 gif:$2.gif; setGifAspect $2.gif $1"
          />
        <mlabel 
          label="jpeg"
          chval="JPEG convert -flip fits:$1 jpg:$2.jpg"
          />
        <mlabel 
          label="fits"
          chval="FITS convert -flip fits:$1 fits:$2.fits"
          />
      </menu>
      <entry loc="90 60" size="110 20"
        style="PlainText"
        vq="printfile"
        vc="printfile='$VALUE'"
        set="$VALUE=printfile"
        disable="Grayed out"
        />
      <entry loc="90 40" size="110 20"
        style="PlainText"
        vq="printfile"
        vc="printfile='$VALUE'"
        set="$VALUE=printfile"
        disable="Grayed out"
        />
      <menu loc="200 40" size="55 20"
        style="PlainText"
        vq="printformat"
        vc="printformat='$VALUE'"
        set="$VALUE=printformat"
        editable="No"
        >
        <mlabel 
          label="jpeg"
          chval="jpeg"
          />
        <mlabel 
          label="png"
          chval="png"
          />
        <mlabel 
          label="ps"
          chval="ps"
          />
      </menu>
      <button loc="10 60" size="80 20"
        style="PlainText"
        label="Save Data"
        vc="aipWriteData(printfile):$str if ($str &lt;&gt; '') then write('line3','Last data file written: '+$str) endif"
        decor1="No"
        />
      <button loc="10 20" size="80 20"
        style="PlainText"
        label="Plot"
        vc="cdump"
        decor1="No"
        />
      <button loc="10 40" size="80 20"
        style="PlainText"
        label="Save Plot"
        vc="cdump(printfile)"
        decor1="No"
        />
    </group>
    <group loc="560 0" size="260 110"
      style="Heading1"
      label="Data Display"
      bg="transparent"
      border="etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      reference="DataDisplay"
      useref="no"
      subtype="Major"
      expanded="yes"
      >
      <button loc="145 20" size="50 20"
        style="PlainText"
        label="Refresh"
        vc="aipDisplay('batch','show')"
        decor1="No"
        />
      <button loc="200 20" size="50 20"
        style="PlainText"
        label="Reset"
        vc="aipDisplay('reset','batch','show')"
        decor1="No"
        />
      <entry loc="50 85" size="40 20"
        style="PlainText"
        vq="aipWindowSplit"
        vc="aipWindowSplit[2]=$VALUE aipSplitWindow(aipWindowSplit[1],aipWindowSplit[2]) aipDisplay"
        set="$VALUE=aipWindowSplit[2]"
        disable="Grayed out"
        />
      <label loc="10 85" size="40 20"
        style="Label1"
        label="Cols"
        justify="Left"
        />
      <label loc="10 65" size="40 20"
        style="Label1"
        label="Rows"
        justify="Left"
        />
      <entry loc="50 65" size="40 20"
        style="PlainText"
        vq="aipWindowSplit"
        vc="aipWindowSplit[1]=$VALUE aipSplitWindow(aipWindowSplit[1],aipWindowSplit[2]) aipDisplay"
        set="$VALUE=aipWindowSplit[1]"
        disable="Grayed out"
        />
      <label loc="150 85" size="50 20"
        style="Label1"
        label="Step"
        justify="Left"
        />
      <label loc="150 65" size="50 20"
        style="Label1"
        label="Number"
        justify="Left"
        />
      <entry loc="200 85" size="40 20"
        style="PlainText"
        vq="aipDisplay"
        vc="aipDisplay[3]=$VALUE aipDisplay('batch','show')"
        set="$VALUE=aipDisplay[3]"
        digits="0"
        disable="Grayed out"
        />
      <entry loc="200 65" size="40 20"
        style="PlainText"
        vq="aipDisplay"
        vc="aipDisplay[2]=$VALUE aipDisplay('batch','show')"
        set="$VALUE=aipDisplay[2]"
        digits="0"
        disable="Grayed out"
        />
      <textmessage loc="200 45" size="40 20"
        style="PlainText"
        label="1"
        vq="aipDisplay"
        set="$VALUE=aipDisplay[1]"
        digits="0"
        />
      <label loc="150 45" size="50 20"
        style="Label1"
        label="First"
        justify="Left"
        />
      <button loc="10 40" size="50 20"
        style="PlainText"
        label="Prev"
        vc="aipDisplay('batch','previous','show')"
        decor1="No"
        />
      <button loc="70 40" size="50 20"
        style="PlainText"
        label="Next"
        vc="aipDisplay('batch','next','show')"
        decor1="No"
        />
      <selmenu loc="10 20" size="110 20"
        style="PlainText"
        label="Select view"
        vc="aipSplitWindow($VALUE) aipDisplay('batch','first','show')"
        editable="No"
        >
        <mlabel 
          label="1"
          chval="1"
          />
        <mlabel 
          label="2"
          chval="2"
          />
        <mlabel 
          label="3"
          chval="3"
          />
        <mlabel 
          label="4"
          chval="4"
          />
        <mlabel 
          label="2x2"
          chval="2,2"
          />
        <mlabel 
          label="3x3"
          chval="3,3"
          />
        <mlabel 
          label="4x4"
          chval="4,4"
          />
        <mlabel 
          label="all"
          chval="`all`"
          />
      </selmenu>
    </group>
    <group loc="140 120" size="110 80"
      style="Heading1"
      label="Data"
      bg="transparent"
      border="etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      useref="no"
      subtype="Major"
      >
      <button loc="10 50" size="90 20"
        style="PlainText"
        label="Display"
        vc="aipShow"
        decor1="No"
        />
      <button loc="10 20" size="90 20"
        style="PlainText"
        label="Re-process"
        vc="process"
        decor1="No"
        />
    </group>
    <group loc="450 0" size="100 200"
      style="Heading1"
      label="Movie"
      vq="aipMode"
      bg="transparent"
      border="etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      reference="MovieControls"
      useref="no"
      subtype="Major"
      expanded="yes"
      >
      <button loc="40 80" size="24 24"
        style="PlainText"
        label="-"
        vc="stepMovie('-')"
        decor1="No"
        />
      <button loc="64 80" size="24 24"
        style="PlainText"
        label="+"
        vc="stepMovie('+')"
        decor1="No"
        />
      <entry loc="40 112" size="32 24"
        style="PlainText"
        vq="aipMovieRate"
        vc="aipMovieRate=$VALUE"
        set="$VALUE=aipMovieRate"
        disable="Grayed out"
        />
      <label loc="8 136" size="80 24"
        style="Label1"
        label="(Frames / s)"
        justify="Left"
        />
      <label loc="8 112" size="32 24"
        style="Label1"
        label="Rate"
        justify="Left"
        />
      <label loc="8 80" size="32 24"
        style="Label1"
        label="Step"
        justify="Left"
        />
      <button loc="8 48" size="80 24"
        style="PlainText"
        label="Stop"
        vc="stopMovie"
        decor1="No"
        />
      <button loc="8 24" size="80 24"
        style="PlainText"
        label="Start"
        vc="startMovie(aipMovieRate)"
        decor1="No"
        />
    </group>
    <group loc="380 0" size="60 200"
      style="Heading1"
      label="Rotate"
      vq="aipMode"
      bg="transparent"
      border="etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      reference="ImageMath"
      useref="no"
      subtype="Major"
      expanded="yes"
      >
      <button loc="16 168" size="24 24"
        style="PlainText"
        vc="aipFlip(45)"
        decor1="No"
        icon="rot_NE-SW"
        />
      <button loc="16 144" size="24 24"
        style="PlainText"
        vc="aipFlip(135)"
        decor1="No"
        icon="rot_NW-SE"
        />
      <button loc="16 120" size="24 24"
        style="PlainText"
        vc="aipFlip(90)"
        decor1="No"
        icon="rot_N-S"
        />
      <button loc="16 96" size="24 24"
        style="PlainText"
        vc="aipFlip(0)"
        decor1="No"
        icon="rot_E-W"
        />
      <button loc="16 72" size="24 24"
        style="PlainText"
        vc="aipRotate(270)"
        decor1="No"
        icon="rot_270"
        />
      <button loc="16 48" size="24 24"
        style="PlainText"
        vc="aipRotate(180)"
        decor1="No"
        icon="rot_180"
        />
      <button loc="16 24" size="24 24"
        style="PlainText"
        vc="aipRotate(90)"
        decor1="No"
        icon="rot_90"
        />
    </group>
    <group loc="260 120" size="110 80"
      style="Heading1"
      label="Unload Data"
      bg="transparent"
      border="etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      useref="no"
      subtype="Major"
      >
      <button loc="8 48" size="80 24"
        style="PlainText"
        label="All"
        vc="aipDeleteData('all')"
        decor1="No"
        />
      <button loc="8 20" size="80 24"
        style="PlainText"
        label="Selected"
        vc="aipDeleteData('sel')"
        decor1="No"
        />
    </group>
    <group loc="140 0" size="110 110"
      style="Heading1"
      label="ROIs"
      bg="transparent"
      border="etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      useref="no"
      subtype="Major"
      >
      <button loc="8 24" size="80 24"
        style="PlainText"
        label="Select All"
        vc="aipSelectRois('all')"
        decor1="No"
        />
      <button loc="8 48" size="80 24"
        style="PlainText"
        label="Deselect All"
        vc="aipSelectRois('none')"
        decor1="No"
        />
      <button loc="8 80" size="96 24"
        style="PlainText"
        label="Delete Selected"
        vc="aipDeleteRois"
        decor1="No"
        />
    </group>
    <group loc="0 0" size="130 200"
      style="Heading1"
      label="Mode"
      bg="transparent"
      border="etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      reference="AIPControl3"
      useref="no"
      subtype="Major"
      expanded="yes"
      >
      <radio loc="8 136" size="112 16"
        style="PlainText"
        label="Draw Oval"
        vq="aipMode"
        vc="aipSetState(10)"
        set="$VALUE=(aipMode=10)"
        />
      <radio loc="8 120" size="112 16"
        style="PlainText"
        label="Draw Box"
        vq="aipMode"
        vc="aipSetState(5)"
        set="$VALUE=(aipMode=5)"
        />
      <radio loc="8 152" size="112 16"
        style="PlainText"
        label="Draw Region"
        vq="aipMode"
        vc="aipSetState(7)"
        set="$VALUE=(aipMode=7)"
        />
      <radio loc="8 168" size="112 16"
        style="PlainText"
        label="Image Math"
        vq="aipMode"
        vc="aipSetState(100)"
        set="$VALUE=(aipMode=100)"
        />
      <radio loc="8 72" size="112 16"
        style="PlainText"
        label="Draw Point"
        vq="aipMode"
        vc="aipSetState(3)"
        set="$VALUE=(aipMode = 3)"
        />
      <radio loc="8 104" size="112 16"
        style="PlainText"
        label="Draw Curve"
        vq="aipMode"
        vc="aipSetState(6)"
        set="$VALUE=(aipMode=6)"
        />
      <radio loc="8 88" size="112 16"
        style="PlainText"
        label="Draw Line"
        vq="aipMode"
        vc="aipSetState(4)"
        set="$VALUE=(aipMode=4)"
        />
      <radio loc="8 56" size="112 16"
        style="PlainText"
        label="Zoom/Pan"
        vq="aipMode"
        vc="aipSetState(8)"
        set="$VALUE=(aipMode=8)"
        />
      <radio loc="8 40" size="112 16"
        style="PlainText"
        label="Vertical Scale"
        vq="aipMode"
        vc="aipSetState(2)"
        set="$VALUE=(aipMode = 2)"
        />
      <radio loc="8 24" size="112 16"
        style="PlainText"
        label="Select"
        vq="aipMode"
        vc="aipSetState(1)"
        set="$VALUE=(aipMode = 1)"
        />
    </group>
  </group>
</template>
