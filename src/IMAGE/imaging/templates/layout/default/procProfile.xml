<template name="proc2Dprofile" element="pages" type="processing" >
  <group size="800 270"
    style="PlainText"
    label="Profile"
    vq="profile"
    show="$str='' substr(profile,1,1):$str $VALUE =($str = 'y')"
    bg="transparent"
    border="None"
    side="Top"
    justify="Left"
    tab="yes"
    enable="no"
    reference="proc2Dprofile"
    useref="no"
    subtype="Convenience"
    expanded="yes"
    >
    <group loc="5 0" size="210 165"
      style="Heading1"
      label="Display"
      bg="transparent"
      border="etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      reference="Display"
      useref="no"
      subtype="Major"
      expanded="yes"
      >
      <button loc="105 110" size="100 20"
        style="Label1"
        label="Full Spectrum"
        vc="f ds"
        decor1="No"
        />
      <button loc="5 110" size="100 20"
        style="Label1"
        label="Full Screen"
        vc="full ds"
        decor1="No"
        />
      <button loc="105 85" size="100 20"
        style="Label1"
        label="SNR"
        vc="dsn"
        decor1="No"
        />
      <button loc="5 85" size="100 20"
        style="Label1"
        label="Autoscale"
        vc="vsadj ds"
        decor1="No"
        />
      <group loc="5 60" size="195 20"
        bg="transparent"
        border="None"
        tab="no"
        enable="no"
        useref="no"
        subtype="Convenience"
        >
        <menu loc="65 0" size="125 20"
          style="PlainText"
          label="menu"
          vq="aig"
          vc="aig = '$VALUE'"
          set="$VALUE = aig"
          editable="No"
          >
          <mlabel 
            label="Normalized"
            chval="nm"
            />
          <mlabel 
            label="Absolute"
            chval="ai"
            />
        </menu>
        <label loc="0 0" size="65 20"
          style="Label1"
          label="Scaling"
          />
      </group>
      <group loc="5 20" size="195 20"
        bg="transparent"
        border="None"
        tab="no"
        enable="no"
        useref="no"
        subtype="Convenience"
        >
        <menu loc="65 0" size="125 20"
          style="PlainText"
          label="menu"
          vq="dmg"
          vc="dmg = '$VALUE'"
          set="$VALUE = dmg"
          editable="No"
          >
          <mlabel 
            label="Phased"
            chval="ph"
            />
          <mlabel 
            label="Absolute Value"
            chval="av"
            />
          <mlabel 
            label="PowerMode"
            chval="pwr"
            />
        </menu>
        <label loc="0 0" size="65 20"
          style="Label1"
          label="Mode"
          />
      </group>
      <group loc="5 40" size="195 20"
        bg="transparent"
        border="None"
        tab="no"
        enable="no"
        useref="no"
        subtype="Convenience"
        >
        <menu loc="65 0" size="125 20"
          style="PlainText"
          label="menu"
          vq="axis"
          vc="axis='$VALUE' ds dscale"
          set="$str='' substr(axis,1,1):$str $VALUE = $str"
          editable="No"
          >
          <mlabel 
            label="cm"
            chval="c"
            />
          <mlabel 
            label="ppm"
            chval="p"
            />
          <mlabel 
            label="Hz"
            chval="h"
            />
          <mlabel 
            label="kHz"
            chval="k"
            />
        </menu>
        <label loc="0 0" size="65 20"
          style="Label1"
          label="Axis"
          />
      </group>
    </group>
    <group loc="220 0" size="210 165"
      style="Heading1"
      label="Arrays"
      bg="transparent"
      border="etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      reference="Arrays"
      useref="no"
      subtype="Major"
      expanded="yes"
      >
      <label loc="5 115" size="120 20"
        style="Label1"
        label="Vertical Offset"
        justify="Left"
        />
      <entry loc="125 115" size="50 20"
        style="PlainText"
        vq="vo"
        vc="vo=$VALUE"
        set="$VALUE=vo"
        digits="1"
        disable="Grayed out"
        />
      <label loc="5 95" size="120 20"
        style="Label1"
        label="Horizontal Offset"
        justify="Left"
        />
      <entry loc="125 95" size="50 20"
        style="PlainText"
        vq="ho"
        vc="ho=$VALUE"
        set="$VALUE=ho"
        digits="1"
        disable="Grayed out"
        />
      <label loc="5 75" size="150 20"
        style="Heading3"
        label="Stacked Spectra"
        justify="Left"
        />
      <button loc="5 135" size="95 20"
        style="Heading3"
        label="Display"
        vc="dss"
        decor1="No"
        />
      <button loc="5 40" size="95 20"
        style="Label1"
        label="Add Label"
        vc="dssl"
        decor1="No"
        />
      <button loc="100 20" size="95 20"
        style="Label1"
        label="Vertical"
        vc="ho=0 vo=10 full dss"
        decor1="No"
        />
      <button loc="5 20" size="95 20"
        style="Label1"
        label="Horizontal"
        vc="vo=0 full dssh"
        decor1="No"
        />
    </group>
  </group>
</template>
