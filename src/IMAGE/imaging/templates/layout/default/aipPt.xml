<template name="aipPt" element="pages" type="imaging" >
  <group size="760 210"
    style="PlainText"
    label="Point Info"
    bg="transparent"
    border="None"
    side="Top"
    justify="Left"
    tab="yes"
    enable="no"
    reference="aipPt"
    useref="no"
    subtype="Basic"
    expanded="yes"
    >
    <textmessage loc="20 125" size="445 20"
      style="PlainText"
      label=" "
      vq="aipPointProjSeparationMsg"
      set="$VALUE=aipPointProjSeparationMsg"
      />
    <textmessage loc="20 105" size="440 20"
      style="PlainText"
      label=" "
      vq="aipPointSeparationMsg"
      set="$VALUE=aipPointSeparationMsg"
      />
    <textmessage loc="20 65" size="440 20"
      style="PlainText"
      label="Data Coordinates: (125.31, 145.47) voxels"
      vq="aipPointDataCoordsMsg"
      set="$VALUE=aipPointDataCoordsMsg"
      />
    <textmessage loc="20 85" size="445 20"
      style="PlainText"
      label="Lab Coordinates: (0.10, -0.68, 0.00) cm"
      vq="aipPointLabCoordsMsg"
      set="$VALUE=aipPointLabCoordsMsg"
      />
    <textmessage loc="20 45" size="250 20"
      style="PlainText"
      label="Intensity: 0.1419"
      vq="aipPointIntensityMsg"
      set="$VALUE=aipPointIntensityMsg"
      />
    <group loc="5 25" size="150 20"
      vq="aipPointInfoNumber"
      show="$VALUE=aipPointInfoNumber"
      bg="transparent"
      border="None"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      useref="no"
      subtype="Basic"
      >
      <label loc="0 0" size="75 20"
        style="Heading1"
        label="ROI #"
        justify="Left"
        />
      <textmessage loc="85 0" size="65 20"
        style="Heading1"
        label="array"
        vq="aipPointInfoNumber"
        set="$VALUE=aipPointInfoNumber"
        />
    </group>
    <label loc="5 5" size="125 20"
      style="Heading1"
      label="Point Info:"
      justify="Left"
      />
  </group>
</template>
