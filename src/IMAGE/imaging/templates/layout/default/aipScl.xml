<template name="aipScl" element="pages" type="imaging" >
  <group size="840 305"
    style="PlainText"
    label="VScale"
    bg="transparent"
    border="None"
    side="Top"
    justify="Left"
    tab="yes"
    enable="no"
    reference="aipScl"
    useref="no"
    subtype="Basic"
    expanded="yes"
    >
    <group loc="255 260" size="425 45"
      bg="transparent"
      tab="no"
      enable="no"
      reference="VSMode"
      useref="no"
      subtype="Basic"
      expanded="yes"
      >
      <group loc="60 10" size="145 20"
        vq="jviewport"
        show="$VALUE=(jviewport=3)"
        bg="transparent"
        border="None"
        tab="no"
        enable="no"
        useref="no"
        subtype="Convenience"
        >
        <menu loc="8 0" size="135 20"
          style="PlainText"
          label="menu"
          vq="aipVsMode"
          vc="aipVsMode='$VALUE'"
          set="$VALUE=aipVsMode"
          >
          <mlabel 
            label="Individual"
            chval="individual"
            />
          <mlabel 
            label="All"
            chval="uniform"
            />
          <mlabel 
            label="Displayed"
            chval="displayed"
            />
          <mlabel 
            label="From Header"
            chval="header"
            />
          <mlabel 
            label="Group"
            chval="groups"
            />
          <mlabel 
            label="Selected in RQ"
            chval="operate"
            />
        </menu>
      </group>
      <button loc="280 10" size="95 20"
        style="PlainText"
        label="Save Scaling"
        vc="aipSaveVs"
        decor1="No"
        />
      <button loc="210 10" size="60 20"
        style="PlainText"
        label="Rescale"
        vc="aipSetVsFunction"
        decor1="No"
        />
      <label loc="10 10" size="60 20"
        style="Label1"
        label="VS Mode"
        />
    </group>
    <group loc="325 270" size="138 25"
      vq="jviewport"
      show="$VALUE=(jviewport&lt;&gt;3)"
      bg="transparent"
      border="None"
      tab="no"
      enable="no"
      useref="no"
      subtype="Convenience"
      >
      <menu loc="1 0" size="135 20"
        style="PlainText"
        label="menu"
        vq="aipVsMode"
        vc="aipVsMode='$VALUE'"
        set="$VALUE=aipVsMode"
        >
        <mlabel 
          label="Individual"
          chval="individual"
          />
        <mlabel 
          label="All"
          chval="uniform"
          />
        <mlabel 
          label="Displayed"
          chval="displayed"
          />
        <mlabel 
          label="From Header"
          chval="header"
          />
      </menu>
    </group>
    <group loc="345 50" size="160 20"
      vq="aipVsDifferent"
      show="$VALUE=aipVsDifferent"
      bg="transparent"
      border="None"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      useref="no"
      subtype="Basic"
      >
      <label loc="0 0" size="140 20"
        style="Error"
        label="Image Scales Differ"
        justify="Left"
        />
    </group>
    <entry loc="290 5" size="80 20"
      style="PlainText"
      vq="aipVsFunction"
      vc="aipVs('dmax',$VALUE)"
      set="aipVs('dmax'):$VALUE"
      digits="8"
      disable="Grayed out"
      />
    <label loc="225 5" size="65 20"
      style="Label1"
      label="Max Data "
      justify="Right"
      />
    <entry loc="130 5" size="80 20"
      style="PlainText"
      vq="aipVsFunction"
      vc="aipVs('dmin',$VALUE)"
      set="aipVs('dmin'):$VALUE"
      digits="8"
      disable="Grayed out"
      />
    <label loc="70 5" size="60 20"
      style="Label1"
      label="Min Data "
      justify="Right"
      />
    <label loc="5 0" size="55 20"
      style="Heading1"
      label="VScale"
      justify="Left"
      />
    <button loc="755 270" size="55 20"
      style="PlainText"
      label="Update"
      vc="aipSetVsFunction('hist')"
      decor1="No"
      />
    <vsctl loc="5 25" size="830 240"
      style="PlainText"
      label="entry"
      vq="aipVsHistFile aipVsFunctionFile"
      vc="if(aipVsFunctionFile='') then aipVsFunctionFile='/tmp/cltJunk' endif aipSetVsFunction('file')"
      set="$VALUE=aipVsHistFile"
      jointpts="Yes"
      fillhistgm="No"
      pointsize="None"
      lcshow="$VALUE=0"
      lccolor="transparent"
      rcshow="$VALUE=0"
      rccolor="transparent"
      graphbgcolor="GraphBackground"
      graphfgcolor="seaGreen"
      xaxisshow="Yes"
      yaxisshow="No"
      logyaxis="Yes"
      showgrid="No"
      range="$VALUE=aipVsFunction"
      gridcolor="GraphGrid"
      tickcolor="GraphGrid"
      path1="$VALUE=aipVsFunctionFile"
      />
  </group>
</template>
