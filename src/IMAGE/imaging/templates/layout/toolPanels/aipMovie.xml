<template name="aipMovie" element="pages" type="acquisition" >
  <group size="340 665"
    style="Heading1"
    label="Movie"
    bg="transparent"
    border="None"
    side="Top"
    justify="Left"
    tab="yes"
    enable="no"
    reference="aipMovie"
    useref="no"
    subtype="Convenience"
    expanded="yes"
    >
    <group loc="0 235" size="330 200"
      style="Heading1"
      label="Capture Movie"
      bg="transparent"
      border="etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      reference="Settings"
      useref="no"
      subtype="Major"
      expanded="yes"
      >
      <label loc="180 65" size="80 20"
          style="Label1"
          label="frames/sec"
          />
      <entry loc="100 65" size="75 20"
          style="PlainText"
          vq="aipMovieRate"
          vc="aipMovieRate=$VALUE"
          set="$VALUE=aipMovieRate"
          />
      <label loc="10 65" size="80 20"
          style="Label1"
          label="Movie rate:"
          />
      <button loc="10 140" size="160 20"
          style="Heading3"
          label="Capture and save"
          vc="aipMovie('capture')"
          bg="transparent"
          decor1="no"
          />
      <button loc="190 140" size="80 20"
          style="Heading3"
          label="Cancel"
          vc="aipMovie('cancel')"
          bg="transparent"
          decor1="no"
          />
      <button loc="10 170" size="160 20"
          style="Heading3"
          label="View captured movie"
          vc="vnmrjcmd('movie','view',aipMoviePath, aipMovieSettings[4], aipMovieSettings[5])"
          bg="transparent"
          decor1="no"
          />
      <label loc="180 170" size="160 20"
          style="Label1"
          label="from above file."
          />
      <label loc="10 85" size="260 20"
          style="Label1"
          label="Path to save QuickTime movie file:"
          />
      <entry loc="10 105" size="260 20"
          style="PlainText"
          vq="aipMoviePath"
          vc="aipMoviePath='$VALUE'"
          set="$VALUE=aipMoviePath"
          />
      <label loc="10 20" size="200 20"
          style="Label1"
          label="Movie size:"
          />
      <menu loc="10 40" size="60 20"
          style="PlainText"
          vq="aipMovieSpec"
          vc="aipMovieSpec='$VALUE' aipMovie('setSize',aipMovieSpec)"
          set="$VALUE=aipMovieSpec"
          editable="No"
          >
          <mlabel 
            label="Full"
            chval="full"
            />
          <mlabel 
            label="Max"
            chval="max"
            />
          <mlabel 
            label="75%"
            chval="75"
            />
          <mlabel 
            label="50%"
            chval="50"
            />
          <mlabel 
            label="25%"
            chval="25"
            />
          <mlabel 
            label="WxH"
            chval="WxH"
            />
      </menu>
      <label loc="85 40" size="20 20"
          style="Label1"
          label="W"
          />
      <entry loc="100 40" size="75 20"
          style="PlainText"
          vq="aipMovieSettings aipMovieSpec"
          vc="aipMovieSettings[4]=$VALUE"
          set="$VALUE=aipMovieSettings[4]"
          show="if(aipMovieSpec='WxH') then $SHOW=1 else $SHOW=-1 endif"
          />
      <label loc="180 40" size="20 20"
          style="Label1"
          label="H"
          />
      <entry loc="195 40" size="75 20"
          style="PlainText"
          vq="aipMovieSettings aipMovieSpec"
          vc="aipMovieSettings[5]=$VALUE"
          set="$VALUE=aipMovieSettings[5]"
          show="if(aipMovieSpec='WxH') then $SHOW=1 else $SHOW=-1 endif"
          />
    </group>
    <group loc="0 160" size="330 75"
      style="Heading1"
      label="Movie Settings"
      bg="transparent"
      border="etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      reference="Settings"
      useref="no"
      subtype="Major"
      expanded="yes"
      >
      <check loc="10 40" size="130 20"
        style="PlainText"
        label="Show Graphics"
        vq="aipMovieSettings"
        vc="aipMovieSettings[2] = 1"
        vc2="aipMovieSettings[2] = 0"
        set="$VALUE=aipMovieSettings[2]"
        />
      <check loc="10 20" size="90 20"
        style="PlainText"
        label="Repeat"
        vq="aipMovieSettings"
        vc="aipMovieSettings[1] = 1"
        vc2="aipMovieSettings[1] = 0"
        set="$VALUE=aipMovieSettings[1]"
        />
    </group>
    <group loc="0 0" size="330 160"
      style="Heading1"
      label="Play Movie"
      bg="transparent"
      border="etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      reference="PlayMovie"
      useref="no"
      subtype="Major"
      expanded="yes"
      >
      <group loc="10 80" size="290 20"
        bg="transparent"
        border="None"
        tab="no"
        enable="no"
        useref="no"
        subtype="Convenience"
        >
        <button loc="240 0" size="20 10"
          style="PlainText"
          vq="aipMovieRate"
          vc="aipMovieRate = aipMovieRate + 1"
          decor1="no"
          icon="up"
          />
        <button loc="240 10" size="20 10"
          style="PlainText"
          vq="aipMovieRate"
          vc="aipMovieRate = aipMovieRate - 1"
          decor1="no"
          icon="down"
          />
        <label loc="165 0" size="80 20"
          style="Label1"
          label="images/sec"
          />
        <entry loc="80 0" size="80 20"
          style="PlainText"
          vq="aipMovieRate"
          vc="aipMovieRate=$VALUE"
          set="$VALUE=aipMovieRate"
          />
        <label loc="0 0" size="80 20"
          style="Label1"
          label="Frame rate"
          />
      </group>
      <group loc="10 110" size="250 40"
        bg="transparent"
        border="None"
        tab="no"
        enable="no"
        useref="no"
        subtype="Convenience"
        >
        <button loc="180 0" size="40 40"
          style="PlainText"
          vc="if(aipMovieRate &lt; 0.5) then stepMovie(1) else aipMovieSettings[3]=1 continueMovie(aipMovieRate) endif"
          bg="transparent"
          decor1="no"
          icon="play"
          />
        <button loc="130 0" size="40 40"
          style="PlainText"
          vc="stopMovie"
          bg="transparent"
          decor1="no"
          icon="pause"
          />
        <button loc="80 0" size="40 40"
          style="PlainText"
          vc="resetMovie(aipMovieRate)"
          bg="transparent"
          decor1="no"
          icon="stop"
          />
        <button loc="30 0" size="40 40"
          style="PlainText"
          vc="if(aipMovieRate &lt; 0.5) then stepMovie(-1) else aipMovieSettings[3]=-1 continueMovie(aipMovieRate) endif"
          bg="transparent"
          decor1="no"
          icon="reverse"
          />
      </group>
      <group loc="10 50" size="250 30"
        vq="aipMovieMode"
        show="$VALUE=(aipMovieMode=5)"
        bg="transparent"
        border="None"
        tab="no"
        enable="no"
        useref="no"
        subtype="Convenience"
        >
        <entry loc="90 0" size="140 20"
          style="PlainText"
          vq="userselection"
          vc="userselection='$VALUE'"
          set="$VALUE=userselection"
          />
        <label loc="30 0" size="60 20"
          style="Label1"
          label="Select:"
          />
      </group>
      <group loc="10 25" size="250 25"
        vq="jviewport"
        show="$VALUE=(jviewport=3)"
        bg="transparent"
        tab="no"
        enable="no"
        reference="SelectImages"
        useref="no"
        subtype="Basic"
        expanded="yes"
        >
        <label loc="0 6" size="90 20"
          style="Label1"
          label="Operate on"
          />
        <menu loc="90 6" size="140 20"
          style="PlainText"
          vq="aipMovieMode"
          vc="aipMovieMode=$VALUE resetMovie"
          set="$VALUE=aipMovieMode"
          editable="No"
          >
          <mlabel 
            label="All"
            chval="1"
            />
          <mlabel 
            label="Select..."
            chval="5"
            />
          <mlabel 
            label="Selected Frames"
            chval="4"
            />
          <mlabel 
            label="Selected in RQ"
            chval="3"
            />
        </menu>
      </group>
      <group loc="10 30" size="265 20"
        vq="jviewport"
        show="$VALUE=(jviewport&lt;&gt;3)"
        bg="transparent"
        tab="no"
        enable="no"
        reference="SelectImages"
        useref="no"
        subtype="Basic"
        expanded="yes"
        >
        <label loc="0 0" size="90 20"
          style="Label1"
          label="Operate on"
          />
        <menu loc="90 0" size="140 20"
          style="PlainText"
          vq="aipMovieMode"
          vc="aipMovieMode=$VALUE resetMovie"
          set="$VALUE=aipMovieMode"
          editable="No"
          >
          <mlabel 
            label="All"
            chval="1"
            />
          <mlabel 
            label="Select..."
            chval="5"
            />
          <mlabel 
            label="Selected Frames"
            chval="4"
            />
        </menu>
      </group>
    </group>
  </group>
</template>
