<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<template name="proc1D_Corrections" element="pages" type="processing" >
  <group size="800 270"
    style="Heading2"
    label="Corrections"
    bg="transparent"
    border="None"
    side="Top"
    justify="Right"
    tab="yes"
    enable="no"
    reference="proc1D_Corrections"
    useref="no"
    subtype="Basic"
    expanded="yes"
    >
    <group loc="565 95" size="210 95"
      style="Heading1"
      label="Undo/Repeat"
      bg="transparent"
      border="etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      reference="1dweight"
      useref="no"
      subtype="Major"
      expanded="yes"
      >
      <button loc="30 35" size="140 20"
        style="PlainText"
        label="Restore Original Fid"
        vc="apply_freq('restore')"
        bg="transparent"
        decor1="no"
        />
      <check loc="30 65" size="20 20"
        style="PlainText"
        vq="a_repeat"
        vc="a_repeat='y'"
        vc2="a_repeat='n'"
        set="$VALUE=(a_repeat='y')"
        />
      <label loc="45 65" size="125 20"
        style="PlainText"
        label="Allow Repeat Action"
        justify="Left"
        />
    </group>
    <group loc="355 5" size="210 185"
      style="Heading1"
      label="Add Scans"
      bg="transparent"
      border="etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      reference="1dweight"
      useref="no"
      subtype="Major"
      expanded="yes"
      >
      <check loc="125 20" size="80 25"
        style="PlainText"
        label="Sum All"
        vq="a_sum_all a_fid_max arraydim"
        vc="a_sum_all='y' a_fid_max=arraydim"
        vc2="a_sum_all='n'"
        set="$VALUE=(a_sum_all='y')"
        />
      <group loc="15 65" size="180 75"
        bg="transparent"
        border="None"
        tab="no"
        enable="no"
        useref="no"
        subtype="Convenience"
        >
        <entry loc="125 25" size="30 20"
          style="PlainText"
          vq="a_fid_max a_sum_all arraydim"
          vc="if a_sum_all='y' then a_fid_max=arraydim else a_fid_max=$VALUE endif"
          set="$VALUE=a_fid_max"
          show="$VALUE=(a_sum_all='n')"
          disable="Grayed out"
          />
        <entry loc="125 5" size="30 20"
          style="PlainText"
          vq="a_fid_min a_sum_all"
          vc="a_fid_min=$VALUE"
          set="$VALUE=a_fid_min"
          show="$VALUE=(a_sum_all='n')"
          disable="Grayed out"
          />
        <label loc="5 50" size="120 20"
          style="PlainText"
          label="Increment"
          justify="Left"
          />
        <entry loc="125 45" size="30 20"
          style="PlainText"
          vq="a_increment"
          vc="a_increment=$VALUE"
          set="$VALUE=a_increment"
          disable="Grayed out"
          />
        <label loc="5 30" size="120 20"
          style="PlainText"
          label="Last Fid #"
          justify="Left"
          />
        <label loc="5 10" size="120 20"
          style="PlainText"
          label="First Fid #"
          justify="Left"
          />
      </group>
      <button loc="15 25" size="95 20"
        style="Label1"
        label="Apply Sum"
        vq="a_sum_all"
        vc="apply_sum a_sum_all='y'"
        bg="transparent"
        decor1="no"
        />
    </group>
    <group loc="145 5" size="210 185"
      style="Heading1"
      label="Align Phase"
      bg="transparent"
      border="etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      reference="1dallign"
      useref="no"
      subtype="Major"
      expanded="yes"
      >
      <button loc="40 25" size="105 20"
        style="PlainText"
        label="Apply Phase"
        vc="apply_phase"
        bg="transparent"
        decor1="no"
        />
      <entry loc="170 140" size="30 20"
        style="PlainText"
        vq="a_fid_no"
        vc="a_fid_no=$VALUE"
        set="$VALUE=a_fid_no"
        disable="Grayed out"
        />
      <label loc="5 140" size="135 20"
        style="PlainText"
        label="Reference Fid #"
        justify="Left"
        />
      <entry loc="170 120" size="30 20"
        style="PlainText"
        vq="a_s2n"
        vc="a_s2n=$VALUE"
        set="$VALUE=a_s2n"
        disable="Grayed out"
        />
      <label loc="5 120" size="135 20"
        style="PlainText"
        label="SNR factor"
        justify="Left"
        />
      <entry loc="170 100" size="30 20"
        style="PlainText"
        vq="a_rmsd"
        vc="a_rmsd=$VALUE"
        set="$VALUE=a_rmsd"
        disable="Grayed out"
        />
      <label loc="5 100" size="145 20"
        style="PlainText"
        label="Noise points (end of fid)"
        justify="Left"
        />
      <entry loc="170 80" size="30 20"
        style="PlainText"
        vq="a_no_skip"
        vc="a_no_skip=$VALUE"
        set="$VALUE=a_no_skip"
        disable="Grayed out"
        />
      <label loc="5 80" size="160 20"
        style="PlainText"
        label="Skip points (start of fid)"
        justify="Left"
        />
      <label loc="5 60" size="120 20"
        style="PlainText"
        label="Analysis points"
        justify="Left"
        />
      <entry loc="170 60" size="30 20"
        style="PlainText"
        vq="a_no_points"
        vc="a_no_points=$VALUE"
        set="$VALUE=a_no_points"
        disable="Grayed out"
        />
    </group>
    <group loc="565 5" size="210 90"
      style="Heading1"
      label="Eddy Current Correction"
      bg="transparent"
      border="etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      reference="1dweight"
      useref="no"
      subtype="Major"
      expanded="yes"
      >
      <check loc="10 55" size="20 20"
        style="PlainText"
        vq="a_watref"
        vc="a_watref='y'"
        vc2="a_watref='n'"
        set="$VALUE=(a_watref='y')"
        toolTip="wrefname parameter stores the location of the reference fid"
        />
      <label loc="30 55" size="160 20"
        style="PlainText"
        label="Use Standard Reference"
        justify="Left"
        />
      <button loc="25 25" size="145 20"
        style="Label1"
        label="Correct EC"
        vc="apply_ecc"
        bg="transparent"
        decor1="no"
        toolTip="Only for non-arrayed experiment"
        />
    </group>
    <group loc="5 5" size="140 185"
      style="Heading1"
      label="Align Frequency"
      bg="transparent"
      border="etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      reference="1dweight"
      useref="no"
      subtype="Major"
      expanded="yes"
      >
      <menu loc="15 55" size="90 20"
        style="PlainText"
        label="menu"
        vq="dmg "
        vc="a_dmg_default='n' dmg='$VALUE'"
        set="$VALUE=dmg"
        editable="No"
        >
        <mlabel 
          label="Phased"
          chval="ph"
          />
        <mlabel 
          label="Magnitude"
          chval="av"
          />
      </menu>
      <button loc="15 25" size="90 20"
        style="PlainText"
        label="Apply Freq"
        vc="apply_freq "
        bg="transparent"
        decor1="no"
        />
    </group>
  </group>
</template>
