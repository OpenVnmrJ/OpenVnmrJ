<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<template name="acq2DPlan" element="pages" type="acquisition" >
  <group size="800 270"
    style="PlainText"
    label="Plan"
    bg="transparent"
    border="None"
    side="Top"
    justify="Left"
    tab="yes"
    enable="no"
    reference="acq2DPlan"
    useref="no"
    subtype="Convenience"
    expanded="yes"
    >
    <group loc="220 0" size="210 125"
      style="Heading1"
      label="Slice"
      bg="transparent"
      border="etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      reference="Slice"
      useref="no"
      subtype="Major"
      expanded="yes"
      >
      <entry loc="65 100" size="40 20"
        style="PlainText"
        vq="pss0"
        vc="pss0=$VALUE/10.0 gplan('setValue','pss0',$VALUE/10)"
        set="$VALUE=pss0*10"
        disable="Grayed out"
        />
      <entry loc="65 80" size="40 20"
        style="PlainText"
        vq="gap"
        vc="gplan('setValue','gap',$VALUE/10)"
        set="$VALUE = gap*10"
        disable="Grayed out"
        />
      <entry loc="65 60" size="40 20"
        style="PlainText"
        vq="thk"
        vc="gplan('setValue','thk',$VALUE) go('check')"
        set="$VALUE = thk"
        disable="Grayed out"
        />
      <entry loc="65 40" size="40 20"
        style="PlainText"
        vq="pss ns"
        vc="gplan('setValue','ns',$VALUE) ns=ns go('check') "
        set="$VALUE = size('pss')"
        disable="Grayed out"
        />
      <label loc="5 100" size="60 20"
        style="Label1"
        label="Position"
        justify="Left"
        />
      <label loc="5 80" size="60 20"
        style="Label1"
        label="Gap"
        justify="Left"
        />
      <label loc="5 60" size="60 20"
        style="Label1"
        label="Thickness"
        justify="Left"
        />
      <label loc="5 40" size="60 20"
        style="Label1"
        label="Slices"
        justify="Left"
        />
      <menu loc="5 20" size="185 20"
        style="PlainText"
        vq="pss iplanType"
        vc="gplan('alternateSlices', $VALUE)"
        set="gplan('getActStackInfo', 'alternateOrder'):$VALUE"
        >
        <mlabel 
          label="Linear"
          chval="0"
          />
        <mlabel 
          label="Interleaved"
          chval="1"
          />
        <mlabel 
          label="Reverse linear"
          chval="2"
          />
        <mlabel 
          label="Reverse interleaved"
          chval="3"
          />
      </menu>
      <check loc="135 80" size="45 20"
        style="PlainText"
        label="Fix"
        vc="gplan('setGapMode',1)"
        vc2="gplan('setGapMode',0)"
        set="gplan('getGapMode'):$VALUE"
        />
      <label loc="105 60" size="30 20"
        style="Label1"
        label="mm"
        justify="Left"
        />
      <label loc="105 80" size="30 20"
        style="Label1"
        label="mm"
        justify="Left"
        />
      <label loc="105 100" size="30 20"
        style="Label1"
        label="mm"
        justify="Left"
        />
    </group>
    <group loc="220 125" size="210 145"
      style="Heading1"
      label="Sat bands"
      vq="sat"
      show="exists('sat','parameter'):$VALUE"
      bg="transparent"
      border="etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      reference="plansatbands"
      useref="no"
      subtype="Major"
      expanded="yes"
      >
      <group loc="5 120" size="205 20"
        bg="transparent"
        border="None"
        tab="no"
        enable="no"
        useref="no"
        subtype="Convenience"
        >
        <entry loc="100 0" size="40 20"
          style="PlainText"
          vq="sphi"
          vc="gplan('setValue','sphi',$VALUE)"
          set="$VALUE=sphi"
          disable="Grayed out"
          />
        <entry loc="60 0" size="40 20"
          style="PlainText"
          vq="spsi"
          vc="gplan('setValue','spsi',$VALUE)"
          set="$VALUE=spsi"
          disable="Grayed out"
          />
        <entry loc="140 0" size="40 20"
          style="PlainText"
          vq="stheta"
          vc="gplan('setValue','stheta',$VALUE)"
          set="$VALUE=stheta"
          disable="Grayed out"
          />
        <label loc="0 0" size="60 20"
          style="Label1"
          label="Angles"
          justify="Left"
          />
      </group>
      <group loc="5 80" size="155 40"
        bg="transparent"
        border="None"
        tab="no"
        enable="no"
        useref="no"
        subtype="Convenience"
        >
        <entry loc="60 20" size="40 20"
          style="PlainText"
          vq="satthk"
          vc="gplan('setValue','satthk',$VALUE)"
          set="$VALUE=satthk"
          disable="Grayed out"
          />
        <entry loc="60 0" size="40 20"
          style="PlainText"
          vq="satpos"
          vc="gplan('setValue','satpos',$VALUE/10.0)"
          set="$VALUE=satpos*10.0"
          disable="Grayed out"
          />
        <label loc="120 0" size="30 20"
          style="Label1"
          label="mm"
          justify="Left"
          />
        <label loc="120 20" size="30 20"
          style="Label1"
          label="mm"
          justify="Left"
          />
        <label loc="0 20" size="60 20"
          style="Label1"
          label="Thickness"
          justify="Left"
          />
        <label loc="0 0" size="50 20"
          style="Label1"
          label="Position"
          justify="Left"
          />
      </group>
      <textmessage loc="70 60" size="45 20"
        style="PlainText"
        label="1"
        vq="nsat sat satpos"
        set="$VALUE=size('satpos')*(sat='y')"
        />
      <toggle loc="105 20" size="100 20"
        style="PlainText"
        label="View sat bands"
        vq="iplanType"
        vc="gplan('setDefaultType', 4) setgplan('standard getCurrentStacks' )"
        vc2="gplan('setDefaultType', 0) setgplan('standard getCurrentStacks' )"
        set="$VALUE = (iplanType = 4)"
        radiobutton="false"
        />
      <label loc="5 60" size="55 20"
        style="Label1"
        label="Bands"
        justify="Left"
        />
      <button loc="105 40" size="100 20"
        style="PlainText"
        label="Delete sat band"
        vc="if (size('satpos') = 1) then gplan('setDefaultType', 0) endif   gplan('deleteSelected')"
        decor1="No"
        />
      <button loc="5 40" size="100 20"
        style="PlainText"
        label="Add sat band"
        vc="gplan('addAstack',4)"
        decor1="No"
        />
      <check loc="5 20" size="80 20"
        style="PlainText"
        label="Spatial Sat"
        vq="sat"
        vc="sat = 'y'"
        vc2="sat = 'n'  gplan('setDefaultType', 2) setgplan('standard getCurrentStacks' )"
        set="$VALUE = (sat = 'y')"
        />
    </group>
    <group loc="5 0" size="210 270"
      style="Heading1"
      label="FOV"
      vq="iplanType"
      bg="transparent"
      border="etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      reference="Volume&amp;Slab"
      useref="no"
      subtype="Major"
      expanded="yes"
      >
      <group loc="5 135" size="200 40"
        bg="transparent"
        border="None"
        tab="no"
        enable="no"
        useref="no"
        subtype="Convenience"
        >
        <check loc="170 20" size="20 20"
          style="PlainText"
          vc="gplan('setUseppe',1) ppe = ppe"
          vc2="gplan('setUseppe',0)"
          set="gplan('getUseppe'):$VALUE"
          />
        <label loc="130 20" size="40 20"
          style="Label1"
          label="mm"
          justify="Left"
          />
        <label loc="130 0" size="40 20"
          style="Label1"
          label="mm"
          justify="Left"
          />
        <entry loc="70 20" size="60 20"
          style="PlainText"
          vq="ppe"
          vc="gplan('setValue','ppe',$VALUE/10.0)"
          set="$VALUE=ppe*10.0"
          show="gplan('getUseppe'):$v if ($v = 0) then $VALUE = -1 else $VALUE = 1 endif"
          disable="Label"
          />
        <entry loc="70 0" size="60 20"
          style="PlainText"
          vq="pro"
          vc="gplan('setValue','pro',$VALUE/10.0)"
          set="$VALUE=pro*10.0"
          disable="Grayed out"
          />
        <label loc="0 20" size="70 20"
          style="Label1"
          label="Phase pos."
          justify="Left"
          />
        <label loc="0 0" size="70 20"
          style="Label1"
          label="Readout pos."
          justify="Left"
          />
      </group>
      <group loc="5 180" size="190 60"
        bg="transparent"
        border="None"
        tab="no"
        enable="no"
        reference="euler_vert"
        useref="no"
        subtype="Convenience"
        expanded="yes"
        >
        <entry loc="70 20" size="60 20"
          style="PlainText"
          vq="phi"
          vc="gplan('setValue','phi',$VALUE)"
          set="$VALUE=phi"
          disable="Grayed out"
          />
        <entry loc="70 0" size="60 20"
          style="PlainText"
          vq="psi"
          vc="gplan('setValue','psi',$VALUE)"
          set="$VALUE=psi"
          disable="Grayed out"
          />
        <entry loc="70 40" size="60 20"
          style="PlainText"
          vq="theta"
          vc="gplan('setValue','theta',$VALUE)"
          set="$VALUE=theta"
          disable="Grayed out"
          />
        <label loc="0 40" size="55 20"
          style="Label1"
          label="theta"
          justify="Left"
          />
        <label loc="0 20" size="55 20"
          style="Label1"
          label="phi"
          justify="Left"
          />
        <label loc="0 0" size="55 20"
          style="Label1"
          label="psi"
          justify="Left"
          />
      </group>
      <group loc="5 65" size="185 20"
        vq="studyid"
        show="$VALUE=1"
        bg="transparent"
        border="None"
        side="Top"
        justify="Left"
        tab="no"
        enable="no"
        useref="no"
        subtype="Basic"
        >
        <filemenu loc="70 0" size="100 20"
          style="PlainText"
          vq="orient planValue"
          vc="iplanType = 0 planValue='$VALUE' setgplan('$VALUE')"
          set="$VALUE = planValue"
          file="exists(sqdir+'/plans','file'):$e if ($e = 0) then $VALUE=systemdir+'/imaging/templates/vnmrj/choicefiles/plans' else $VALUE=sqdir+'/plans' endif"
          type="file"
          vq2="sqdir studyid"
          />
        <label loc="0 0" size="70 20"
          style="Label1"
          label="Orientation"
          justify="Left"
          />
      </group>
      <button loc="5 20" size="120 20"
        style="Label1"
        label="Add a Stack"
        vc="gplan('addAstack',0)"
        decor1="No"
        />
      <button loc="5 40" size="120 20"
        style="Label1"
        label="Marking"
        vc="gplan('setMarkMode', 1)"
        decor1="No"
        />
      <group loc="5 90" size="185 40"
        bg="transparent"
        border="None"
        tab="no"
        enable="no"
        useref="no"
        subtype="Convenience"
        >
        <label loc="130 20" size="40 20"
          style="Label1"
          label="mm"
          justify="Left"
          />
        <label loc="130 0" size="40 20"
          style="Label1"
          label="mm"
          justify="Left"
          />
        <entry loc="70 20" size="60 20"
          style="PlainText"
          vq="lpe"
          vc="gplan('setValue','lpe',$VALUE/10.0)"
          set="$VALUE=lpe*10.0"
          disable="Grayed out"
          />
        <entry loc="70 0" size="60 20"
          style="PlainText"
          vq="lro"
          vc="gplan('setValue','lro',$VALUE/10.0)"
          set="$VALUE=lro*10.0"
          disable="Grayed out"
          />
        <label loc="0 20" size="60 20"
          style="Label1"
          label="Phase"
          justify="Left"
          />
        <label loc="0 0" size="60 20"
          style="Label1"
          label="Readout"
          justify="Left"
          />
      </group>
    </group>
    <group loc="435 0" size="210 270"
      style="Heading1"
      label="Display Options"
      vq="iplanType"
      bg="transparent"
      border="etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      reference="DisplayOptions"
      useref="no"
      subtype="Major"
      expanded="yes"
      >
      <group loc="5 145" size="130 100"
        bg="transparent"
        border="None"
        tab="no"
        enable="no"
        useref="no"
        subtype="Convenience"
        >
        <check loc="0 80" size="100 20"
          style="PlainText"
          label="Single line"
          vq="iplanType"
          vc="gplan('setDisplayStyle', 1)"
          vc2="gplan('setDisplayStyle', 0)"
          set="gplan('getActStackInfo', 'style'):$VALUE"
          />
        <check loc="0 60" size="105 20"
          style="PlainText"
          label="Fill slices"
          vq="iplanType"
          vc="gplan('setFillPolygon', 1)"
          vc2="gplan('setFillPolygon', 0)"
          set="gplan('getActStackInfo', 'fill'):$VALUE"
          />
        <check loc="0 40" size="110 20"
          style="PlainText"
          label="Show slice order"
          vq="iplanType"
          vc="gplan('setDrawOrders', 1)"
          vc2="gplan('setDrawOrders', 0)"
          set="gplan('getActStackInfo', 'drawOrder'):$VALUE"
          />
        <check loc="0 20" size="100 20"
          style="PlainText"
          label="3D view"
          vq="iplanType"
          vc="gplan('setDraw3D', 1)"
          vc2="gplan('setDraw3D', 0)"
          set="gplan('getActStackInfo', 'draw3D'):$VALUE"
          />
        <check loc="0 0" size="100 20"
          style="PlainText"
          label="Display Axes"
          vq="iplanType"
          vc="gplan('setDrawAxes', 1)"
          vc2="gplan('setDrawAxes', 0)"
          set="gplan('getActStackInfo', 'drawAxes'):$VALUE"
          />
      </group>
      <group loc="5 20" size="130 120"
        bg="transparent"
        border="None"
        tab="no"
        enable="no"
        useref="no"
        subtype="Convenience"
        >
        <button loc="0 100" size="110 20"
          style="PlainText"
          label="Restart Plan"
          vc="gplan('startIplan', -1)"
          decor1="No"
          />
        <button loc="0 80" size="110 20"
          style="PlainText"
          label="Refresh Display"
          vc="gplan('refresh')"
          decor1="No"
          />
        <button loc="0 60" size="110 20"
          style="PlainText"
          label="Save Milestone"
          vc="gplan('saveMilestoneStacks')"
          decor1="No"
          />
        <button loc="0 40" size="110 20"
          style="PlainText"
          label="Restore Stack"
          vc="gplan('restoreStack')"
          decor1="No"
          />
        <button loc="0 20" size="110 20"
          style="PlainText"
          label="Delete Stack"
          vc="gplan('deleteSelected')"
          decor1="No"
          />
        <button loc="0 0" size="110 20"
          style="PlainText"
          label="Clear Display"
          vc="gplan('clearStacks')"
          decor1="No"
          />
      </group>
    </group>
  </group>
</template>
