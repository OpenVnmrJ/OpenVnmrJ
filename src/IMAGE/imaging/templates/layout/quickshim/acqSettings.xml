<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<template name="acqSettings" element="pages" type="acquisition" >
  <group size="725 230"
    label="Settings"
    bg="transparent"
    border="None"
    side="Top"
    justify="Left"
    tab="yes"
    enable="no"
    reference="acqSettings"
    useref="no"
    subtype="Basic"
    expanded="yes"
    >
    <group loc="360 40" size="320 185"
      style="Heading1"
      label="Shim Calibration"
      bg="transparent"
      border="Etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      reference="z"
      useref="no"
      subtype="Basic"
      expanded="yes"
      >
      <entry loc="120 125" size="55 20"
        style="PlainText"
        vq="shimgrad"
        vc="shimgrad=$VALUE"
        set="$VALUE=shimgrad"
        digits="3"
        disable="Grayed out"
        />
      <label loc="5 25" size="60 20"
        style="Label1"
        label="Shims"
        justify="Left"
        />
      <label loc="5 85" size="105 20"
        style="Label1"
        label="z1c           (DAC)"
        justify="Left"
        />
      <label loc="5 65" size="105 20"
        style="Label1"
        label="y1            (DAC)"
        justify="Left"
        />
      <label loc="5 125" size="105 20"
        style="Label1"
        label="Shim step  (G/cm)"
        justify="Left"
        />
      <label loc="5 45" size="105 20"
        style="Label1"
        label="x1            (DAC)"
        justify="Left"
        />
      <entry loc="120 85" size="60 20"
        style="PlainText"
        vq="z1c"
        vc="z1c=$VALUE load=y"
        set="$VALUE=z1c"
        digits="0"
        disable="Grayed out"
        />
      <entry loc="120 45" size="60 20"
        style="PlainText"
        vq="x1"
        vc="x1=$VALUE load=y"
        set="$VALUE=x1"
        digits="0"
        disable="Grayed out"
        />
      <entry loc="120 65" size="60 20"
        style="PlainText"
        vq="y1"
        vc="y1=$VALUE load=y"
        set="$VALUE=y1"
        digits="0"
        disable="Grayed out"
        />
      <label loc="245 125" size="40 20"
        style="Label1"
        label="(DAC)"
        justify="Center"
        />
      <textmessage loc="200 125" size="45 20"
        style="PlainText"
        label="800"
        vq="shimgrad gmax shimscale"
        set="$VALUE=(shimgrad*32000)/(gmax*shimscale)"
        digits="0"
        />
      <button loc="15 155" size="150 20"
        style="Heading3"
        label="Set shim polarity"
        vc="qkshimcalib"
        decor1="No"
        />
    </group>
    <group loc="10 40" size="320 185"
      style="Heading1"
      label="Options"
      bg="transparent"
      border="Etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      reference="z"
      useref="no"
      subtype="Basic"
      expanded="yes"
      >
      <check loc="10 50" size="120 20"
        style="PlainText"
        label="Load shims"
        vc="shimload=1"
        vc2="shimload=0"
        set="$VALUE=(shimload=1)"
        show="on('shimcalc'):$VALUE"
        />
      <check loc="10 25" size="120 20"
        style="PlainText"
        label="Display data"
        vc="show='y'"
        vc2="show='n'"
        set="$VALUE=(show='y')"
        show="on('show'):$VALUE"
        />
    </group>
  </group>
</template>
