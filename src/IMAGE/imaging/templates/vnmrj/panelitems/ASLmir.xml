<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<template name="ASLmir" element="groups" type="acquisition" >
  <group size="210 230"
    style="Heading1"
    label="Multiple IR"
    vq="mir"
    bg="transparent"
    border="Etched"
    side="Top"
    justify="Left"
    tab="no"
    enable="no"
    reference="ASLmir"
    useref="no"
    subtype="Major"
    expanded="yes"
    >
    <label loc="25 35" size="175 20"
      style="PlainText"
      label="for Background Suppression"
      justify="Left"
      />
    <group loc="5 60" size="200 20"
      bg="transparent"
      border="None"
      tab="no"
      enable="no"
      useref="no"
      subtype="Untitled"
      >
      <entry loc="110 0" size="50 20"
        style="PlainText"
        vq="nmir mir"
        vc="nmir=$VALUE go('check')"
        set="$VALUE=nmir"
        show="if (mir&lt;&gt;'y') then $VALUE = -1 else $VALUE = 1 endif"
        digits="0"
        disable="Grayed out"
        />
      <label loc="0 0" size="90 20"
        style="PlainText"
        label="IR pulses"
        justify="Left"
        />
    </group>
    <group loc="5 80" size="200 20"
      bg="transparent"
      border="None"
      tab="no"
      enable="no"
      useref="no"
      subtype="Untitled"
      >
      <label loc="0 0" size="110 20"
        style="Label1"
        label="MIR suppression"
        justify="Left"
        />
      <textmessage loc="110 0" size="50 20"
        style="PlainText"
        label="0.2779"
        vq="mirtime"
        set="$VALUE=mirtime"
        digits="4"
        statpar="mirtime"
        />
      <label loc="160 0" size="25 20"
        style="PlainText"
        label="s"
        justify="Left"
        />
    </group>
    <group loc="5 100" size="200 20"
      bg="transparent"
      border="None"
      tab="no"
      enable="no"
      useref="no"
      subtype="Untitled"
      >
      <button loc="110 0" size="50 20"
        style="PlainText"
        label="Display"
        vq="mir"
        vc="aslset('displayirtimes')"
        show="if (mir&lt;&gt;'y') then $VALUE = -1 else $VALUE = 1 endif"
        bg="transparent"
        decor1="yes"
        />
      <label loc="0 0" size="80 20"
        style="PlainText"
        label="IR times"
        justify="Left"
        />
    </group>
    <group loc="5 120" size="200 20"
      bg="transparent"
      border="None"
      tab="no"
      enable="no"
      useref="no"
      subtype="Untitled"
      >
      <check loc="0 0" size="180 20"
        style="PlainText"
        label="Auto calculate IR times"
        vq="autoirtime mir"
        vc="autoirtime='y' go('check')"
        vc2="autoirtime='n'  go('check')"
        set="$VALUE=(autoirtime='y')"
        show="if (mir&lt;&gt;'y') then $VALUE = -1 else $VALUE = 1 endif"
        />
    </group>
    <group loc="5 140" size="200 20"
      bg="transparent"
      border="None"
      tab="no"
      enable="no"
      useref="no"
      subtype="Untitled"
      >
      <label loc="0 0" size="100 20"
        style="PlainText"
        label="T1 values"
        justify="Left"
        />
      <textmessage loc="110 0" size="50 20"
        style="PlainText"
        label="1"
        vq="mirt1"
        set="if (mirt1=0) then $VALUE=0 else $VALUE=size('mirt1') endif"
        digits="0"
        statpar="mirt1"
        />
    </group>
    <group loc="5 160" size="200 20"
      bg="transparent"
      border="None"
      tab="no"
      enable="no"
      useref="no"
      subtype="Untitled"
      >
      <button loc="160 0" size="40 20"
        style="PlainText"
        label="Reset"
        vq="mir autoirtime"
        vc="mirt1=0"
        show="if (mir='y' AND autoirtime='y') then $VALUE = 1 else $VALUE = -1 endif"
        bg="transparent"
        decor1="yes"
        />
      <label loc="0 0" size="65 20"
        style="PlainText"
        label="T1 values"
        justify="Left"
        />
      <button loc="110 0" size="50 20"
        style="PlainText"
        label="Display"
        vq="mir autoirtime"
        vc="aslset('displaymirt1')"
        show="if (mir='y' AND autoirtime='y') then $VALUE = 1 else $VALUE = -1 endif"
        bg="transparent"
        decor1="yes"
        />
    </group>
    <group loc="5 180" size="200 20"
      bg="transparent"
      border="None"
      tab="no"
      enable="no"
      useref="no"
      subtype="Untitled"
      >
      <label loc="0 0" size="100 20"
        style="PlainText"
        label="Add T1 value"
        justify="Left"
        />
      <entry loc="110 0" size="50 20"
        style="PlainText"
        vq="mirt1 mir autoirtime"
        vc="aslset('mirt1',$VALUE) go('check')"
        set="$VALUE=mirt1*1000.0"
        show="if (mir='y' AND autoirtime='y') then $VALUE = 1 else $VALUE = -1 endif"
        digits="0"
        disable="Grayed out"
        />
      <label loc="160 0" size="30 20"
        style="PlainText"
        label="ms"
        justify="Left"
        />
    </group>
    <group loc="5 200" size="200 20"
      bg="transparent"
      border="None"
      tab="no"
      enable="no"
      useref="no"
      subtype="Untitled"
      >
      <textmessage loc="110 0" size="50 20"
        style="PlainText"
        label="6.024"
        vq="irduration"
        set="$VALUE=irduration*1000.0"
        digits="3"
        statpar="irduration"
        />
      <label loc="0 0" size="100 20"
        style="Label1"
        label="IR duration"
        justify="Left"
        />
      <label loc="160 0" size="25 20"
        style="PlainText"
        label="ms"
        justify="Left"
        />
    </group>
    <check loc="5 20" size="190 20"
      style="PlainText"
      label="Multiple Inversion Recovery"
      vq="mir"
      vc="mir='y' go('check')"
      vc2="mir='n'  go('check')"
      set="$VALUE=(mir='y')"
      />
  </group>
</template>
