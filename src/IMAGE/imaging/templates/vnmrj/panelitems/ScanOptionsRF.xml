<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<template name="ScanOptionsRF" element="groups" type="acquisition" >
  <group size="200 70"
    style="Heading1"
    bg="transparent"
    border="None"
    side="Top"
    justify="Left"
    tab="no"
    enable="no"
    reference="ScanOptionsRF"
    useref="no"
    subtype="Untitled"
    expanded="yes"
    >
    <label loc="5 5" size="95 20"
      style="Children"
      label="SET RF POWER"
      justify="Center"
      />
    <check loc="120 5" size="55 20"
      style="PlainText"
      label="Auto"
      vq="sglpower"
      vc="sglpower = 0 go('check') "
      vc2="sglpower=1"
      set="$VALUE = (sglpower = 0)"
      tooltip="If selected, powers will be recalculated by VNMR"
      />
    <entry loc="120 45" size="45 20"
      style="PlainText"
      vq="tpwr2f"
      vc="tpwr2f = $VALUE"
      set="$VALUE = tpwr2f"
      digits="0"
      />
    <entry loc="120 25" size="45 20"
      style="PlainText"
      vq="tpwr4f"
      vc="tpwr4f = $VALUE"
      set="$VALUE = tpwr4f"
      digits="0"
      />
    <entry loc="90 45" size="25 20"
      style="PlainText"
      vq="tpwr2"
      vc="tpwr2 = $VALUE"
      set="$VALUE = tpwr2"
      digits="0"
      />
    <entry loc="90 25" size="25 20"
      style="PlainText"
      vq="tpwr4"
      vc="tpwr4 = $VALUE"
      set="$VALUE = tpwr4"
      digits="0"
      />
    <button loc="5 45" size="85 20"
      style="PlainText"
      label="180 deg"
      vc="pwr_opt('tpwr2','tpwr2f')"
      bg="transparent"
      decor1="no"
      tooltip="Set 180 (Array)"
      />
    <button loc="5 25" size="85 20"
      style="PlainText"
      label="90 deg"
      vc="pwr_opt('tpwr4','tpwr4f')"
      bg="transparent"
      decor1="no"
      tooltip="SET 90 (Array)"
      />
  </group>
</template>
