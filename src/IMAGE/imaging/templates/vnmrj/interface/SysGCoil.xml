<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<template name="SysGCoil" element="groups" type="system" >
  <group size="280 210"
    style="PlainText"
    bg="transparent"
    border="None"
    side="Top"
    justify="Left"
    tab="yes"
    enable="no"
    reference="SysGCoil"
    useref="no"
    subtype="Basic"
    expanded="yes"
    >
    <group loc="25 20" size="230 50"
      style="Heading3"
      label="System Gradient Coil"
      bg="Background"
      border="Etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      reference="SelectGradientCoil"
      useref="no"
      subtype="Basic"
      expanded="yes"
      >
      <textmessage loc="35 20" size="165 25"
        style="Heading3"
        vq="sysgcoil"
        set="$VALUE=sysgcoil"
        />
    </group>
    <group loc="25 80" size="230 130"
      style="PlainText"
      show="exists(systemdir+'/imaging/gradtables/','file','rw'):$e $SHOW=2*$e-1"
      bg="Background"
      border="Etched"
      side="Top"
      justify="Left"
      tab="no"
      enable="no"
      useref="no"
      subtype="Basic"
      >
      <button loc="32 10" size="170 30"
        style="Heading2"
        label="Add Gradient Table"
        vq="sysgcoil"
        vc="cp(systemdir+'/imaging/grad.tmplt',systemdir+'/imaging/gradtables/'+sysgcoil) setgcoil(sysgcoil)"
        show="exists(systemdir+'/imaging/gradtables/'+sysgcoil,'file'):$e $SHOW=1-2*$e"
        decor1="yes"
        />
      <button loc="32 50" size="170 30"
        style="Heading2"
        label="Edit Gradient Table"
        vq="sysgcoil"
        vc="edit_sysgcoil"
        show="exists(systemdir+'/imaging/gradtables/'+sysgcoil,'file'):$e $SHOW=2*$e-1"
        decor1="yes"
        />
      <button loc="32 90" size="170 30"
        style="Heading4"
        label="Delete Gradient Table"
        vq="sysgcoil"
        vc="rm(systemdir+'/imaging/gradtables/'+sysgcoil)"
        show="exists(systemdir+'/imaging/gradtables/'+sysgcoil,'file'):$e $SHOW=2*$e-1"
        decor1="yes"
        />
    </group>
  </group>
</template>
